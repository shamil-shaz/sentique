// UPDATED: Handle status change with itemIndex and variantSize
async function handleStatusChange(orderId, itemIndex, variantSize, newStatus) {
    // Extract variant size number
    const variantSizeNumber = variantSize.replace('ml', '');
    
    if (newStatus === 'Cancelled') {
        Swal.fire({
            icon: 'error',
            title: 'Invalid Action',
            text: 'Admins cannot set product status to Cancelled.',
            confirmButtonColor: '#3b82f6'
        });
        return;
    }

    const order = ordersDatabase.find(o => o.id === orderId);
    if (!order) return;

    const product = order.products[itemIndex];
    if (!product) return;

    const statusPriority = {
        'Placed': 1,
        'Confirmed': 2,
        'Processing': 3,
        'Shipped': 4,
        'OutForDelivery': 5,
        'Delivered': 6,
        'Cancelled': 7,
        'Return Request': 8,
        'Returned': 9
    };

    const currentPriority = statusPriority[product.status] || 0;
    const newPriority = statusPriority[newStatus] || 0;

    if (newPriority < currentPriority) {
        Swal.fire({
            icon: 'error',
            title: 'Invalid Action',
            text: `Cannot change status from "${product.status}" to "${newStatus}". Status can only move forward.`,
            confirmButtonColor: '#3b82f6'
        });
        // Reset select to current status
        const selectElement = event.target;
        selectElement.value = product.status;
        return;
    }

    try {
        // CRITICAL: Send itemIndex and variantSize instead of productId
        const response = await fetch(`/admin/orders/${orderId}/items/${itemIndex}/${variantSizeNumber}/status`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ status: newStatus })
        });

        const data = await response.json();
        
        if (data.success) {
            // Update local data
            const orderData = ordersDatabase.find(o => o.id === orderId);
            if (orderData && orderData.products[itemIndex]) {
                orderData.products[itemIndex].status = newStatus;
            }

            // Update overall order status
            const allStatuses = orderData.products.map(p => p.status);
            orderData.status = allStatuses.every(s => s === 'Delivered') ? 'Delivered' :
                allStatuses.every(s => s === 'Cancelled') ? 'Cancelled' :
                allStatuses.includes('OutForDelivery') ? 'OutForDelivery' :
                allStatuses.includes('Shipped') ? 'Shipped' :
                allStatuses.includes('Processing') ? 'Processing' :
                'Pending';

            filteredOrders = [...ordersDatabase];
            applyFiltersAndSort();
            
            Swal.fire({
                icon: 'success',
                title: 'Success',
                text: `${product.product} (${variantSize}) status updated to ${newStatus}`,
                confirmButtonColor: '#3b82f6',
                timer: 1500,
                showConfirmButton: false
            });
            
            viewOrder(orderId);
        } else {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: data.message || 'Failed to update status',
                confirmButtonColor: '#3b82f6'
            });
            // Reset select
            event.target.value = product.status;
        }
    } catch (error) {
        console.error('Error updating status:', error);
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'An error occurred. Please try again.',
            confirmButtonColor: '#3b82f6'
        });
        event.target.value = product.status;
    }
}

