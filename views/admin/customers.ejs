<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin - Users Management</title>

    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet">
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet">

    <style>
   
    :root {
      --primary: #6366f1;
      --primary-hover: #4f46e5;
      --surface: #ffffff;
      --bg: #f3f4f6;
      --text: #111827;
      --text-muted: #6b7280;
      --border: #e5e7eb;
      --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
      --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: 'Inter', sans-serif;
      background-color: var(--bg);
      color: var(--text);
      min-height: 100vh;
      overflow-x: hidden; /* Prevents horizontal scroll on the main window */
    }

    /* --- 2. LAYOUT STRUCTURE --- */
    /* This is the container for all your page content */
    .main-content-wrapper {
      margin-left: 195px; /* Width of your sidebar */
      padding: 80px;
      width: calc(100% - 195px);
      transition: all 0.3s ease;
      display: flex;
      flex-direction: column;
      gap: 24px; /* Consistent vertical spacing */
    }

    /* --- 3. PAGE HEADER --- */
    .page-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: 20px;
    }

    .page-title {
      font-size: 24px;
      font-weight: 700;
      color: var(--text);
      letter-spacing: -0.025em;
    }

    .stats-group {
      display: flex;
      gap: 12px;
      flex-wrap: wrap;
    }

    .stat-badge {
      background: var(--surface);
      border: 1px solid var(--border);
      padding: 8px 16px;
      border-radius: 999px; /* Pill shape */
      font-size: 13px;
      font-weight: 600;
      color: var(--text-muted);
      box-shadow: var(--shadow-sm);
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .stat-badge strong {
      color: var(--text);
      font-weight: 800;
      font-size: 14px;
    }

    /* --- 4. CONTROLS BAR (Search & Filters) --- */
    .controls-bar {
      background: var(--surface);
      padding: 16px;
      border-radius: 12px;
      border: 1px solid var(--border);
      box-shadow: var(--shadow-sm);
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 16px;
      flex-wrap: wrap;
    }

    .search-group {
      position: relative;
      flex: 1;
      min-width: 280px;
    }

    .search-icon {
      position: absolute;
      left: 14px;
      top: 50%;
      transform: translateY(-50%);
      color: var(--text-muted);
      pointer-events: none;
    }

    .search-input {
      width: 100%;
      height: 42px; /* Fixed height for alignment */
      padding: 0 40px;
      border: 1px solid var(--border);
      border-radius: 8px;
      font-size: 14px;
      background: #f9fafb;
      transition: all 0.2s;
    }

    .search-input:focus {
      outline: none;
      border-color: var(--primary);
      background: #fff;
      box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
    }

    .clear-search {
      position: absolute;
      right: 12px;
      top: 50%;
      transform: translateY(-50%);
      background: none;
      border: none;
      color: var(--text-muted);
      cursor: pointer;
      display: none;
    }
    .clear-search.active { display: block; }

    .filter-group {
      display: flex;
      gap: 8px;
    }

    .filter-btn {
      height: 42px; /* Matches search input height */
      padding: 0 20px;
      background: var(--surface);
      border: 1px solid var(--border);
      border-radius: 8px;
      color: var(--text-muted);
      font-weight: 500;
      font-size: 13px;
      cursor: pointer;
      transition: all 0.2s;
    }

    .filter-btn:hover {
      background: #f9fafb;
      color: var(--text);
      border-color: #d1d5db;
    }

    .filter-btn.active {
      background: var(--primary);
      color: white;
      border-color: var(--primary);
    }

    /* --- 5. DATA TABLE --- */
    .table-card {
      background: var(--surface);
      border: 1px solid var(--border);
      border-radius: 12px;
      box-shadow: var(--shadow-sm);
      overflow: hidden; /* Clips rounded corners */
    }

    .table-responsive {
      width: 100%;
      overflow-x: auto;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      white-space: nowrap; /* Prevents wrapping */
    }

    thead {
      background: #f9fafb;
      border-bottom: 1px solid var(--border);
    }

    th {
      text-align: left;
      padding: 14px 24px;
      font-size: 11px;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      font-weight: 600;
      color: var(--text-muted);
    }

    td {
      padding: 16px 24px;
      font-size: 14px;
      color: var(--text);
      border-bottom: 1px solid var(--border);
      vertical-align: middle; /* Critical for alignment */
    }

    tr:last-child td { border-bottom: none; }
    tbody tr:hover { background-color: #f9fafb; }

    /* User Profile Alignment */
    .user-flex {
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .avatar-circle {
      width: 36px;
      height: 36px;
      border-radius: 50%;
      background: #e0e7ff;
      color: var(--primary);
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 700;
      font-size: 14px;
      flex-shrink: 0; /* Prevents squashing */
    }

    .user-meta {
      display: flex;
      flex-direction: column;
      line-height: 1.3;
    }

    .user-meta .name { font-weight: 600; }
    .user-meta .email { font-size: 12px; color: var(--text-muted); }

    /* Status Pills */
    .status-pill {
      display: inline-flex;
      align-items: center;
      padding: 4px 10px;
      border-radius: 20px;
      font-size: 12px;
      font-weight: 600;
    }
    .status-active { background: #dcfce7; color: #166534; }
    .status-blocked { background: #fee2e2; color: #991b1b; }

    /* Action Buttons */
    .btn-action {
      padding: 6px 12px;
      border-radius: 6px;
      font-size: 12px;
      font-weight: 600;
      border: none;
      cursor: pointer;
      transition: opacity 0.2s;
    }
    .btn-block-user { background: #fee2e2; color: #991b1b; }
    .btn-unblock-user { background: #dcfce7; color: #166534; }
    .btn-action:hover { opacity: 0.8; }

    /* --- 6. PAGINATION & MESSAGES --- */
    .pagination-wrapper {
      display: flex;
      justify-content: center;
      padding-top: 10px;
    }
    
    .page-link {
      color: var(--text-muted);
      border: none;
      margin: 0 2px;
      border-radius: 6px;
    }
    .page-item.active .page-link {
      background-color: var(--primary);
      color: white;
    }

    .no-results {
      padding: 40px;
      text-align: center;
      color: var(--text-muted);
      display: none;
    }

    /* --- 7. RESPONSIVE MEDIA QUERIES --- */
    
    /* Laptop & Tablet */
    @media (max-width: 1024px) {
      .main-content-wrapper {
        margin-left: 0;
        width: 100%;
        padding: 80px 24px 24px 24px; /* Add top padding for header */
      }
    }

    /* Mobile */
    @media (max-width: 768px) {
      .page-header {
        flex-direction: column;
        align-items: flex-start;
      }
      
      .controls-bar {
        flex-direction: column;
        align-items: stretch; /* Full width children */
        padding: 12px;
      }

      .search-group {
        width: 100%;
        min-width: auto;
      }

      .filter-group {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr; /* 3 Equal buttons */
        width: 100%;
      }

      .filter-btn {
        padding: 0 10px;
        text-align: center;
        justify-content: center;
        font-size: 12px;
      }

      th, td {
        padding: 12px 16px;
      }
      
      /* Make table font slightly smaller on mobile */
      .user-meta .name { font-size: 13px; }
      .user-meta .email { font-size: 11px; }
    }
  </style>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  </head>

  <%- include("../partials/admin/header.ejs") %>

  <body>

    <main class="main-content-wrapper">

      <header class="page-header">
        <h1 class="page-title">Users Management</h1>
        <div class="stats-group">
          <div class="stat-badge">
            Total: <strong id="totalUsers"><%= typeof totalUsers !== 'undefined'
              ? totalUsers : users.length %></strong>
          </div>
          <div class="stat-badge">
            Active: <strong style="color: #166534;"><%= typeof activeUsersCount
              !== 'undefined' ? activeUsersCount : users.filter(u =>
              !u.isBlocked).length %></strong>
          </div>
          <div class="stat-badge">
            Blocked: <strong style="color: #991b1b;"><%= typeof
              blockedUsersCount !== 'undefined' ? blockedUsersCount :
              users.filter(u => u.isBlocked).length %></strong>
          </div>
        </div>
      </header>

      <section class="controls-bar">
        <div class="search-group">
          <span class="search-icon">üîç</span>
          <input
            type="text"
            class="search-input"
            id="userSearch"
            placeholder="Search by name, email or phone..."
            autocomplete="off">
          <button class="clear-search" id="clearSearch">‚úï</button>
        </div>

        <div class="filter-group">
          <button
            class="filter-btn <%= (!filterStatus || filterStatus === 'all') ? 'active' : '' %>"
            data-filter="all">All</button>
          <button
            class="filter-btn <%= filterStatus === 'active' ? 'active' : '' %>"
            data-filter="active">Active</button>
          <button
            class="filter-btn <%= filterStatus === 'blocked' ? 'active' : '' %>"
            data-filter="blocked">Blocked</button>
        </div>
      </section>

      <section class="table-card">
        <div class="table-responsive">
          <table>
            <thead>
              <tr>
                <th>User Info</th>
                <th>Phone Number</th>
                <th>Status</th>
                <th style="text-align: right;">Action</th>
              </tr>
            </thead>
            <tbody id="userTableBody">
              <% users.forEach((user, index) => { %>
              <tr class="user-row"
                data-name="<%= user.name.toLowerCase() %>"
                data-email="<%= user.email.toLowerCase() %>"
                data-phone="<%= user.phone %>"
                data-status="<%= user.isBlocked ? 'blocked' : 'active' %>">

                <td>
                  <div class="user-flex">
                    <div class="avatar-circle" data-name="<%= user.name %>">
                      <%= user.name.charAt(0).toUpperCase() %>
                    </div>
                    <div class="user-meta">
                      <span class="name"><%= user.name %></span>
                      <span class="email"><%= user.email %></span>
                    </div>
                  </div>
                </td>

                <td style="font-family: monospace; color: var(--text-muted);">
                  <%= user.phone %>
                </td>

                <td>
                  <% if (!user.isBlocked) { %>
                  <span class="status-pill status-active">Active</span>
                  <% } else { %>
                  <span class="status-pill status-blocked">Blocked</span>
                  <% } %>
                </td>

                <td style="text-align: right;">
                  <% if (!user.isBlocked) { %>
                  <button class="btn-action btn-block-user swal-btn"
                    data-id="<%= user._id %>" data-action="block">
                    Block
                  </button>
                  <% } else { %>
                  <button class="btn-action btn-unblock-user swal-btn"
                    data-id="<%= user._id %>" data-action="unblock">
                    Unblock
                  </button>
                  <% } %>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>

        <div id="noResults" class="no-results">
          <p>No users found matching your search.</p>
        </div>
      </section>

      <div class="pagination-wrapper" id="paginationContainer">
        <nav>
          <ul class="pagination">
            <% for (let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
              <a class="page-link"
                href="?page=<%= i %><%= search ? '&search=' + search : '' %><%= filterStatus && filterStatus !== 'all' ? '&filter=' + filterStatus : '' %>"><%=
                i %></a>
            </li>
            <% } %>
          </ul>
        </nav>
      </div>

      <% if (successMessage && successMessage.length > 0) { %>
      <div class="alert alert-success" style="margin-top: 20px;">
        <%= successMessage %>
      </div>
      <% } %>
      <% if (errorMessage && errorMessage.length > 0) { %>
      <div class="alert alert-danger" style="margin-top: 20px;">
        <%= errorMessage %>
      </div>
      <% } %>

    </main>

    <script>
    // --- 1. Dynamic Avatar Colors ---
    document.querySelectorAll('.avatar-circle').forEach(av => {
      const name = av.getAttribute('data-name') || '';
      const colors = ['#e0e7ff', '#dcfce7', '#fee2e2', '#fef3c7', '#f3e8ff'];
      const textColors = ['#4338ca', '#15803d', '#b91c1c', '#b45309', '#7e22ce'];
      const idx = name.length % colors.length;
      av.style.backgroundColor = colors[idx];
      av.style.color = textColors[idx];
    });

    // --- 2. Search & Filter Logic ---
    const searchInput = document.getElementById('userSearch');
    const clearBtn = document.getElementById('clearSearch');
    const userRows = document.querySelectorAll('.user-row');
    const noResults = document.getElementById('noResults');
    const tableBody = document.getElementById('userTableBody');
    const pagination = document.getElementById('paginationContainer');
    
    let currentFilter = '<%= filterStatus || 'all' %>';

    function performSearch() {
      const query = searchInput.value.toLowerCase().trim();
      let visible = 0;

      clearBtn.classList.toggle('active', query.length > 0);

      userRows.forEach(row => {
        const name = row.dataset.name;
        const email = row.dataset.email;
        const phone = row.dataset.phone;
        const status = row.dataset.status;

        const matchesSearch = name.includes(query) || email.includes(query) || phone.includes(query);
        const matchesFilter = currentFilter === 'all' || status === currentFilter;

        if (matchesSearch && matchesFilter) {
          row.style.display = '';
          visible++;
        } else {
          row.style.display = 'none';
        }
      });

      if (visible === 0) {
        tableBody.style.display = 'none';
        noResults.style.display = 'block';
      } else {
        tableBody.style.display = 'table-row-group';
        noResults.style.display = 'none';
      }

      // Hide Pagination if searching locally
      pagination.style.display = (query.length > 0) ? 'none' : 'flex';
    }

    searchInput.addEventListener('input', performSearch);
    clearBtn.addEventListener('click', () => {
      searchInput.value = '';
      performSearch();
    });

    // Filter Buttons (Server Reload)
    document.querySelectorAll('.filter-btn').forEach(btn => {
      btn.addEventListener('click', function() {
        const filter = this.dataset.filter;
        const url = new URL(window.location.href);
        if (filter === 'all') url.searchParams.delete('filter');
        else url.searchParams.set('filter', filter);
        url.searchParams.set('page', '1');
        window.location.href = url.toString();
      });
    });

    // --- 3. Block/Unblock Actions ---
    document.querySelectorAll('.swal-btn').forEach(btn => {
      btn.addEventListener('click', function () {
        const id = this.dataset.id;
        const action = this.dataset.action;
        const isBlock = action === 'block';

        Swal.fire({
          title: isBlock ? 'Block User?' : 'Unblock User?',
          text: isBlock ? "They will lose access immediately." : "Access will be restored.",
          icon: isBlock ? 'warning' : 'info',
          showCancelButton: true,
          confirmButtonColor: isBlock ? '#ef4444' : '#10b981',
          cancelButtonColor: '#9ca3af',
          confirmButtonText: isBlock ? 'Yes, Block' : 'Yes, Unblock'
        }).then((res) => {
          if (res.isConfirmed) {
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = isBlock ? '/admin/blockCustomer' : '/admin/unblockCustomer';
            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = 'id';
            input.value = id;
            form.appendChild(input);
            document.body.appendChild(form);
            form.submit();
          }
        });
      });
    });
  </script>
  </body>
</html>