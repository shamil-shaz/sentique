<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
  let salesChart = null;

  // âœ… Function to safely render chart
  function renderChart(labels, data, label = "Sales (â‚¹)") {
    const container = document.querySelector(".chart-container");
    let oldCanvas = document.getElementById("salesChart");

    // ğŸ”¥ Completely remove and recreate the canvas element to prevent reuse errors
    if (oldCanvas) oldCanvas.remove();
    const newCanvas = document.createElement("canvas");
    newCanvas.id = "salesChart";
    container.appendChild(newCanvas);

    const ctx = newCanvas.getContext("2d");

    // âœ… Create fresh chart
    salesChart = new Chart(ctx, {
      type: "line",
      data: {
        labels: labels.length > 0 ? labels : ["No data"],
        datasets: [
          {
            label,
            data: data.length > 0 ? data : [0],
            borderColor: "#667eea",
            backgroundColor: "rgba(102, 126, 234, 0.1)",
            borderWidth: 3,
            fill: true,
            tension: 0.4,
            pointRadius: 5,
            pointBackgroundColor: "#667eea",
            pointBorderColor: "#fff",
            pointBorderWidth: 2,
            pointHoverRadius: 8,
            pointHoverBackgroundColor: "#764ba2"
          }
        ]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        interaction: { mode: "index", intersect: false },
        plugins: {
          legend: {
            display: true,
            labels: {
              font: { size: 12, weight: "bold" },
              color: "#7a8293",
              usePointStyle: true
            }
          },
          tooltip: {
            backgroundColor: "rgba(0, 0, 0, 0.9)",
            padding: 12,
            titleFont: { size: 14, weight: "bold" },
            bodyFont: { size: 13 },
            borderColor: "#667eea",
            borderWidth: 1,
            cornerRadius: 8,
            displayColors: false,
            callbacks: {
              label: ctx =>
                "â‚¹" +
                ctx.parsed.y.toLocaleString("en-IN", {
                  maximumFractionDigits: 2
                })
            }
          }
        },
        scales: {
          y: {
            beginAtZero: true,
            grid: { color: "rgba(0, 0, 0, 0.05)", drawBorder: false },
            ticks: {
              callback: value => "â‚¹" + value.toLocaleString("en-IN"),
              font: { size: 12, weight: "600" },
              color: "#7a8293"
            }
          },
          x: {
            grid: { display: false, drawBorder: false },
            ticks: {
              font: { size: 11, weight: "600" },
              color: "#7a8293",
              maxRotation: 45,
              minRotation: 0
            }
          }
        }
      }
    });
  }

  // âœ… Initialize chart on page load
  document.addEventListener("DOMContentLoaded", function () {
    const chartLabels = <%- JSON.stringify(chartLabels) %>;
    const chartData = <%- JSON.stringify(chartData) %>;
    renderChart(chartLabels, chartData, "Monthly Sales (â‚¹)");

    const chartPeriodEl = document.getElementById("chartPeriod");
    if (chartPeriodEl) chartPeriodEl.textContent = "Monthly";
  });

  // âœ… Update chart dynamically (no reload)
  async function updateChart(period, el) {
    try {
      // Toggle active buttons
      document
        .querySelectorAll(".chart-filter-btn")
        .forEach(btn => btn.classList.remove("active"));
      el.classList.add("active");

      // Show loading
      Swal.fire({
        title: "Loading Chart...",
        html: "Fetching latest sales data...",
        allowOutsideClick: false,
        didOpen: () => Swal.showLoading()
      });

      // Fetch new data
      const response = await fetch(`/admin/dashboard-chart-data?period=${period}`);
      const data = await response.json();
      Swal.close();

      if (!data.success) {
        Swal.fire("Error", "Failed to load chart data", "error");
        return;
      }

      // âœ… Recreate and re-render chart safely
      renderChart(
        data.labels,
        data.sales,
        `Sales (${period.charAt(0).toUpperCase() + period.slice(1)})`
      );

      const chartPeriodEl = document.getElementById("chartPeriod");
      if (chartPeriodEl)
        chartPeriodEl.textContent =
          period.charAt(0).toUpperCase() + period.slice(1);
    } catch (err) {
      Swal.close();
      console.error("Chart update error:", err);
      Swal.fire("Error", "Something went wrong while updating chart", "error");
    }
  }
</script>



