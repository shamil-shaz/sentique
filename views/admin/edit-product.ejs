  href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css"
  rel="stylesheet" />
<link
  href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
  rel="stylesheet">
<link rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<style>
* { margin: 0; padding: 0; box-sizing: border-box; }

body { 
  font-family: 'Inter', sans-serif; 
  background: linear-gradient(135deg, #d0e6f7 0%, #d5f9ef 100%);
  color: #2d3748;
  line-height: 1.6;
  overflow-x: hidden;
  min-height: 100vh;
}

/* Main Content */
.main-content { 
  margin-left: 240px; 
  margin-top: 60px; 
  padding: 30px 20px 50px; 
  min-height: 100vh; 
  transition: margin-left 0.3s ease;
}

@media (max-width: 991px) {
  .main-content {
    margin-left: 0;
    padding: 20px 15px 40px;
  }
}

.page-header {
  max-width: 1400px;
  margin: 0 auto 30px;
  text-align: center;
}

.page-header h2 {
  font-size: 36px;
  font-weight: 800;
  color: #060606;
  margin-bottom: 8px;
  text-shadow: 0 2px 10px rgba(0,0,0,0.2);
}

.page-header p {
  color: rgba(29, 57, 57, 0.9);
  font-size: 16px;
  font-weight: 500;
}

.alert-success, .alert-error { 
  max-width: 1400px;
  margin: 0 auto 20px;
  padding: 16px 20px; 
  border-radius: 12px;
  display: flex;
  align-items: center;
  gap: 12px;
  font-size: 14px;
  font-weight: 600;
  box-shadow: 0 4px 20px rgba(0,0,0,0.15);
  backdrop-filter: blur(10px);
}

.alert-success {
  background: rgba(72, 187, 120, 0.95); 
  color: white;
  border: 2px solid rgba(255,255,255,0.3);
}

.alert-error {
  background: rgba(239, 68, 68, 0.95);
  color: white;
  border: 2px solid rgba(255,255,255,0.3);
}

.alert-success svg, .alert-error svg {
  width: 22px;
  height: 22px;
  flex-shrink: 0;
}

.container { 
  max-width: 1400px; 
  background: rgba(255, 255, 255, 0.98); 
  padding: 0;
  border-radius: 24px; 
  box-shadow: 0 20px 60px rgba(0,0,0,0.3);
  margin: auto; 
  overflow: hidden;
  backdrop-filter: blur(10px);
}

/* Form Layout */
.form-wrapper { 
  display: grid;
  grid-template-columns: 420px 1fr;
  gap: 0;
  min-height: 800px;
}

@media (max-width: 1200px) {
  .form-wrapper {
    grid-template-columns: 380px 1fr;
  }
}

@media (max-width: 1024px) {
  .form-wrapper {
    grid-template-columns: 1fr;
    min-height: auto;
  }
}

.left { 
  background: linear-gradient(180deg, #f8fafc 0%, #e8ecf1 100%);
  padding: 40px 30px;
  border-right: 1px solid #e2e8f0;
  display: flex;
  flex-direction: column;
}

.right { 
  padding: 40px;
  overflow-y: auto;
  max-height: 90vh;
}

@media (max-width: 1024px) {
  .left {
    border-right: none;
    border-bottom: 1px solid #e2e8f0;
    padding: 30px;
  }
  
  .right {
    padding: 30px;
    max-height: none;
    overflow-y: visible;
  }
}

@media (max-width: 576px) {
  .left, .right {
    padding: 20px;
  }
}

.section-title {
  font-size: 18px;
  font-weight: 700;
  color: #1a202c;
  margin-bottom: 24px;
  display: flex;
  align-items: center;
  gap: 10px;
}

.section-title i {
  color: #667eea;
  font-size: 20px;
}

.section-title::before {
  content: '';
  width: 4px;
  height: 24px;
  background: linear-gradient(180deg, #667eea, #764ba2);
  border-radius: 4px;
}

/* Image Grid - Responsive */
.images-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16px;
  margin-bottom: 30px;
}

@media (max-width: 1024px) {
  .images-grid {
    grid-template-columns: repeat(4, 1fr);
  }
}

@media (max-width: 768px) {
  .images-grid {
    grid-template-columns: 1fr 1fr;
  }
}

@media (max-width: 480px) {
  .images-grid {
    grid-template-columns: 1fr;
  }
}

.image-box { 
  background: white;
  border: 2px dashed #cbd5e0;
  border-radius: 16px;
  padding: 12px;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.image-box::before {
  content: '';
  position: absolute;
  top: -2px;
  left: -2px;
  right: -2px;
  bottom: -2px;
  background: linear-gradient(135deg, #2b4e6c, #1b4e52);
  border-radius: 16px;
  opacity: 0;
  transition: opacity 0.3s ease;
  z-index: -1;
}

.image-box:hover::before {
  opacity: 0.1;
}

.image-box:hover {
  border-color: #24404a;
  transform: translateY(-4px);
  box-shadow: 0 8px 25px rgba(102, 126, 234, 0.25);
}

.image-box.has-image {
  border-style: solid;
  border-color: #48bb78;
  background: linear-gradient(135deg, rgba(72, 187, 120, 0.05), rgba(56, 161, 105, 0.05));
}

.image-preview-wrapper {
  aspect-ratio: 1;
  border-radius: 12px;
  overflow: hidden;
  background: linear-gradient(135deg, #f7fafc, #edf2f7);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12px;
  position: relative;
}

.image-preview-wrapper img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.image-placeholder {
  text-align: center;
  color: #a0aec0;
  font-size: 13px;
  font-weight: 600;
}

.image-placeholder svg {
  width: 48px;
  height: 48px;
  margin-bottom: 10px;
  opacity: 0.4;
}

.product-image-input { display: none; }

.upload-label {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  padding: 10px 14px;
  background: linear-gradient(135deg, #254656, #133042);
  color: white;
  text-align: center;
  border-radius: 8px;
  cursor: pointer;
  font-size: 13px;
  font-weight: 700;
  transition: all 0.3s;
  margin-bottom: 10px;
  box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
}

.upload-label:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
}

.upload-label i {
  font-size: 14px;
}

.image-buttons { 
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 8px;
}

.save-btn, .cancel-btn, .delete-btn { 
  padding: 9px 10px; 
  font-size: 12px; 
  border-radius: 8px; 
  border: none; 
  cursor: pointer; 
  font-weight: 700;
  transition: all 0.2s;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6px;
}

.save-btn { 
  background: linear-gradient(135deg, #48bb78, #38a169);
  color: white;
  box-shadow: 0 4px 12px rgba(72, 187, 120, 0.3);
}
.save-btn:hover { 
  transform: translateY(-2px);
  box-shadow: 0 6px 16px rgba(72, 187, 120, 0.4);
}

.cancel-btn { 
  background: linear-gradient(135deg, #fc8181, #f56565);
  color: white;
  box-shadow: 0 4px 12px rgba(252, 129, 129, 0.3);
}
.cancel-btn:hover { 
  transform: translateY(-2px);
  box-shadow: 0 6px 16px rgba(252, 129, 129, 0.4);
}

.delete-btn {
  background: linear-gradient(135deg, #fc8181, #f56565);
  color: white;
  box-shadow: 0 4px 12px rgba(252, 129, 129, 0.3);
}
.delete-btn:hover { 
  transform: translateY(-2px);
  box-shadow: 0 6px 16px rgba(252, 129, 129, 0.4);
}

/* Image Tips Card */
.image-tips {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
  border: 2px solid rgba(102, 126, 234, 0.2);
  border-radius: 16px;
  padding: 20px;
  margin-top: auto;
}

.image-tips h4 {
  font-size: 15px;
  font-weight: 700;
  color: #1a202c;
  margin-bottom: 12px;
  display: flex;
  align-items: center;
  gap: 8px;
}

.image-tips h4 i {
  color: #667eea;
}

.image-tips ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

.image-tips li {
  font-size: 13px;
  color: #4a5568;
  margin-bottom: 8px;
  padding-left: 24px;
  position: relative;
  line-height: 1.5;
}

.image-tips li::before {
  content: '✓';
  position: absolute;
  left: 0;
  color: #48bb78;
  font-weight: 700;
  font-size: 14px;
}

.image-tips li:last-child {
  margin-bottom: 0;
}

@media (max-width: 1024px) {
  .image-tips {
    margin-top: 20px;
  }
}

.error-message { 
  color: #f56565; 
  font-size: 12px; 
  font-weight: 600;
  margin-top: 6px;
  display: none;
}

.form-section { 
  margin-bottom: 36px;
  padding-bottom: 36px;
  border-bottom: 2px solid #f1f5f9;
}

.form-section:last-of-type { 
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.form-group { margin-bottom: 24px; }

label { 
  font-weight: 700;
  font-size: 14px;
  color: #2d3748;
  margin-bottom: 10px; 
  display: flex;
  align-items: center;
  gap: 8px;
}

label i {
  color: #667eea;
  font-size: 16px;
}

label .required { 
  color: #f56565; 
  margin-left: 2px;
  font-size: 16px;
}

input, textarea, select { 
  width: 100%; 
  padding: 14px 18px; 
  border: 2px solid #e2e8f0; 
  border-radius: 10px; 
  font-size: 14px;
  font-family: 'Inter', sans-serif;
  transition: all 0.3s;
  background: white;
  font-weight: 500;
}

input:focus, textarea:focus, select:focus {
  outline: none;
  border-color: #667eea;
  box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
  transform: translateY(-1px);
}

textarea { 
  resize: vertical; 
  min-height: 100px;
  line-height: 1.6;
}

/* Variants Display */
.variants-display {
  background: linear-gradient(135deg, #f8fafc, #edf2f7);
  border-radius: 16px;
  padding: 24px;
  margin-bottom: 20px;
  min-height: 180px;
  border: 2px solid #e2e8f0;
  max-height: 500px;
  overflow-y: auto;
}

.variant-empty-state {
  text-align: center;
  padding: 50px 20px;
  color: #94a3b8;
}

.variant-empty-state i {
  font-size: 56px;
  margin-bottom: 16px;
  opacity: 0.4;
  background: linear-gradient(135deg, #667eea, #764ba2);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.variant-empty-state p {
  font-size: 15px;
  font-weight: 600;
}

.variant-card {
  background: white;
  border: 2px solid #e2e8f0;
  border-radius: 14px;
  padding: 20px;
  margin-bottom: 14px;
  transition: all 0.3s ease;
  position: relative;
}

.variant-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(90deg, #667eea, #764ba2);
  border-radius: 14px 14px 0 0;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.variant-card:hover::before {
  opacity: 1;
}

.variant-card:hover {
  border-color: #667eea;
  box-shadow: 0 8px 25px rgba(102, 126, 234, 0.15);
  transform: translateY(-2px);
}

.variant-card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
  flex-wrap: wrap;
  gap: 12px;
}

.variant-size-badge {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  padding: 10px 20px;
  border-radius: 10px;
  font-weight: 800;
  font-size: 17px;
  display: inline-flex;
  align-items: center;
  gap: 8px;
  box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
}

.variant-actions { 
  display: flex; 
  gap: 10px;
}

.btn-variant-edit, .btn-variant-delete {
  padding: 8px 16px;
  border-radius: 8px;
  border: none;
  font-size: 13px;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.2s ease;
  display: inline-flex;
  align-items: center;
  gap: 6px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.btn-variant-edit { 
  background: linear-gradient(135deg, #8b5cf6, #7c3aed);
  color: white;
}
.btn-variant-edit:hover { 
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(139, 92, 246, 0.4);
}

.btn-variant-delete { 
  background: linear-gradient(135deg, #ef4444, #dc2626);
  color: white;
}
.btn-variant-delete:hover { 
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(239, 68, 68, 0.4);
}

.variant-details {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
  gap: 16px;
}

.variant-detail-item { 
  display: flex; 
  flex-direction: column; 
  gap: 6px;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.05), rgba(118, 75, 162, 0.05));
  padding: 12px;
  border-radius: 10px;
}

.variant-detail-label {
  font-size: 11px;
  text-transform: uppercase;
  color: #64748b;
  font-weight: 700;
  letter-spacing: 0.5px;
  display: flex;
  align-items: center;
  gap: 6px;
}

.variant-detail-value {
  font-size: 16px;
  font-weight: 800;
  color: #0f172a;
}

.add-variant-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  width: 100%;
  padding: 16px;
  background: white;
  color: #667eea;
  border: 2px dashed #667eea;
  border-radius: 12px;
  cursor: pointer;
  font-weight: 700;
  font-size: 15px;
  transition: all 0.3s;
  box-shadow: 0 2px 8px rgba(0,0,0,0.05);
}

.add-variant-btn:hover { 
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
  border-color: #764ba2;
  transform: translateY(-2px);
  box-shadow: 0 4px 16px rgba(102, 126, 234, 0.2);
}

.add-variant-btn i {
  font-size: 18px;
}

/* Buttons */
.button-row { 
  display: flex; 
  gap: 16px; 
  margin-top: 40px;
  padding-top: 40px;
  border-top: 2px solid #f1f5f9;
}

@media (max-width: 576px) {
  .button-row {
    flex-direction: column;
  }
}

.btn-green, .btn-red { 
  padding: 16px 36px; 
  border: none; 
  border-radius: 12px; 
  font-size: 16px; 
  font-weight: 700; 
  cursor: pointer; 
  flex: 1;
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.btn-green { 
  background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
  color: white; 
  box-shadow: 0 6px 20px rgba(72, 187, 120, 0.4);
}
.btn-green:hover { 
  transform: translateY(-3px);
  box-shadow: 0 8px 30px rgba(72, 187, 120, 0.5);
}

.btn-red { 
  background: white;
  color: #718096;
  border: 2px solid #e2e8f0;
  box-shadow: 0 2px 8px rgba(0,0,0,0.05);
}
.btn-red:hover { 
  background: #f7fafc;
  border-color: #cbd5e0;
  transform: translateY(-2px);
}

.btn-green i, .btn-red i {
  font-size: 18px;
}

/* Cropper Modal */
#cropper-modal { 
  display: none; 
  position: fixed; 
  top: 0; 
  left: 0; 
  width: 100%; 
  height: 100%; 
  background: rgba(0, 0, 0, 0.9);
  z-index: 9999; 
  justify-content: center; 
  align-items: center;
  backdrop-filter: blur(8px);
  padding: 20px;
}

#cropper-modal .modal-content { 
  background: #fff; 
  padding: 40px; 
  border-radius: 24px; 
  width: 100%;
  max-width: 900px;
  max-height: 90vh; 
  overflow-y: auto;
  box-shadow: 0 25px 80px rgba(0, 0, 0, 0.5);
}

#cropper-modal .modal-content h3 {
  font-size: 24px;
  font-weight: 800;
  margin-bottom: 24px;
  color: #1a202c;
  text-align: center;
}

#cropper-modal .modal-content img { 
  max-width: 100%; 
  max-height: 60vh;
  display: block;
  margin: 0 auto 24px auto;
  border-radius: 12px;
}

.modal-buttons {
  display: flex;
  gap: 16px;
  margin-top: 24px;
}

@media (max-width: 576px) {
  .modal-buttons { flex-direction: column; }
  #cropper-modal .modal-content {
    padding: 24px;
  }
}

.modal-buttons button {
  flex: 1;
  padding: 14px 28px;
  font-size: 15px;
  font-weight: 700;
  border-radius: 10px;
  border: none;
  cursor: pointer;
  transition: all 0.3s;
}

/* Variant Modal */
.variant-modal {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  backdrop-filter: blur(8px);
  z-index: 1000;
  animation: fadeIn 0.3s ease;
  justify-content: center;
  align-items: center;
}

@keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }

.variant-modal-content {
  background: white;
  border-radius: 24px;
  width: 90%;
  max-width: 600px;
  box-shadow: 0 25px 80px rgba(0, 0, 0, 0.4);
  animation: slideUp 0.4s ease;
  display: flex;
  flex-direction: column;
  max-height: 90vh;
}

@keyframes slideUp {
  from { opacity: 0; transform: translateY(40px); }
  to { opacity: 1; transform: translateY(0); }
}

.variant-modal-header {
  padding: 24px 28px;
  border-bottom: 2px solid #f1f5f9;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
  border-radius: 24px 24px 0 0;
  flex-shrink: 0;
}

.variant-modal-header h3 {
  margin: 0;
  font-size: 22px;
  font-weight: 800;
  color: #0f172a;
  display: flex;
  align-items: center;
  gap: 12px;
}

.variant-modal-header h3 i {
  color: #667eea;
  font-size: 24px;
}

.modal-close-btn {
  background: none;
  border: none;
  font-size: 24px;
  color: #64748b;
  cursor: pointer;
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10px;
  transition: all 0.2s ease;
}

.modal-close-btn:hover { 
  background: #fee2e2;
  color: #dc2626;
  transform: rotate(90deg);
}

.variant-modal-body {
  padding: 28px;
  overflow-y: auto;
  flex-grow: 1;
}

.modal-form-group { margin-bottom: 24px; }

.modal-form-group label {
  display: flex;
  font-weight: 700;
  font-size: 14px;
  color: #0f172a;
  margin-bottom: 10px;
  align-items: center;
  gap: 8px;
}

.modal-form-group label i { 
  color: #667eea;
  font-size: 16px;
}

.modal-form-group input {
  width: 100%;
  padding: 14px 16px;
  border: 2px solid #e2e8f0;
  border-radius: 10px;
  font-size: 14px;
  font-weight: 500;
  transition: all 0.3s ease;
  font-family: inherit;
}

.modal-form-group input:focus {
  outline: none;
  border-color: #667eea;
  box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
  transform: translateY(-1px);
}

.input-hint {
  display: block;
  font-size: 12px;
  color: #64748b;
  margin-top: 8px;
  font-style: italic;
  font-weight: 500;
}

.variant-modal-footer {
  padding: 24px 28px;
  border-top: 2px solid #f1f5f9;
  display: flex;
  gap: 14px;
  justify-content: flex-end;
  background: #f8fafc;
  border-radius: 0 0 24px 24px;
  flex-shrink: 0;
}

@media (max-width: 576px) {
  .variant-modal-footer {
    flex-direction: column;
  }
  .btn-modal-cancel, .btn-modal-save {
    width: 100%;
    justify-content: center;
  }
}

.btn-modal-cancel, .btn-modal-save {
  padding: 14px 28px;
  border-radius: 10px;
  border: none;
  font-weight: 700;
  font-size: 15px;
  cursor: pointer;
  transition: all 0.3s ease;
  display: inline-flex;
  align-items: center;
  gap: 10px;
}

.btn-modal-cancel { 
  background: #e2e8f0;
  color: #475569;
}
.btn-modal-cancel:hover { 
