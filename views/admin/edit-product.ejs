<script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>
<script>
// Image Cropper Variables
let cropper, currentImageIndex = null;
const modal = document.getElementById('cropper-modal');
const cropperImage = document.getElementById('cropper-image');
const allowedFormats = ['image/jpeg', 'image/png', 'image/jpg'];

// Variant Variables
let variants = [];
let currentEditingVariantIndex = null;
const deletedIndexes = new Set();

function initializeVariants() {
  variants = [];
  <% if (product.variants && product.variants.length > 0) { %>
    <% product.variants.forEach(v => { %>
      variants.push({
        size: <%= v.size %>,
        stock: <%= v.stock %>,
        regularPrice: <%= v.regularPrice %>,
        salePrice: <%= v.salePrice %>
      });
    <% }) %>
  <% } %>
  renderVariants();
}

function updateDeletedHidden() {
  document.getElementById('deletedImages').value = Array.from(deletedIndexes).join(',');
}

function markDeleteExisting(slot) {
  const preview = document.getElementById(`preview-image-${slot}`);
  const wrapper = document.getElementById(`wrapper-${slot}`);
  deletedIndexes.add(Number(slot));
  updateDeletedHidden();
  preview.src = '/photos/default.jpg';
  preview.removeAttribute('data-original-name');
  preview.removeAttribute('data-original-index');
  wrapper.classList.remove('has-content');
  document.getElementById(`image-box-${slot}`).classList.remove('has-image');
  document.querySelectorAll(`input[name="productImagesBase64[]"][data-slot="${slot}"]`).forEach(el => el.remove());
}

function resetImage(slot) {
  const preview = document.getElementById(`preview-image-${slot}`);
  const wrapper = document.getElementById(`wrapper-${slot}`);
  const input = document.getElementById(`file-input-${slot}`);
  const origName = preview.getAttribute('data-original-name');
  
  if (origName) {
    preview.src = origName.startsWith('http') || origName.startsWith('data:') || origName.startsWith('/') ? origName : '/uploads/' + origName;
    wrapper.classList.add('has-content');
    document.getElementById(`image-box-${slot}`).classList.add('has-image');
    deletedIndexes.delete(Number(slot));
  } else {
    preview.src = '/photos/default.jpg';
    wrapper.classList.remove('has-content');
    document.getElementById(`image-box-${slot}`).classList.remove('has-image');
  }
  input.value = '';
  document.querySelectorAll(`input[name="productImagesBase64[]"][data-slot="${slot}"]`).forEach(el => el.remove());
  updateDeletedHidden();
}

function triggerCrop(index) {
  const input = document.getElementById(`file-input-${index}`);
  const file = input.files[0];
  if (!file) {
    Swal.fire({
      icon: 'error',
      title: 'No Image',
      text: 'Please select an image first.',
      confirmButtonColor: '#dc3545'
    });
    return;
  }
  if (!allowedFormats.includes(file.type)) {
    Swal.fire({
      icon: 'error',
      title: 'Invalid Image',
      text: 'Only PNG/JPG/JPEG allowed',
      confirmButtonColor: '#dc3545'
    });
    input.value = '';
    return;
  }
  currentImageIndex = index;
  const reader = new FileReader();
  reader.onload = function(ev) {
    cropperImage.src = ev.target.result;
    modal.style.display = 'flex';
    setTimeout(() => {
      if (cropper) cropper.destroy();
      cropper = new Cropper(cropperImage, {
        aspectRatio: 1,
        viewMode: 1,
        autoCropArea: 1,
        zoomable: true
      });
    }, 100);
  };
  reader.readAsDataURL(file);
}

function cropImage() {
  const canvas = cropper.getCroppedCanvas({ width: 800, height: 800 });
  const dataURL = canvas.toDataURL('image/jpeg', 0.9);
  
  const preview = document.getElementById(`preview-image-${currentImageIndex}`);
  const wrapper = document.getElementById(`wrapper-${currentImageIndex}`);
  preview.src = dataURL;
  wrapper.classList.add('has-content');
  document.getElementById(`image-box-${currentImageIndex}`).classList.add('has-image');

  // Store the cropped image in a data attribute on the image element itself
  preview.setAttribute('data-cropped', dataURL);
  
  updateDeletedHidden();
  closeModal();
}

function closeModal() {
  modal.style.display = 'none';
  if (cropper) {
    cropper.destroy();
    cropper = null;
  }
  // Reset file input after crop
  if (currentImageIndex !== null) {
    document.getElementById(`file-input-${currentImageIndex}`).value = '';
  }
}

// File input change listener
document.querySelectorAll('.product-image-input').forEach(input => {
  input.addEventListener('change', function() {
    const slot = Number(this.dataset.slot);
    if (!this.files[0]) return;
    if (!allowedFormats.includes(this.files[0].type)) {
      Swal.fire({
        icon: 'error',
        title: 'Invalid Image',
        text: 'Only PNG/JPG/JPEG formats are allowed',
        confirmButtonColor: '#dc3545'
      });
      this.value = '';
      return;
    }
    triggerCrop(slot);
  });
});

// ==================== VARIANT MODAL HANDLING ====================

// Auto-calculate sale price when regular price changes
document.getElementById('modalRegularPrice').addEventListener('input', function() {
  calculateSalePrice();
});

function calculateSalePrice() {
  const regularPrice = parseFloat(document.getElementById('modalRegularPrice').value) || 0;
  const salePriceInput = document.getElementById('modalSalePrice');
  
  // For now, sale price = regular price (no discount applied)
  // The backend will apply category offer when saving
  if (regularPrice > 0) {
    salePriceInput.value = regularPrice.toFixed(2);
  } else {
    salePriceInput.value = '';
  }
}

function openVariantModal(index = null) {
  currentEditingVariantIndex = index;
  
  if (index !== null && index < variants.length) {
    const variant = variants[index];
    document.getElementById('modalTitle').textContent = 'Edit Product Variant';
    document.getElementById('saveButtonText').textContent = 'Update Variant';
    document.getElementById('modalSize').value = variant.size;
    document.getElementById('modalStock').value = variant.stock;
    document.getElementById('modalRegularPrice').value = variant.regularPrice;
    document.getElementById('modalSalePrice').value = variant.regularPrice; // Show regular price as sale price
  } else {
    document.getElementById('modalTitle').textContent = 'Add Product Variant';
    document.getElementById('saveButtonText').textContent = 'Add Variant';
    document.getElementById('modalSize').value = '';
    document.getElementById('modalStock').value = '';
    document.getElementById('modalRegularPrice').value = '';
    document.getElementById('modalSalePrice').value = '';
  }
  
  document.getElementById('variantModal').style.display = 'flex';
  setTimeout(() => document.getElementById('modalSize').focus(), 100);
}

function closeVariantModal() {
  document.getElementById('variantModal').style.display = 'none';
  currentEditingVariantIndex = null;
}

function saveVariant() {
  const size = parseFloat(document.getElementById('modalSize').value);
  const stock = parseInt(document.getElementById('modalStock').value);
  const regularPrice = parseFloat(document.getElementById('modalRegularPrice').value);
  // Sale price will be calculated by backend based on category offer
  const salePrice = regularPrice; // Send regular price, backend will calculate actual sale price
  
  if (!size || size <= 0) {
    Swal.fire({ icon: 'error', title: 'Invalid Size', text: 'Size must be greater than 0', confirmButtonColor: '#ef4444' });
    return;
  }
  
  if (isNaN(stock) || stock < 0) {
    Swal.fire({ icon: 'error', title: 'Invalid Stock', text: 'Stock cannot be negative', confirmButtonColor: '#ef4444' });
    return;
  }
  
  if (!regularPrice || regularPrice <= 0) {
    Swal.fire({ icon: 'error', title: 'Invalid Regular Price', text: 'Regular price must be greater than 0', confirmButtonColor: '#ef4444' });
    return;
  }
  
  const variant = { size, stock, regularPrice, salePrice };
  
  if (currentEditingVariantIndex !== null && currentEditingVariantIndex < variants.length) {
    variants[currentEditingVariantIndex] = variant;
    Swal.fire({ icon: 'success', title: 'Variant Updated!', timer: 1500, showConfirmButton: false });
  } else {
    variants.push(variant);
    Swal.fire({ icon: 'success', title: 'Variant Added!', timer: 1500, showConfirmButton: false });
  }
  
  renderVariants();
  closeVariantModal();
}

function deleteVariant(index) {
  if (variants.length <= 1) {
    Swal.fire({ icon: 'error', title: 'Cannot Delete', text: 'At least one variant is required', confirmButtonColor: '#dc3545' });
    return;
  }

  Swal.fire({
    title: 'Delete Variant?',
    text: 'This action cannot be undone',
    icon: 'warning',
    showCancelButton: true,
    confirmButtonColor: '#ef4444',
    cancelButtonColor: '#6b7280',
    confirmButtonText: 'Yes, Delete',
    cancelButtonText: 'Cancel'
  }).then((result) => {
    if (result.isConfirmed) {
      variants.splice(index, 1);
      renderVariants();
      Swal.fire({ icon: 'success', title: 'Variant Deleted!', timer: 1500, showConfirmButton: false });
    }
  });
}

function addNewVariant() {
  openVariantModal(variants.length);
}

function renderVariants() {
  const display = document.getElementById('variantsDisplay');
  const emptyState = document.getElementById('emptyState');
  
  display.querySelectorAll('.variant-card').forEach(card => card.remove());
  
  if (variants.length === 0) {
    emptyState.style.display = 'block';
    return;
  }
  
  emptyState.style.display = 'none';
  
  variants.forEach((variant, index) => {
    const card = document.createElement('div');
    card.className = 'variant-card';
    card.innerHTML = `
      <div class="variant-card-header">
        <span class="variant-size-badge">
          <i class="fas fa-box"></i> ${variant.size} ML
        </span>
        <div class="variant-actions">
          <button type="button" class="btn-variant-edit" onclick="openVariantModal(${index})">
            <i class="fas fa-edit"></i> Edit
          </button>
          <button type="button" class="btn-variant-delete" onclick="deleteVariant(${index})">
            <i class="fas fa-trash"></i> Delete
          </button>
        </div>
      </div>
      <div class="variant-details">
        <div class="variant-detail-item">
          <span class="variant-detail-label"><i class="fas fa-warehouse"></i> Stock</span>
          <span class="variant-detail-value">${variant.stock} Units</span>
        </div>
        <div class="variant-detail-item">
          <span class="variant-detail-label"><i class="fas fa-tag"></i> Regular Price</span>
          <span class="variant-detail-value">₹${variant.regularPrice.toFixed(2)}</span>
        </div>
        <div class="variant-detail-item">
          <span class="variant-detail-label"><i class="fas fa-badge-percent"></i> Sale Price</span>
          <span class="variant-detail-value">₹${variant.salePrice.toFixed(2)}</span>
        </div>
      </div>
    `;
    display.appendChild(card);
  });
}

// Modal background click handler
document.getElementById('variantModal').addEventListener('click', (e) => {
  if (e.target.id === 'variantModal') {
    closeVariantModal();
  }
});

// Escape key handler
document.addEventListener('keydown', function(event) {
  if (event.key === 'Escape') {
    closeVariantModal();
    closeModal();
  }
});

// ==================== FORM VALIDATION ====================

function showError(id, msg) {
  const element = document.getElementById(id);
  if (element) {
    element.textContent = msg;
    element.style.display = 'block';
  }
}

function clearErrors() {
  document.querySelectorAll('.error-message').forEach(el => {
    el.textContent = '';
    el.style.display = 'none';
  });
}

function validateForm(e) {
  e.preventDefault();
  clearErrors();
  let valid = true;

  // Image validation
  let croppedCount = 0;
  for (let i = 0; i < 4; i++) {
    const preview = document.getElementById(`preview-image-${i}`);
    const origName = preview.getAttribute('data-original-name');
    
    if (origName && !deletedIndexes.has(i)) {
      croppedCount++;
    }
    
    const base64Input = document.querySelector(`input[name="productImagesBase64[]"][data-slot="${i}"]`);
    if (base64Input) {
      croppedCount++;
    }
  }

  if (croppedCount < 3) {
    showError('productImage0-error', 'At least 3 images are required');
    valid = false;
  }

  // Form field validation
  const name = document.getElementsByName('productName')[0];
  const desc = document.getElementsByName('description')[0];
  const longDesc = document.getElementsByName('longDescription')[0];
  const brand = document.getElementsByName('brand')[0];
  const category = document.getElementsByName('category')[0];

  const nameValue = name.value.trim();
  const alphaRegex = /^[a-zA-Z\s]+$/;

  if (!nameValue) {
    showError('productName-error', 'Product name is required');
    valid = false;
  } else if (!alphaRegex.test(nameValue)) {
    showError('productName-error', 'Product name must contain only letters and spaces');
    valid = false;
  }
  
  if (!desc.value.trim()) {
    showError('description-error', 'Short description is required');
    valid = false;
  }
  
  if (!longDesc.value.trim()) {
    showError('longDescription-error', 'Long description is required');
    valid = false;
  }
  
  if (!brand.value) {
    showError('brand-error', 'Please select a brand');
    valid = false;
  }
  
  if (!category.value) {
    showError('category-error', 'Please select a category');
    valid = false;
  }

  if (variants.length < 1) {
    showError('variant-error', 'At least one variant is required');
    valid = false;
  }

  if (!valid) return false;

  // Save variants to hidden inputs
  const variantsData = document.getElementById('variantsData');
  variantsData.innerHTML = '';
  
  variants.forEach((variant) => {
    ['size', 'stock', 'regularPrice', 'salePrice'].forEach(field => {
      const input = document.createElement('input');
      input.type = 'hidden';
      input.name = `variant${field.charAt(0).toUpperCase() + field.slice(1)}[]`;
      input.value = variant[field];
      variantsData.appendChild(input);
    });
  });

  return true;
}

document.getElementById('editProductForm').addEventListener('submit', async function(event) {
  event.preventDefault();
  
  if (!validateForm(event)) {
    return;
  }

  try {
    const formData = new FormData(this);
    
    // Clear any existing productImagesBase64 entries
    formData.delete('productImagesBase64[]');
    
    // Collect all cropped images
    const croppedImages = [];
    for (let i = 0; i < 4; i++) {
      const preview = document.getElementById(`preview-image-${i}`);
      const croppedData = preview.getAttribute('data-cropped');
      
      if (croppedData) {
        croppedImages.push(croppedData);
      }
    }
    
    // Add cropped images to formData
    croppedImages.forEach((img) => {
      formData.append('productImagesBase64[]', img);
    });

    console.log('Submitting form with:', {
      deletedImages: formData.get('deletedImages'),
      croppedImagesCount: croppedImages.length,
      variantCount: formData.getAll('variantSize[]').length
    });
    
    const response = await fetch(this.action, {
      method: 'POST',
      body: formData
    });

    const contentType = response.headers.get('content-type');
    let data;
    
    if (contentType && contentType.includes('application/json')) {
      data = await response.json();
      
      if (!response.ok) {
        throw new Error(data.error || data.message || 'Failed to update product');
      }

      Swal.fire({
        icon: 'success',
        title: 'Success',
        text: data.message || 'Product updated successfully!',
        confirmButtonColor: '#28a745',
        showConfirmButton: false,
        timer: 1500
      }).then(() => {
        window.location.href = '/admin/products';
      });
    } else {
      // Backend returned redirect or HTML response (success)
      if (response.ok || response.status === 200 || response.redirected) {
        Swal.fire({
          icon: 'success',
          title: 'Success',
          text: 'Product updated successfully!',
          confirmButtonColor: '#28a745',
          showConfirmButton: false,
          timer: 1500
        }).then(() => {
          window.location.href = '/admin/products';
        });
      } else {
        throw new Error('Failed to update product');
      }
    }
  } catch (error) {
    console.error('Error updating product:', error.message);
    Swal.fire({
      icon: 'error',
      title: 'Error',
      text: error.message || 'Failed to update product',
      confirmButtonColor: '#dc3545'
    });
  }
});

