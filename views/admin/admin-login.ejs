<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Login - Zodiac Perfume</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Cinzel:wght@500;700&family=Inter:wght@300;400;500;600&display=swap');

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      background: linear-gradient(135deg, #fcfdfb 0%, #ebedee 100%);
      font-family: 'Inter', sans-serif;
      padding: 1rem;
      position: relative;
    }

    .login-container {
      background: rgba(27, 82, 67, 0.85); 
      backdrop-filter: blur(15px);
      padding: 3rem 2.5rem;
      border-radius: 30px;
      width: 100%;
      max-width: 440px;
      box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.2), 
                  0 0 0 1px rgba(212, 175, 55, 0.2); 
      position: relative;
      z-index: 1;
      animation: slideUp 0.8s cubic-bezier(0.16, 1, 0.3, 1);
    }

    @keyframes slideUp {
      from { opacity: 0; transform: translateY(40px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .logo-wrapper {
      text-align: center;
      margin-bottom: 2rem;
    }

    .logo {
      width: 110px;
      height: auto;
      margin-bottom: 1rem;
      filter: drop-shadow(0 8px 15px rgba(0, 0, 0, 0.1));
    }

    h2 {
      font-family: 'Cinzel', serif;
      font-size: 1.75rem;
      font-weight: 700;
      color: #b3ab1a; 
      letter-spacing: 2px;
      text-transform: uppercase;
    }

    .subtitle {
      color: #f1f1e6; 
      font-size: 0.85rem;
      margin-top: 0.5rem;
      letter-spacing: 0.5px;
      opacity: 0.8;
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 1.25rem;
    }

    label {
      display: block;
      font-weight: 600;
      color: #afac53;
      margin-bottom: 0.5rem;
      font-size: 0.8rem;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .input-wrapper {
      position: relative;
      display: flex;
      align-items: center;
    }

    input {
      width: 100%;
      padding: 0.9rem 1rem 0.9rem 3rem;
      border: 1.5px solid #3a3a09;
      border-radius: 12px;
      font-size: 0.95rem;
      transition: all 0.3s ease;
      background: rgba(255, 254, 254, 0.95);
      color: #333;
    }

    input:focus {
      border-color: #b3ab1a;
      outline: none;
      box-shadow: 0 0 15px rgba(179, 171, 26, 0.2);
      transform: translateY(-1px);
    }

    .input-icon {
      position: absolute;
      left: 1.1rem;
      color: #3d3c03;
      transition: color 0.3s;
    }

    input:focus ~ .input-icon {
      color: #1f5f46;
    }

    .password-toggle {
      position: absolute;
      right: 1.1rem;
      color: #999;
      cursor: pointer;
    }

    button {
      margin-top: 1rem;
      padding: 1rem;
      background: linear-gradient(135deg, #11383a 0%, #0a4523 100%);
      color: white;
      border: 1px solid rgba(179, 171, 26, 0.3);
      border-radius: 12px;
      font-size: 0.9rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 2px;
      cursor: pointer;
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }

    button::after {
      content: '';
      position: absolute;
      top: -50%;
      left: -60%;
      width: 20%;
      height: 200%;
      background: rgba(255,255,255,0.1);
      transform: rotate(30deg);
      transition: all 0.5s;
    }

    button:hover::after {
      left: 120%;
    }

    button:hover {
      transform: translateY(-2px);
      filter: brightness(1.1);
    }

    input.error { border-color: #e74c3c; }
    
    .field-error {
      color: #ff6b6b;
      font-size: 0.75rem;
      margin-top: 0.4rem;
      display: none;
      align-items: center;
      gap: 5px;
    }

    .field-error.show { display: flex; }

    .loading {
      display: inline-block;
      width: 14px;
      height: 14px;
      border: 2px solid rgba(255, 255, 255, 0.3);
      border-top-color: white;
      border-radius: 50%;
      animation: spin 0.8s linear infinite;
      margin-right: 10px;
    }

    @keyframes spin { to { transform: rotate(360deg); } }
  </style>
</head>

<body>

  <div class="login-container">
    <div class="logo-wrapper">
      <img src="/photos/zodiac perfume/brand logo.png" class="logo" alt="Zodiac Perfume Logo"/>
      <h2>Sentique</h2>
      <p class="subtitle">Administrative Portal Access</p>
    </div>

    <div id="alertBox"></div>

    <form id="loginForm" action="/admin/login" method="POST" novalidate>
      <div class="input-group">
        <label for="email">Email Identity</label>
        <div class="input-wrapper">
          <input type="email" id="email" name="email" placeholder="admin@zodiac.com" autocomplete="email"/>
          <i class="fa-solid fa-envelope input-icon"></i>
        </div>
        <p id="emailError" class="field-error"></p>
      </div>

      <div class="input-group">
        <label for="password">Security Key</label>
        <div class="input-wrapper">
          <input type="password" id="password" name="password" placeholder="Enter password" autocomplete="current-password"/>
          <i class="fa-solid fa-lock input-icon"></i>
          <i id="togglePassword" class="fa-solid fa-eye password-toggle"></i>
        </div>
        <p id="passwordError" class="field-error"></p>
      </div>

      <button type="submit" id="submitBtn">
        <span id="btnText">Sign In</span>
      </button>
    </form>
  </div>

  <script>
    const form = document.getElementById("loginForm");
    const emailInput = document.getElementById("email");
    const passInput = document.getElementById("password");
    const emailErr = document.getElementById("emailError");
    const passErr = document.getElementById("passwordError");
    const submitBtn = document.getElementById("submitBtn");
    const btnText = document.getElementById("btnText");
    const alertBox = document.getElementById("alertBox");

    function showAlert(message, type) {
      alertBox.innerHTML = `
        <div style="padding: 10px; background: #fee2e2; color: #b91c1c; border-radius: 8px; margin-bottom: 15px; font-size: 14px;">
          <i class="fa-solid fa-circle-exclamation"></i> ${message}
        </div>`;
    }

    function showError(element, input, message) {
      element.innerHTML = `<i class="fa-solid fa-circle-exclamation"></i> ${message}`;
      element.classList.add('show');
      input.classList.add('error');
    }

    function hideError(element, input) {
      element.classList.remove('show');
      input.classList.remove('error');
    }

    function validateEmail(email) {
      return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);
    }

    // --- REAL-TIME VALIDATION (Removes error message as you type) ---
    emailInput.addEventListener("input", function() {
      if (emailInput.value.trim() !== "" && validateEmail(emailInput.value)) {
        hideError(emailErr, emailInput);
      }
    });

    passInput.addEventListener("input", function() {
      if (passInput.value.trim() !== "" && passInput.value.length >= 6) {
        hideError(passErr, passInput);
      }
    });

    // Password toggle
    document.getElementById("togglePassword").addEventListener("click", function() {
      const type = passInput.type === "password" ? "text" : "password";
      passInput.type = type;
      this.classList.toggle("fa-eye");
      this.classList.toggle("fa-eye-slash");
    });

    form.addEventListener("submit", (e) => {
      e.preventDefault();
      let valid = true;

      if (emailInput.value.trim() === "") {
        valid = false;
        showError(emailErr, emailInput, "Email is required");
      } else if (!validateEmail(emailInput.value)) {
        valid = false;
        showError(emailErr, emailInput, "Invalid email format");
      }

      if (passInput.value.trim() === "") {
        valid = false;
        showError(passErr, passInput, "Password is required");
      } else if (passInput.value.length < 6) {
        valid = false;
        showError(passErr, passInput, "Minimum 6 characters");
      }

      if (valid) {
        submitBtn.disabled = true;
        btnText.innerHTML = '<span class="loading"></span>Authenticating...';
        setTimeout(() => {
          form.submit();
        }, 600);
      }
    });
  </script>
</body>
</html>