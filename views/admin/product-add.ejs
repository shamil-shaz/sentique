    closeModal();
  }
});

// ==================== FORM VALIDATION ====================

function showError(id, msg) {
  const element = document.getElementById(id);
  element.textContent = msg;
  element.style.display = 'block';
}

function clearErrors() {
  document.querySelectorAll('.error-message').forEach(el => {
    el.textContent = '';
    el.style.display = 'none';
  });
}

function validateForm() {
  clearErrors();
  let valid = true;

  // Image validation variables
  let croppedCount = 0;
  let uncroppedFound = false;
  const totalSlots = 4;

  // Single loop to handle all image logic
  for (let i = 1; i <= totalSlots; i++) {
    const fileInput = document.getElementById(`file-input-${i}`);
    const croppedInput = document.getElementById(`cropped-image${i}`);
    const imageBox = document.getElementById(`image-box-${i}`);

    // Reset previous error highlights
    imageBox.style.borderColor = "#e2e8f0";

    // 1. Check if user selected a file but didn't click "Apply Crop"
    if (fileInput.files.length > 0 && !croppedInput.value) {
      uncroppedFound = true;
      imageBox.style.borderColor = "#f56565"; // Highlight specific uncropped box in red
    }

    // 2. Count images that have been successfully cropped
    if (croppedInput.value) {
      croppedCount++;
    }
  }

  // Error 1: Uncropped images exist
  if (uncroppedFound) {
    Swal.fire({
      icon: 'warning',
      title: 'Crop Required',
      text: 'Please crop all selected images before saving. Boxes in red need attention.',
      confirmButtonColor: '#4299e1'
    });
    return false; // Exit immediately so they fix the images first
  }

  // Error 2: Total count checks
  if (croppedCount < 2) {
    showError('productImage1-error', 'At least 2 cropped images are required');
    valid = false;
  } else if (croppedCount > 4) {
    showError('productImage1-error', 'Maximum 4 images allowed');
    valid = false;
  }

  // Basic info validation
  const name = document.getElementsByName('productName')[0];
  const desc = document.getElementsByName('description')[0];
  const longDesc = document.getElementsByName('longDescription')[0];
  const brand = document.getElementsByName('brand')[0];
  const category = document.getElementsByName('category')[0];

const nameValue = name.value.trim();
  const alphaRegex = /^[a-zA-Z\s]+$/; // Letters and spaces only

  if (!nameValue) {
    showError('productName-error', 'Product name is required');
    valid = false;
  } else if (nameValue.length < 3) {
    showError('productName-error', 'Product name must be at least 3 characters');
    valid = false;
  } else if (!alphaRegex.test(nameValue)) {
    showError('productName-error', 'Product name must contain only alphabetic characters');
    valid = false;
  }
  if (!longDesc.value.trim()) {
    showError('longDescription-error', 'Long description is required');
    valid = false;
  } else if (longDesc.value.trim().length < 10) {
    showError('longDescription-error', 'Long description must be at least 10 characters');
    valid = false;
  }
  if (!brand.value) {
    showError('brand-error', 'Please select a brand');
    valid = false;
  }
  if (!category.value) {
    showError('category-error', 'Please select a category');
    valid = false;
  }

  // Variant validation
  if (variants.length < 1) {
    showError('variant-error', 'At least one variant is required');
    valid = false;
  }

  return valid;
}

