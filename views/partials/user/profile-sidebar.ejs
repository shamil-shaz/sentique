<style>
    /* =========================
       1. CSS VARIABLES & THEME
       ========================= */
    :root {
        /* Light Mode */
        --bg-sidebar: #FFFFFF;
        --sidebar-text: #4A5568;
        --sidebar-border: 1px solid #E2E8F0;
        --sidebar-shadow: 0 4px 6px rgba(0,0,0,0.05);
        
        --active-bg: linear-gradient(135deg, #183043 0%, #10262c 100%);
        --active-text: #FFFFFF;
        
        --hover-bg: #F7FAFC;
        --accent: #667eea;
    }

    /* Dark Mode (Luxury Gold) */
    body.dark-mode {
        --bg-sidebar: #121212;
        --sidebar-text: #D1D5DB;
        --sidebar-border: 1px solid rgba(229, 193, 74, 0.2); /* Gold Border */
        --sidebar-shadow: 0 10px 30px rgba(0,0,0,0.5);
        
        /* Your Gold Gradient */
        --active-bg: linear-gradient(135deg, #e5c14a 0%, #f0d978 100%);
        --active-text: #000000; /* Black text on Gold */
        
        --hover-bg: #1F1F1F;
        --accent: #f0d978;
    }

    /* =========================
       2. MAIN LAYOUT GRID (The Fix)
       ========================= */
    .main-content {
        display: grid;
        grid-template-columns: 280px 1fr; /* Desktop: 280px Sidebar + Rest Content */
        gap: 30px;
        align-items: start;
        width: 100%;
    }

    /* =========================
       3. SIDEBAR STYLING
       ========================= */
    .sidebar {
        background: var(--bg-sidebar);
        border: var(--sidebar-border);
        box-shadow: var(--sidebar-shadow);
        border-radius: 15px;
        padding: 30px;
        height: fit-content;
        position: sticky;
        top: 20px; /* Stays visible when scrolling on desktop */
        z-index: 10;
        transition: all 0.3s ease;
    }

    /* Avatar Area */
    .sidebar-left { text-align: center; margin-bottom: 25px; }
    
    .profile-avatar {
        width: 90px;
        height: 90px;
        border-radius: 50%;
        background: #1f2937;
        margin: 0 auto 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        border: 3px solid var(--bg-sidebar);
        box-shadow: 0 0 0 2px var(--accent);
    }
    .profile-avatar img { width: 100%; height: 100%; object-fit: cover; }
    .profile-name { font-weight: 700; font-size: 18px; color: var(--sidebar-text); }

    /* Menu Items */
    .menu-section { margin-bottom: 20px; }
    
    .menu-title {
        font-size: 11px;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: #9CA3AF;
        font-weight: 700;
        margin-bottom: 10px;
    }

    .menu-item {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px 15px;
        border-radius: 10px;
        color: var(--sidebar-text);
        font-weight: 500;
        text-decoration: none;
        transition: all 0.3s ease;
        margin-bottom: 5px;
    }

    .menu-item:hover {
        background: var(--hover-bg);
        color: var(--accent);
        padding-left: 20px; /* Slide effect */
    }

    .menu-item.active {
        background: var(--active-bg);
        color: var(--active-text);
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        font-weight: 700;
    }

    /* =========================
       4. MOBILE TOGGLE BUTTON
       ========================= */
    .sidebar-toggle-btn {
        display: none; /* Hidden on Desktop */
        width: 100%;
        padding: 15px 20px;
        background: var(--bg-sidebar);
        border: var(--sidebar-border);
        color: var(--sidebar-text);
        font-weight: 700;
        border-radius: 12px;
        cursor: pointer;
        margin-bottom: 20px;
        align-items: center;
        justify-content: space-between;
        box-shadow: var(--sidebar-shadow);
        transition: all 0.3s;
    }
    
    /* Gold Border for Toggle in Dark Mode */
    body.dark-mode .sidebar-toggle-btn {
        border: 1px solid var(--accent);
    }

    /* =========================
       5. RESPONSIVE (Mobile Layout)
       ========================= */
    @media (max-width: 968px) {
        /* Switch grid to single column */
        .main-content {
            display: flex;
            flex-direction: column;
            gap: 0;
        }

        /* Show the Toggle Button */
        .sidebar-toggle-btn {
            display: flex;
        }

        /* Hide Sidebar by default */
        .sidebar {
            display: none; /* Hidden initially */
            width: 100%;
            position: static; /* Remove sticky */
            margin-bottom: 30px;
            animation: slideDown 0.3s ease-out;
        }

        /* Class to show sidebar when clicked */
        .sidebar.show {
            display: block;
        }
        
        /* Adjust padding inside sidebar for mobile */
        .menu-item {
            padding: 15px; /* Larger touch targets */
        }
    }

    @keyframes slideDown {
        from { opacity: 0; transform: translateY(-20px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>

