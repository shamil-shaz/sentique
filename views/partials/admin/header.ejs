<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Panel</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter&display=swap" rel="stylesheet" />
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', sans-serif;
      background-color: #f5f5f5;
      display: flex;
      min-height: 100vh;
    }

    /* Sidebar */
    .sidebar {
      position: fixed;
      top: 0;
      left: 0;
      width: 240px;
      height: 100vh;
      background-color: #ffffff;
      border-right: 1px solid #ddd;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      padding: 0;
      z-index: 1000;
      transform: translateX(0);
      transition: transform 0.3s ease-in-out;
      overflow-y: auto;
    }

    .sidebar__logo {
      width: 120px;
      margin: 20px auto;
      display: block;
    }

    .sidebar__nav {
      display: flex;
      flex-direction: column;
      gap: 10px;
      padding: 0 20px;
    }

    .nav__item {
      text-decoration: none;
      color: #333;
      padding: 10px 15px;
      border-radius: 6px;
      transition: background 0.2s;
    }

    .nav__item:hover,
    .nav__item.active {
      background-color: #eee;
      font-weight: bold;
    }

    .sidebar__bottom {
      display: flex;
      flex-direction: column;
      gap: 10px;
      padding: 0 20px 20px;
    }

    .btn {
      padding: 10px;
      font-size: 14px;
      border-radius: 6px;
      text-align: center;
      cursor: pointer;
      text-decoration: none;
    }

    .btn--outline {
      background-color: #fff;
      border: 1px solid #ccc;
      color: #333;
    }

    .btn--danger {
      background-color: #d65948;
      border: none;
      color: white;
    }

    /* Header */
    .admin-header {
      position: fixed;
      top: 0;
      left: 240px;
      right: 0;
      height: 60px;
      background-color: #ffffff;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 20px;
      border-bottom: 1px solid #ddd;
      z-index: 900;
      transition: left 0.3s;
    }

    .menu-btn {
      font-size: 24px;
      background: none;
      border: none;
      cursor: pointer;
      display: none;
    }

    .search-container {
      position: relative;
      width: 280px;
    }

    .search-bar {
      width: 100%;
      padding: 8px 12px 8px 36px;
      border-radius: 8px;
      border: 1px solid #ccc;
      font-size: 14px;
      height: 40px;
    }

    .search-icon {
      position: absolute;
      top: 50%;
      left: 12px;
      transform: translateY(-50%);
      font-size: 16px;
      color: #666;
      pointer-events: none;
    }

    /* Main content */
    .main-content {
      margin-left: 240px;
      margin-top: 60px;
      padding: 20px;
      width: 100%;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .sidebar {
        transform: translateX(-100%);
        position: fixed;
      }

      .sidebar.active {
        transform: translateX(0);
      }

      .admin-header {
        left: 0;
      }

      .menu-btn {
        display: block;
        margin-right: 15px;
      }

      .main-content {
        margin-left: 0;
      }

      .search-container {
        width: 100%;
        margin-left: 10px;
      }
    }
  </style>
</head>
<body>

  <!-- Sidebar -->
  <aside class="sidebar">
    <a href="/admin/dashboard">
      <img src="/photos/zodiac perfume/brand logo.png" alt="Sentique Logo" class="sidebar__logo" />
    </a>
   


    <nav class="sidebar__nav">
  <a href="/admin/dashboard" class="nav__item <%= activePage === 'dashboard' ? 'active' : '' %>">Dashboard</a>
  <a href="/admin/customers" class="nav__item <%= activePage === 'customers' ? 'active' : '' %>">Users</a>
  <a href="/admin/category" class="nav__item <%= activePage === 'category' ? 'active' : '' %>">Category</a>
  <a href="/admin/addProducts" class="nav__item <%= activePage === 'addProducts' ? 'active' : '' %>">Add Products</a>
  <a href="/admin/products" class="nav__item <%= activePage === 'products' ? 'active' : '' %>">Products</a>  
  <a href="/admin/brands" class="nav__item <%= activePage === 'brands' ? 'active' : '' %>">Brands</a>
  <a href="/admin/orders" class="nav__item <%= activePage === 'orders' ? 'active' : '' %>">Order Lists</a>
  <a href="/admin/sales" class="nav__item <%= activePage === 'sales' ? 'active' : '' %>">Sales</a>
  <a href="/admin/couponsManaging" class="nav__item <%= activePage === 'coupons' ? 'active' : '' %>">Coupons</a>
  <a href="/admin/banners" class="nav__item <%= activePage === 'banners' ? 'active' : '' %>">Banner</a>
  <a href="/admin/offers" class="nav__item <%= activePage === 'offers' ? 'active' : '' %>">Refund & Return</a>
</nav>


    <div class="sidebar__bottom">
    
      <a href="/admin/logout" class="btn btn--danger">Logout</a>
    </div>
  </aside>

  <!-- Header -->
  <header class="admin-header">
    <button class="menu-btn" onclick="document.querySelector('.sidebar').classList.toggle('active')">â˜°</button>
    <div class="search-container">
      
    </div>
  </header>

</body>
</html>
