                                const itemIsCancelled = item.status ===
                                'Cancelled';
                                const itemIsReturnRequest = item.status ===
                                'Return Request';

                                const parseAmount = (value) => {
                                if (!value) return 0;
                                return Number(String(value).replace(/‚Çπ/g,
                                '').trim());
                                };

                                const originalDiscountFixed =
                                parseAmount(item.originalCouponDiscount) > 0
                                ? parseAmount(item.originalCouponDiscount)
                                : parseAmount(item.couponDiscount);

                                const shouldShowDiscount =
                                item.itemTotalDiscount > 0 &&
                                !itemIsCancelled &&
                                !itemIsReturnRequest &&
                                !couponRevoked;
                                %>

