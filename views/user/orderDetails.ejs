                        {
                        key: 'Shipped',
                        status: 'Shipped',
                        date: item.tracking.shippedDate,
                        time: item.tracking.shippedTime,
                        description:
                        'Your order has been picked up by our delivery partner and is on its way!',
                        icon: 'üì¶',
                        location: item.tracking.shippedLocation
                        },
                        {
                        key: 'OutForDelivery',
                        status: 'Out for Delivery',
                        date: item.tracking.outForDeliveryDate,
                        time: item.tracking.outForDeliveryTime,
                        description:
                        'Your order is out for delivery and will arrive at your doorstep soon.',
                        icon: 'üöö',
                        location: item.tracking.outForDeliveryLocation
                        },
                        {
                        key: 'Delivered',
                        status: 'Delivered',
                        date: item.tracking.deliveredDate,
                        time: item.tracking.deliveredTime,
                        description:
                        'Your order has been successfully delivered to your doorstep.',
                        icon: 'üè†',
                        location: null
                        }
                        ];
                        const currentPriority = statusPriority[item.status] ||
                        0;
                        %>
                        <div class="tracking-timeline">
                            <% trackingDetails.forEach(detail => {
                            const itemPriority = statusPriority[detail.key] ||
                            0;
                            let itemClass = 'pending';
                            if (itemPriority < currentPriority && detail.date) {
                            itemClass = 'completed';
                            } else if (itemPriority === currentPriority &&
                            detail.date) {
                            itemClass = 'active';
                            }
                            %>
                            <div class="timeline-item <%= itemClass %>">
                                <div class="timeline-icon-container"><%=
                                    detail.icon %></div>
                                <div class="timeline-line"></div>
                                <div class="timeline-content">
                                    <div class="timeline-status">
                                        <%= detail.status %>
                                        <% if (itemClass === 'completed') { %>
                                        <span
                                            class="status-badge-inline">COMPLETED</span>
                                        <% } else if (itemClass === 'active') {
                                        %>
                                        <span class="status-badge-inline">IN
                                            PROGRESS</span>
                                        <% } %>
                                    </div>
                                    <div class="timeline-date">
                                        <% if (!detail.date) { %>
                                        üìÖ Pending
                                        <% } else { %>
                                        üìÖ <%= detail.date %> ‚Ä¢ <%= detail.time
                                        || 'N/A' %>
                                        <% } %>
                                    </div>
                                    <div class="timeline-description"><%=
                                        detail.description %></div>
                                    <% if (detail.location && (itemClass ===
                                    'completed' || itemClass === 'active')) { %>
                                    <div class="timeline-location">üìç <%=
                                        detail.location %></div>
                                    <% } %>
                                </div>
                            </div>
                            <% }) %>
                        </div>
                        <div class="estimated-delivery">
                            <div class="estimated-delivery-label">
                                <%= item.status === 'Delivered' ? 'Delivered on'
                                : 'Estimated Delivery' %>
                            </div>
                            <div class="estimated-delivery-date">
                                <% if (item.status === 'Delivered' &&
                                item.tracking.deliveredDate) { %>
                                <%= item.tracking.deliveredDate %> ‚Ä¢ <%=
                                item.tracking.deliveredTime || 'N/A' %>
                                <% } else { %>
                                <%= item.tracking.estimatedDeliveryDate ||
                                'Pending' %>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <% } %>
                    <% }) %>
                    <% } else { %>
                    <div class="tracking-unavailable"
                        style="padding: 60px 30px; text-align: center; color: #5f6368;">
                        <p>Tracking information is currently unavailable for
                            this order.</p>
                    </div>
                    <% } %>
                </div>
            </div>

        </div>

        <%- include('../../views/partials/user/footer') %>

        <script>

let currentItem = '';
let currentItemIndex = '';
let currentVariantSize = '';
let currentItemFullPrice = '';

function openModal(itemName, itemIndex, variantSize, fullPrice) {
  currentItem = itemName;
  currentItemIndex = itemIndex;
  currentVariantSize = variantSize;
  currentItemFullPrice = fullPrice;

  const modalTitle = (String(variantSize) === 'all' || !variantSize) 
    ? itemName 
    : `${itemName}`;

  document.getElementById('cancelItemName').textContent = modalTitle;
  document.getElementById('cancelModal').classList.add('active');

  document.querySelectorAll('input[name="cancelReason"]').forEach(radio => {
    radio.checked = false;
  });
  document.getElementById('additionalDetails').value = '';
}

function closeModal() {
  document.getElementById('cancelModal').classList.remove('active');
}

function formatCurrency(amount) {
  if (isNaN(amount) || amount === null || amount === undefined) {
    return '‚Çπ0.00';
  }
  return `‚Çπ${Math.abs(parseFloat(amount)).toFixed(2)}`;
}

function confirmCancel() {
  const reasonInput = document.querySelector('input[name="cancelReason"]:checked');
  const details = document.getElementById('additionalDetails').value.trim();

  if (!reasonInput) {
    Swal.fire({
      icon: 'warning',
      title: 'Please Select a Reason',
      text: 'You must select a reason for cancellation.',
      confirmButtonColor: '#ff6b35',
      confirmButtonText: 'OK'
    });
    return;
  }

  const reason = reasonInput.value;
  const orderId = "<%= orderId %>";
  const isEntireOrder = currentItem === 'Entire Order';

 
  if (isEntireOrder) {
    showEntireOrderConfirmation(reason, details);
    return;
  }

 
  const checkUrl = `/orders/${orderId}/items/${currentItemIndex}/${currentVariantSize}/check-cancel`;

  const confirmBtn = document.querySelector('.btn-confirm-cancel');
  if (confirmBtn) confirmBtn.disabled = true;

  fetch(checkUrl, {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({})
  })
    .then(res => res.json())
    .then(data => {
      if (confirmBtn) confirmBtn.disabled = false;

      if (!data.success) {
        throw new Error(data.error || 'Failed to check cancellation.');
      }

      
      if (data.couponRevoked) {
        showCouponRevokedWarning(data, reason, details);
      } else {
        showNormalCancellationConfirmation(data, reason, details);
      }
    })
    .catch(error => {
      if (confirmBtn) confirmBtn.disabled = false;
      Swal.fire({
        icon: 'error',
        title: 'Error',
        text: error.message || 'An error occurred. Please try again.',
        confirmButtonColor: '#ff6b35',
        confirmButtonText: 'OK'
      });
    });
}

function showCouponRevokedWarning(data, reason, details) {
  const safeParse = (val) => Number(Number(val || 0).toFixed(2));
  
  const totalDiscount = safeParse(data.totalDiscount);
  const revokedDiscountOnOtherItems = safeParse(data.revokedDiscountOnOtherItems);
  const remainingFullPrice = safeParse(data.remainingFullPrice);
  const remainingCurrentlyPay = safeParse(data.remainingCurrentlyPay);
  const balanceDue = safeParse(data.balanceDue);
  const itemUserPaid = safeParse(data.itemUserPaid);
  const refundAmount = safeParse(data.refundAmount);
  const minPurchase = safeParse(data.minPurchase);

  const formatCurrency = (amt) => `‚Çπ${amt.toFixed(2)}`;

  const html = `
    <div style="text-align: left; font-size: 15px; line-height: 1.8; color: #333;">

      <p style="margin-bottom: 14px; background: #fee2e2; border-left: 4px solid #dc2626; padding: 12px; border-radius: 6px; color: #7f1d1d;">
        ‚ö†Ô∏è <strong>WARNING:</strong> Cancelling <strong>"${currentItem}"</strong> will reduce your order total below 
        <strong>${formatCurrency(minPurchase)}</strong>, which will revoke your coupon discount.
      </p>

      <div style="background: #fff7ed; border-left: 4px solid #f97316; padding: 12px; border-radius: 6px; margin-bottom: 12px;">
        <p style="margin: 0; color: #92400e; font-weight: 600;">üéüÔ∏è Coupon Discount Revocation</p>
        <p style="margin: 4px 0 0; font-size: 13px; color: #78350f;">
          Total discount applied: <strong>${formatCurrency(totalDiscount)}</strong><br>
          Discount lost on remaining items: <strong>${formatCurrency(revokedDiscountOnOtherItems)}</strong>
        </p>
      </div>

      <div style="background: #fefce8; border-left: 4px solid #facc15; padding: 12px; border-radius: 6px; margin-bottom: 12px;">
        <p style="margin: 0; color: #854d0e; font-weight: 600;">üì¶ Updated Order Summary</p>
        <div style="margin-top: 8px; font-size: 13px; color: #713f12;">
          Remaining items full price: <strong>${formatCurrency(remainingFullPrice)}</strong><br>
          Amount you paid (with discount): <strong>${formatCurrency(remainingCurrentlyPay)}</strong><br>
          <strong>Extra amount due: ${formatCurrency(balanceDue)}</strong><br>
          <small style="color: #92400e;">This will be deducted from your refund.</small>
        </div>
      </div>

      <div style="background: #ecfdf5; border-left: 4px solid #10b981; padding: 12px; border-radius: 6px;">
        <p style="margin: 0; color: #065f46; font-weight: 600;">üí∞ Your Refund Breakdown</p>
        <div style="margin-top: 8px; font-size: 13px; color: #064e3b;">
          Item price (after discount): <strong>${formatCurrency(itemUserPaid)}</strong><br>
          ${balanceDue > 0 ? `Less balance due: <strong style="color: #b91c1c;">-${formatCurrency(balanceDue)}</strong><br>` : ""}
          <strong style="font-size: 1.05em; color: #10b981;">Net refund: ${formatCurrency(refundAmount)}</strong>
        </div>
      </div>
    </div>
  `;

  Swal.fire({
    icon: 'warning',
    title: '‚ö†Ô∏è Coupon Will Be Revoked',
    html,
    showCancelButton: true,
    confirmButtonText: 'Yes, Cancel Item',
    cancelButtonText: 'No, Keep Item',
    confirmButtonColor: '#ef4444',
    cancelButtonColor: '#22c55e',
    reverseButtons: true,
    width: '600px'
  }).then(result => {
    if (result.isConfirmed) {
      closeModal();
      executeCancellation(reason, details);
    } else {
      closeModal();
    }
  });
}

function executeCancellation(reason, details) {
  const orderId = "<%= orderId %>";
  const isEntireOrder = currentItem === 'Entire Order';

  const url = isEntireOrder
    ? `/orders/${orderId}/cancel`
    : `/orders/${orderId}/items/${currentItemIndex}/${currentVariantSize}/cancel`;

  const confirmBtn = document.querySelector('.btn-confirm-cancel');
  if (confirmBtn) confirmBtn.disabled = true;

  fetch(url, {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ reason, details })
  })
    .then(res => res.json())
    .then(data => {
      if (confirmBtn) confirmBtn.disabled = false;

      if (data.success) {
        const successTitle = isEntireOrder 
          ? 'Order Cancelled Successfully ‚úì' 
          : `${currentItem} Cancelled Successfully ‚úì`;

        const refundAmount = parseFloat(data.refundAmount) || 0;
        const balanceDue = parseFloat(data.balanceDue) || 0;
        const revokedDiscount = parseFloat(data.revokedDiscountOnOtherItems) || 0;

        let successHtml = `
          <div style="text-align: left;">
            <div style="background: #f0fdf4; border-left: 4px solid #22c55e; padding: 12px; border-radius: 4px; margin-bottom: 12px;">
              <p style="margin: 0; color: #15803d; font-weight: 600;">
                üí∞ Wallet Credit
              </p>
              <p style="margin: 8px 0 0 0; color: #166534; font-size: 14px;">
                <strong style="font-size: 1.1em;">‚Çπ${refundAmount.toFixed(2)}</strong> has been credited to your wallet
              </p>
            </div>
        `;

        if (data.couponRevoked && data.revokedDiscountOnOtherItems > 0) {
          const revokedDiscount = parseFloat(data.revokedDiscountOnOtherItems) || 0;
          successHtml += `
            <div style="background: #fef2f2; border-left: 4px solid #ef4444; padding: 12px; border-radius: 4px; margin-bottom: 12px;">
              <p style="margin: 0; color: #991b1b; font-weight: 600;">
                ‚ö†Ô∏è Coupon Revoked
              </p>
              <p style="margin: 8px 0 0 0; color: #7f1d1d; font-size: 14px;">
                Discount removed: <strong>‚Çπ${revokedDiscount.toFixed(2)}</strong>
              </p>
              ${balanceDue > 0 ? `
              <p style="margin: 6px 0 0 0; color: #7f1d1d; font-size: 13px;">
                Balance due deducted from refund: <strong>‚Çπ${balanceDue.toFixed(2)}</strong>
              </p>
              ` : ''}
            </div>
          `;
        }

        successHtml += `
          <p style="font-size: 14px; color: #555; margin-top: 12px; text-align: center;">
            ‚úì Order updated successfully<br/>
            Check your wallet for the refund
          </p>
          </div>
        `;

        Swal.fire({
          icon: 'success',
          title: successTitle,
          html: successHtml,
          confirmButtonColor: '#22c55e',
          confirmButtonText: 'OK'
        }).then(() => {
          window.location.reload();
        });
      } else {
        Swal.fire({
          icon: 'error',
          title: 'Failed to Cancel',
          text: data.error || 'Unable to cancel item/order.',
          confirmButtonColor: '#ff6b35',
          confirmButtonText: 'OK'
        });
      }
    })
    .catch(error => {
      if (confirmBtn) confirmBtn.disabled = false;
      console.error('Error executing cancellation:', error);

      Swal.fire({
        icon: 'error',
        title: 'Error',
        text: 'An error occurred. Please try again.',
        confirmButtonColor: '#ff6b35',
        confirmButtonText: 'OK'
      });
    });
}

function showNormalCancellationConfirmation(data, reason, details) {
  const refundAmount = parseFloat(data.refundAmount) || 0;
  const itemPrice = parseFloat(data.itemPrice) || 0;
  const discount = itemPrice - refundAmount;

  let html = `
    <div style="text-align: left; font-size: 14px; line-height: 1.8;">
      <p style="margin-bottom: 12px;">
        You will receive <strong style="color: #22c55e; font-size: 1.05em;">‚Çπ${refundAmount.toFixed(2)}</strong> as a refund to your wallet.
      </p>
  `;

  if (discount > 0) {
    html += `
      <p style="color: #666; margin-bottom: 0;">
        This includes the discount of <strong>‚Çπ${discount.toFixed(2)}</strong> applied to this item.
      </p>
    `;
  }

  html += `</div>`;

  Swal.fire({
    icon: 'question',
    title: `Cancel ${currentItem}?`,
    html,
    showCancelButton: true,
    confirmButtonText: 'Yes, Cancel',
    cancelButtonText: 'No, Keep Item',
    confirmButtonColor: '#ef4444',
    cancelButtonColor: '#22c55e'
  }).then(result => {
    if (result.isConfirmed) {
      closeModal();
      executeCancellation(reason, details);
    } else {
      closeModal();
    }
  });
}

function showEntireOrderConfirmation(reason, details) {
  Swal.fire({
    icon: 'question',
    title: 'Cancel Entire Order?',
    html: `
      <p style="font-size: 15px;">
        Are you sure? This will cancel all cancellable items in the order.
      </p>
    `,
    showCancelButton: true,
    confirmButtonText: 'Yes, Cancel Order',
    cancelButtonText: 'No, Keep Order',
    confirmButtonColor: '#ef4444',
    cancelButtonColor: '#22c55e'
  }).then(result => {
    if (result.isConfirmed) {
      closeModal();
      executeCancellation(reason, details);
    } else {
      closeModal();
    }
  });
}

function openReturnModal(itemName, itemIndex, variantSize) {
  currentItem = itemName;
  currentItemIndex = itemIndex;
  currentVariantSize = variantSize;

  document.getElementById('returnItemName').textContent = itemName;
  document.getElementById('returnModal').classList.add('active');

  document.querySelectorAll('input[name="returnReason"]').forEach(radio => {
    radio.checked = false;
  });
  document.getElementById('returnAdditionalDetails').value = '';
}

function closeReturnModal() {
  document.getElementById('returnModal').classList.remove('active');
}

function confirmReturn() {
  const reason = document.querySelector('input[name="returnReason"]:checked');
  const details = document.getElementById('returnAdditionalDetails').value.trim();

  if (!reason) {
    Swal.fire({
      icon: 'warning',
      title: 'Please Select a Reason',
      text: 'You must select a reason for return.',
      confirmButtonColor: '#3b82f6'
    });
    return;
  }

  const isEntireOrder = currentItem === 'Entire Order';
  const orderId = "<%= orderId %>";

  const url = isEntireOrder
    ? `/orders/${orderId}/return`
    : `/orders/${orderId}/items/${currentItemIndex}/${currentVariantSize}/return`;

  fetch(url, {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ reason: reason.value, details })
  })
    .then(res => res.json())
    .then(data => {
      if (data.success) {
        Swal.fire({
          icon: 'success',
          title: isEntireOrder ? 'Return Request Submitted' : `${currentItem} Return Submitted`,
          text: `Your return request has been submitted. Reason: ${reason.value}`,
          confirmButtonColor: '#3b82f6'
        }).then(() => {
          closeReturnModal();
          window.location.reload();
        });
      } else {
        Swal.fire({
          icon: 'error',
          title: 'Failed to Request Return',
          text: data.error || 'Unable to process return request.',
          confirmButtonColor: '#3b82f6'
        });
      }
    })
    .catch(error => {
      console.error('Error returning:', error);
      Swal.fire({
        icon: 'error',
        title: 'Error',
        text: 'An error occurred. Please try again.',
        confirmButtonColor: '#3b82f6'
      });
    });
}

function openCancelReturnModal(itemName, itemIndex, variantSize) {
  currentItem = itemName;
  currentItemIndex = itemIndex;
  currentVariantSize = variantSize;

  document.getElementById('cancelReturnItemName').textContent = itemName;
  document.getElementById('cancelReturnModal').classList.add('active');
}

function closeCancelReturnModal() {
  document.getElementById('cancelReturnModal').classList.remove('active');
}

function confirmCancelReturn() {
  const isEntireOrder = currentItem === 'Entire Order';
  const orderId = "<%= orderId %>";

  const url = isEntireOrder
    ? `/orders/${orderId}/cancel-return`
    : `/orders/${orderId}/items/${currentItemIndex}/${currentVariantSize}/cancel-return`;

  fetch(url, {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' }
  })
    .then(res => res.json())
    .then(data => {
      if (data.success) {
        Swal.fire({
          icon: 'success',
          title: isEntireOrder ? 'Return Cancelled' : `${currentItem} Return Cancelled`,
          confirmButtonColor: '#6d28d9'
        }).then(() => {
          closeCancelReturnModal();
          window.location.reload();
        });
      } else {
        Swal.fire({
          icon: 'error',
          title: 'Failed to Cancel Return',
          text: data.error || 'Unable to cancel return.',
          confirmButtonColor: '#6d28d9'
        });
      }
    })
    .catch(error => {
      console.error('Error cancelling return:', error);
      Swal.fire({
        icon: 'error',
        title: 'Error',
        text: 'An error occurred. Please try again.',
        confirmButtonColor: '#6d28d9'
      });
    });
}

function openTrackingModal(productName) {
  const trackingModal = document.getElementById('trackingModal');
  const allItems = document.querySelectorAll('.tracking-item');

  let itemFound = false;
  allItems.forEach(item => {
    const itemName = item.querySelector('.tracking-item-header h3').textContent.split(' (')[0];
    if (itemName === productName && !itemFound) {
      item.style.display = 'block';
      itemFound = true;
    } else {
      item.style.display = 'none';
    }
  });

  trackingModal.classList.add('active');
  document.body.style.overflow = 'hidden';
}

function closeTrackingModal() {
  document.getElementById('trackingModal').classList.remove('active');
  document.body.style.overflow = 'auto';
}

function downloadInvoice() {
  const orderId = "<%= orderId %>";
  fetch(`/orders/${orderId}/invoice`, {
    method: 'GET',
    headers: { 'Content-Type': 'application/json' }
  })
    .then(res => {
      if (!res.ok) {
        return res.json().then(data => {
          throw new Error(data.error || 'Failed to generate invoice.');
        });
      }
      return res.blob();
    })
    .then(blob => {
      const url = window.URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      a.download = `Invoice_${orderId}.pdf`;
      document.body.appendChild(a);
      a.click();
      a.remove();
      window.URL.revokeObjectURL(url);
    })
    .catch(error => {
      console.error('Error downloading invoice:', error);
      Swal.fire({
        icon: 'error',
        title: 'Error',
        text: error.message || 'Invoice download failed.',
        confirmButtonColor: '#ff6b35'
      });
    });
}

function continueShopping() {
  window.location.href = '/shopPage';
}

window.onclick = function(event) {
  const cancelModal = document.getElementById('cancelModal');
  const returnModal = document.getElementById('returnModal');
  const cancelReturnModal = document.getElementById('cancelReturnModal');
  const trackingModal = document.getElementById('trackingModal');

  if (event.target === cancelModal) closeModal();
  if (event.target === returnModal) closeReturnModal();
  if (event.target === cancelReturnModal) closeCancelReturnModal();
  if (event.target === trackingModal) closeTrackingModal();
};

document.addEventListener('keydown', function(event) {
  if (event.key === 'Escape') {
    closeModal();
    closeReturnModal();
    closeCancelReturnModal();
    closeTrackingModal();
  }
});

</script>

