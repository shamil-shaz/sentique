    color: #999;
}

.timeline-item.pending .timeline-icon-container {
    background: #e0e0e0;
    box-shadow: none;
}

.timeline-item.pending .timeline-line {
    background: #ccc;
}

.timeline-status {
    font-size: 18px;
    font-weight: 700;
    color: #333;
    margin-bottom: 8px;
    display: flex;
    align-items: center;
    gap: 10px;
    flex-wrap: wrap;
}

.timeline-item.active .timeline-status {
    color: #ff6b35;
}

.timeline-item.completed .timeline-status {
    color: #10b981;
}

.status-badge-inline {
    padding: 4px 12px;
    background: #e0e0e0;
    color: #666;
    font-size: 11px;
    font-weight: 700;
    border-radius: 12px;
    letter-spacing: 0.5px;
}

.timeline-item.active .status-badge-inline {
