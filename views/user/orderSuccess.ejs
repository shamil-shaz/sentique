<%- include('../../views/partials/user/header') %>
<link href="https://fonts.googleapis.com/css?family=Poppins:600&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css?family=Inter:400,500,600&display=swap" rel="stylesheet">

<style>
  body {
    background: #f9f9fa;
    font-family: 'Inter', sans-serif;
    line-height: 1.5;
  }

  .payment-success-wrapper {
    margin: 0;
    padding: 20px 0;
    width: 100%;
    min-height: calc(100vh - 200px);
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #1d3d38 0%, #112819 100%);
    position: relative;
    overflow: hidden;
  }

  .bg-decoration {
    position: absolute;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: 0;
    top: 0;
    left: 0;
  }

  .circle {
    position: absolute;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    animation: float 6s ease-in-out infinite;
  }

  .circle-1 {
    width: 300px;
    height: 300px;
    top: -100px;
    left: -100px;
    animation-delay: 0s;
  }

  .circle-2 {
    width: 200px;
    height: 200px;
    bottom: -50px;
    right: -50px;
    animation-delay: 2s;
  }

  .circle-3 {
    width: 150px;
    height: 150px;
    top: 50%;
    right: 10%;
    animation-delay: 4s;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0) scale(1);
    }
    50% {
      transform: translateY(-30px) scale(1.1);
    }
  }

  .payment-container {
    position: relative;
    z-index: 1;
    width: 100%;
    max-width: 700px;
    padding: 0 20px;
  }

  .payment-success-card {
    background: #fff;
    border-radius: 24px;
    box-shadow: 0 8px 50px rgba(0, 0, 0, 0.1);
    padding: 40px 60px;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 0 auto;
    animation: cardEntry 0.8s cubic-bezier(0.61, 1.44, 0.55, 0.97) both;
  }

  @keyframes cardEntry {
    from {
      opacity: 0;
      transform: translateY(40px) scale(0.97);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .order-status-graphic img {
    width: 80px;
    height: 80px;
    margin-bottom: 16px;
  }

  .order-status-title {
    margin-top: 12px;
    font-size: 1.5rem;
    font-family: 'Poppins', sans-serif;
    font-weight: 600;
    margin-bottom: 8px;
    color: #18191f;
    text-align: center;
    letter-spacing: 0.01em;
    animation: fadeIn 1s 0.2s both;
  }

  .order-status-subtitle {
    font-size: 1rem;
    color: #6b7280;
    margin-bottom: 24px;
    font-weight: 400;
    text-align: center;
    letter-spacing: 0.02em;
    animation: fadeIn 1.1s 0.3s both;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(12px);
    }
    to {
      opacity: 1;
      transform: none;
    }
  }

  .order-items-box {
    width: 100%;
    background: #e8e9e9;
    border-radius: 12px;
    padding: 20px;
    margin-bottom: 28px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.03);
    min-height: 60px;
    animation: itemsListEntry 0.9s 0.2s both;
  }

  @keyframes itemsListEntry {
    from {
      opacity: 0;
      transform: translateY(25px);
    }
    to {
      opacity: 1;
      transform: none;
    }
  }

  .order-item-row {
    color: #1a1d1f;
    margin-bottom: 10px;
    font-weight: 400;
    font-size: 0.95rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    letter-spacing: 0.02em;
    opacity: 0;
    animation: fadeInOrderItem 0.7s forwards;
  }

  .order-item-row:nth-child(1) {
    animation-delay: 0.25s;
  }
  .order-item-row:nth-child(2) {
    animation-delay: 0.32s;
  }
  .order-item-row:nth-child(3) {
    animation-delay: 0.39s;
  }
  .order-item-row:nth-child(4) {
    animation-delay: 0.46s;
  }
  .order-item-row:last-child {
    margin-bottom: 0;
  }

  .order-item-image {
    width: 40px;
    height: 40px;
    object-fit: cover;
    border-radius: 8px;
    margin-right: 12px;
  }

  .order-item-details {
    flex-grow: 1;
    margin-right: 12px;
  }

  @keyframes fadeInOrderItem {
    from {
      opacity: 0;
      transform: translateY(18px);
    }
    to {
      opacity: 1;
      transform: none;
    }
  }

  .order-summary {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 14px;
    margin-bottom: 28px;
    animation: fadeIn 1.1s 0.45s both;
  }

  .os-row {
    display: flex;
    justify-content: space-between;
    font-size: 0.95rem;
    color: #474857;
  }

  .os-label {
    color: #6b7280;
    font-weight: 400;
  }

  .os-value {
    font-weight: 500;
    font-family: 'Inter', sans-serif;
  }

  .payment-amount-row {
    width: 100%;
    background: linear-gradient(135deg, #15393c 0%, #638659 100%);
    color: #fff;
    border-radius: 12px;
    padding: 18px 20px;
    font-size: 1.05rem;
    font-weight: 600;
    display: flex;
    justify-content: space-between;
    margin-bottom: 28px;
    animation: fadeIn 1.1s 0.6s both;
  }

  .amount-label {
    font-weight: 400;
  }

  .amount-value {
    font-size: 1.1rem;
  }

  .payment-action-buttons {
    display: flex;
    gap: 14px;
    width: 100%;
    justify-content: center;
    margin-bottom: 16px;
    animation: fadeIn 1.1s 0.7s both;
  }

  .payment-btn {
    padding: 12px 24px;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    font-size: 0.95rem;
    font-weight: 500;
    transition: all 0.2s;
    min-width: 48%;
    display: inline-flex;
    justify-content: center;
    align-items: center;
    color: #fff;
  }

  .payment-btn-secondary {
    background: #4b5563;
  }

  .payment-btn-secondary:hover {
    background: #1f2937;
  }

  .payment-btn-primary {
    background: #3b82f6;
  }

  .payment-btn-primary:hover {
    background: #2563eb;
  }

  .order-status-footer {
    color: #22c55e;
    font-size: 0.9rem;
    margin-bottom: 12px;
    text-align: center;
  }

  @media (max-width: 500px) {
    .payment-success-card {
      width: 92vw;
      padding: 24px 5vw;
    }

    .order-items-box,
    .payment-amount-row,
    .order-summary {
      padding: 16px;
    }

    .order-status-title {
      font-size: 1.3rem;
    }

    .order-status-graphic img {
      width: 50px;
      height: 50px;
    }

    .order-item-image {
      width: 32px;
      height: 32px;
    }

    .order-item-details {
      margin-right: 8px;
    }
  }
</style>

<div class="payment-success-wrapper">
  <div class="bg-decoration">
    <div class="circle circle-1"></div>
    <div class="circle circle-2"></div>
    <div class="circle circle-3"></div>
  </div>
  <div class="payment-container">
    <div class="payment-success-card">
      <div class="order-status-graphic">
        <img src="/photos/product_img/delevery_boy-removebg-preview.png" alt="Delivery" />
      </div>
      <h2 class="order-status-title">Order Status</h2>
      <div class="order-status-subtitle">Your package is on the way</div>
     <div class="order-items-box">
  <% items.forEach((item) => { %>
    <div class="order-item-row">
      <img src="<%= item.productId && item.productId.images && item.productId.images[0] && item.productId.images[0].length > 2
          ? (item.productId.images[0].startsWith('http')
              ? item.productId.images[0]
              : `/uploads/product-images/${item.productId.images[0]}`)
          : 'https://via.placeholder.com/40x40?text=No+Image' %>"
          alt="<%= item.productName || 'Unknown Product' %>"
          class="order-item-image"
          loading="lazy" />
      <span class="order-item-details"><%= item.productName %> (<%= item.variantSize %>) x <%= item.quantity %></span>
      <span><%= item.total %></span>
    </div>
  <% }); %>
</div>

      <div class="order-summary">
        <div class="os-row">
          <span class="os-label">Order ID</span>
          <span class="os-value"><%= orderId %></span>
        </div>
        <div class="os-row">
          <span class="os-label">Date & Time</span>
          <span class="os-value"><%= date %> at <%= time %></span>
        </div>
        <div class="os-row">
          <span class="os-label">Payment Method</span>
          <span class="os-value"><%= paymentMethod %></span>
        </div>
        <div class="os-row">
          <span class="os-label">Delivery Address</span>
          <span class="os-value"><%= deliveryAddress %></span>
        </div>
        <div class="os-row">
          <span class="os-label">Est. Delivery</span>
          <span class="os-value"><%= deliveryDate %></span>
        </div>
      </div>
      <div class="payment-amount-row">
        <span class="amount-label">Total Amount</span>
        <span class="amount-value"><%= amount %></span>
      </div>
      <div class="payment-action-buttons">
        <button class="payment-btn payment-btn-secondary" onclick="viewOrder()">View Order</button>
        <button class="payment-btn payment-btn-primary" onclick="continueShopping()">Continue Shopping</button>
      </div>
      <div class="order-status-footer">Your order is confirmed and in transit.</div>
    </div>
  </div>
</div>

<script>
  function viewOrder() {
    const orderId = '<%= orderId %>';
    window.location.href = '/orderDetails/' + orderId;
  }

  function continueShopping() {
    window.location.href = '/shopPage';
  }

  document.addEventListener('DOMContentLoaded', function () {
    createPaymentConfetti();
  });

  function createPaymentConfetti() {
    const colors = ['#667eea', '#764ba2', '#10b981', '#f59e0b', '#ef4444'];
    const confettiCount = 38;
    for (let i = 0; i < confettiCount; i++) {
      setTimeout(() => {
        const confetti = document.createElement('div');
        confetti.style.position = 'fixed';
        const size = Math.random() * 8 + 4 + 'px';
        confetti.style.width = size;
        confetti.style.height = size;
        confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
        confetti.style.left = Math.random() * window.innerWidth + 'px';
        confetti.style.top = '-10px';
        confetti.style.opacity = '0.8';
        confetti.style.borderRadius = Math.random() > 0.5 ? '50%' : '0';
        confetti.style.zIndex = '9999';
        confetti.style.pointerEvents = 'none';
        document.body.appendChild(confetti);
        const fall = confetti.animate(
          [
            { transform: 'translateY(0) rotate(0deg)', opacity: 0.8 },
            {
              transform: `translateY(${window.innerHeight + 10}px) rotate(${Math.random() * 360}deg)`,
              opacity: 0,
            },
          ],
          {
            duration: 3000 + Math.random() * 2000,
            easing: 'cubic-bezier(0.25, 0.46, 0.45, 0.94)',
          }
        );
        fall.onfinish = () => confetti.remove();
      }, i * 30);
    }
  }
</script>

<%- include('../../views/partials/user/footer') %>
