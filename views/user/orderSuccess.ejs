<%- include('../../views/partials/user/header') %>
<link href="https://fonts.googleapis.com/css?family=Poppins:600&display=swap"
  rel="stylesheet">
<link
  href="https://fonts.googleapis.com/css?family=Inter:400,500,600&display=swap"
  rel="stylesheet">

<style>
  :root {
    /* Light Mode Defaults (White Theme) */
    --bg-primary: #f9f9fa;
    --bg-gradient-start: #1d3d38;
    --bg-gradient-end: #112819;
    --card-bg: #fff;
    --text-primary: #18191f;
    --text-secondary: #6b7280;
    --text-muted: #474857;
    --border-light: #e5e5e5;
    --box-bg: #e8e9e9;
    --price-breakdown-bg: #f5f5f5;
    --shadow-light: rgba(0, 0, 0, 0.1);
    --shadow-medium: rgba(0, 0, 0, 0.03);
    --success-color: #22c55e;
    --primary-blue: #3b82f6;
    --secondary-gray: #4b5563;
    --discount-green: #10b981;
    --total-gradient-start: #15393c;
    --total-gradient-end: #638659;
    --coupon-bg: #f0f9ff;
    --coupon-border: #10b981;
  }

  body.dark-mode {
    /* Dark Mode Overrides */
    --bg-primary: #0f0f0f;
    --bg-gradient-start: #0a0a0a;
    --bg-gradient-end: #1a1a1a;
    --card-bg: #1a1a1a;
    --text-primary: #f5f5f5;
    --text-secondary: #a0a0a0;
    --text-muted: #8a8a8a;
    --border-light: #333333;
    --box-bg: #2a2a2a;
    --price-breakdown-bg: #242424;
    --shadow-light: rgba(0, 0, 0, 0.5);
    --shadow-medium: rgba(0, 0, 0, 0.2);
    --success-color: #22c55e;
    --primary-blue: #3b82f6;
    --secondary-gray: #e2c055; 
    --discount-green: #10b981;
    --total-gradient-start: #1a1a1a; 
    --total-gradient-end: #2a2a2a;
    --coupon-bg: #1a1a1a;
    --coupon-border: #10b981;
  }

  body {
    background: var(--bg-primary);
    font-family: 'Inter', sans-serif;
    line-height: 1.5;
    color: var(--text-primary);
    transition: background-color 0.3s ease, color 0.3s ease;
  }

  .payment-success-wrapper {
    margin: 0;
    padding: 20px 0;
    width: 100%;
    min-height: calc(100vh - 200px);
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--bg-gradient-start) 0%, var(--bg-gradient-end) 100%);
    position: relative;
    overflow: hidden;
    transition: background 0.3s ease;
  }

  .bg-decoration {
    position: absolute;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: 0;
    top: 0;
    left: 0;
  }

  .circle {
    position: absolute;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    animation: float 6s ease-in-out infinite;
    transition: background-color 0.3s ease;
  }

  body.dark-mode .circle {
    background: rgba(255, 255, 255, 0.05); 
  }

  .circle-1 {
    width: 300px;
    height: 300px;
    top: -100px;
    left: -100px;
    animation-delay: 0s;
  }

  .circle-2 {
    width: 200px;
    height: 200px;
    bottom: -50px;
    right: -50px;
    animation-delay: 2s;
  }

  .circle-3 {
    width: 150px;
    height: 150px;
    top: 50%;
    right: 10%;
    animation-delay: 4s;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0) scale(1);
    }
    50% {
      transform: translateY(-30px) scale(1.1);
    }
  }

  .payment-container {
    position: relative;
    z-index: 1;
    width: 100%;
    max-width: 700px;
    padding: 0 20px;
  }

  .payment-success-card {
    background: var(--card-bg);
    border-radius: 24px;
    box-shadow: 0 8px 50px var(--shadow-light);
    padding: 40px 60px;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 0 auto;
    animation: cardEntry 0.8s cubic-bezier(0.61, 1.44, 0.55, 0.97) both;
    transition: background-color 0.3s ease, box-shadow 0.3s ease, color 0.3s ease;
    color: var(--text-primary);
  }

  @keyframes cardEntry {
    from {
      opacity: 0;
      transform: translateY(40px) scale(0.97);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .order-status-graphic img {
    width: 80px;
    height: 80px;
    margin-bottom: 16px;
    transition: filter 0.3s ease;
  }

  body.dark-mode .order-status-graphic img {
    filter: brightness(1.2) contrast(1.1); 
  }

  .order-status-title {
    margin-top: 12px;
    font-size: 1.5rem;
    font-family: 'Poppins', sans-serif;
    font-weight: 600;
    margin-bottom: 8px;
    color: var(--text-primary);
    text-align: center;
    letter-spacing: 0.01em;
    animation: fadeIn 1s 0.2s both;
  }

  .order-status-subtitle {
    font-size: 1rem;
    color: var(--text-secondary);
    margin-bottom: 24px;
    font-weight: 400;
    text-align: center;
    letter-spacing: 0.02em;
    animation: fadeIn 1.1s 0.3s both;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(12px);
    }
    to {
      opacity: 1;
      transform: none;
    }
  }

  .order-items-box {
    width: 100%;
    background: var(--box-bg);
    border-radius: 12px;
    padding: 20px;
    margin-bottom: 28px;
    box-shadow: 0 2px 12px var(--shadow-medium);
    min-height: 60px;
    animation: itemsListEntry 0.9s 0.2s both;
    transition: background-color 0.3s ease, box-shadow 0.3s ease;
  }

  @keyframes itemsListEntry {
    from {
      opacity: 0;
      transform: translateY(25px);
    }
    to {
      opacity: 1;
      transform: none;
    }
  }

  .order-item-row {
    color: var(--text-primary);
    margin-bottom: 10px;
    font-weight: 400;
    font-size: 0.95rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    letter-spacing: 0.02em;
    opacity: 0;
    animation: fadeInOrderItem 0.7s forwards;
    transition: color 0.3s ease;
  }

  .order-item-row:nth-child(1) {
    animation-delay: 0.25s;
  }
  .order-item-row:nth-child(2) {
    animation-delay: 0.32s;
  }
  .order-item-row:nth-child(3) {
    animation-delay: 0.39s;
  }
  .order-item-row:nth-child(4) {
    animation-delay: 0.46s;
  }
  .order-item-row:last-child {
    margin-bottom: 0;
  }

  .order-item-image {
    width: 40px;
    height: 40px;
    object-fit: cover;
    border-radius: 8px;
    margin-right: 12px;
    transition: filter 0.3s ease;
  }

  body.dark-mode .order-item-image {
    filter: brightness(1.1); 
  }

  .order-item-details {
    flex-grow: 1;
    margin-right: 12px;
  }

  @keyframes fadeInOrderItem {
    from {
      opacity: 0;
      transform: translateY(18px);
    }
    to {
      opacity: 1;
      transform: none;
    }
  }

  .order-summary {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 14px;
    margin-bottom: 28px;
    animation: fadeIn 1.1s 0.45s both;
  }

  .os-row {
    display: flex;
    justify-content: space-between;
    font-size: 0.95rem;
    color: var(--text-muted);
    transition: color 0.3s ease, background-color 0.3s ease;
  }

  .os-label {
    color: var(--text-secondary);
    font-weight: 400;
  }

  .os-value {
    font-weight: 500;
    font-family: 'Inter', sans-serif;
    color: var(--text-primary);
  }

  .price-breakdown {
    width: 100%;
    background: var(--price-breakdown-bg);
    border-radius: 12px;
    padding: 20px;
    margin-bottom: 28px;
    animation: fadeIn 1.1s 0.55s both;
    transition: background-color 0.3s ease;
  }

  .price-breakdown-title {
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 16px;
    font-size: 0.95rem;
  }

  .price-row {
    display: flex;
    justify-content: space-between;
    font-size: 0.9rem;
    color: var(--text-secondary);
    margin-bottom: 12px;
    padding-bottom: 12px;
    border-bottom: 1px solid var(--border-light);
    transition: color 0.3s ease, border-color 0.3s ease;
  }

  .price-row:last-child {
    border-bottom: none;
    margin-bottom: 0;
    padding-bottom: 0;
  }

  .price-row.subtotal-row .price-value {
    color: var(--text-primary);
    font-weight: 500;
  }

  .price-row.discount-row .price-value {
    color: var(--discount-green);
    font-weight: 500;
  }

  .price-row.shipping-row .price-value {
    color: var(--text-primary);
    font-weight: 500;
  }

  .price-row.total-row {
    background: linear-gradient(135deg, var(--total-gradient-start) 0%, var(--total-gradient-end) 100%);
    border-radius: 8px;
    padding: 14px 16px;
    margin-bottom: 0;
    border: none;
    transition: background 0.3s ease;
  }

  .price-row.total-row .price-label {
    color: #fff;
    font-weight: 600;
  }

  .price-row.total-row .price-value {
    color: #fff;
    font-weight: 600;
    font-size: 1.05rem;
  }

 
  body.dark-mode .price-row.total-row {
    background: linear-gradient(135deg, var(--total-gradient-start) 0%, var(--total-gradient-end) 100%);
  }

  body.dark-mode .price-row.total-row .price-value {
    color: #e2c055;
  }

  .price-label {
    color: var(--text-secondary);
  }

  .price-value {
    font-weight: 500;
    text-align: right;
  }

  .payment-action-buttons {
    display: flex;
    gap: 14px;
    width: 100%;
    justify-content: center;
    margin-bottom: 16px;
    animation: fadeIn 1.1s 0.7s both;
  }

  .payment-btn {
    padding: 12px 24px;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    font-size: 0.95rem;
    font-weight: 500;
    transition: all 0.2s;
    min-width: 48%;
    display: inline-flex;
    justify-content: center;
    align-items: center;
    color: #fff;
  }

  .payment-btn-secondary {
    background: var(--secondary-gray);
    transition: background-color 0.3s ease;
  }

  body.dark-mode .payment-btn-secondary:hover {
    background: #b89440; 
  }

  .payment-btn-primary {
    background: var(--primary-blue);
    transition: background-color 0.3s ease;
  }

  .payment-btn-primary:hover {
    background: #2563eb;
  }

  .order-status-footer {
    color: var(--success-color);
    font-size: 0.9rem;
    margin-bottom: 12px;
    text-align: center;
    transition: color 0.3s ease;
  }

 
  @media (max-width: 768px) {
    .payment-success-wrapper {
      padding: 10px 0;
      min-height: calc(100vh - 150px);
    }

    .payment-container {
      padding: 0 15px;
      max-width: 95%;
    }

    .payment-success-card {
      padding: 30px 40px;
      border-radius: 20px;
    }

    .order-status-graphic img {
      width: 70px;
      height: 70px;
    }

    .order-status-title {
      font-size: 1.4rem;
    }

    .order-items-box,
    .price-breakdown {
      padding: 16px;
    }

    .order-item-row {
      font-size: 0.9rem;
      flex-wrap: wrap;
      gap: 8px;
    }

    .order-item-details {
      margin-right: 0;
      flex-basis: 60%;
    }

    .payment-action-buttons {
      flex-direction: column;
      gap: 10px;
    }

    .payment-btn {
      min-width: 100%;
    }
  }

  @media (max-width: 500px) {
    .payment-success-card {
      width: 92vw;
      padding: 24px 5vw;
      border-radius: 16px;
    }

    .order-items-box,
    .price-breakdown,
    .order-summary {
      padding: 16px;
    }

    .order-status-title {
      font-size: 1.3rem;
    }

    .order-status-graphic img {
      width: 50px;
      height: 50px;
    }

    .order-item-image {
      width: 32px;
      height: 32px;
    }

    .order-item-details {
      margin-right: 8px;
      flex-basis: 50%;
      font-size: 0.85rem;
    }

    .os-row {
      font-size: 0.9rem;
      flex-direction: column;
      gap: 4px;
      align-items: flex-start;
    }

    .price-row {
      font-size: 0.85rem;
    }

    .price-breakdown-title {
      font-size: 0.9rem;
    }
  }

  @media (max-width: 360px) {
    .payment-success-card {
      padding: 20px 4vw;
    }

    .order-status-title {
      font-size: 1.2rem;
    }

    .order-item-row {
      flex-direction: column;
      align-items: flex-start;
      gap: 4px;
    }

    .order-item-image {
      margin-right: 0;
      margin-bottom: 4px;
    }
  }

  /* Landscape orientation adjustments for small screens */
  @media (max-height: 500px) and (orientation: landscape) {
    .payment-success-wrapper {
      align-items: stretch;
      padding: 10px 0;
    }

    .payment-success-card {
      padding: 20px 30px;
      margin: 10px auto;
      max-height: 90vh;
      overflow-y: auto;
    }

    .order-summary {
      max-height: 200px;
      overflow-y: auto;
    }
  }
</style>

<div class="payment-success-wrapper">
  <div class="bg-decoration">
    <div class="circle circle-1"></div>
    <div class="circle circle-2"></div>
    <div class="circle circle-3"></div>
  </div>
  <div class="payment-container">
    <div class="payment-success-card">
      <div class="order-status-graphic">
        <img src="/photos/product_img/delevery_boy-removebg-preview.png"
          alt="Delivery" />
      </div>
      <h2 class="order-status-title">Order Status</h2>
      <div class="order-status-subtitle">Your package is on the way</div>

      <div class="order-items-box">
        <% items.forEach((item) => { %>
        <div class="order-item-row">
          <img
            src="<%= item.productId && item.productId.images && item.productId.images[0] && item.productId.images[0].length > 2
                ? (item.productId.images[0].startsWith('http')
                    ? item.productId.images[0]
                    : `/uploads/product-images/${item.productId.images[0]}`)
                : 'https://via.placeholder.com/40x40?text=No+Image' %>"
            alt="<%= item.productName || 'Unknown Product' %>"
            class="order-item-image"
            loading="lazy" />
          <span class="order-item-details"><%= item.productName %> (<%=
            item.variantSize %>) x <%= item.quantity %></span>
          <span><%= item.total %></span>
        </div>
        <% }); %>
      </div>

      <div class="order-summary">
        <div class="os-row">
          <span class="os-label">Order ID</span>
          <span class="os-value"><%= orderId %></span>
        </div>
        <div class="os-row">
          <span class="os-label">Date & Time</span>
          <span class="os-value"><%= date %> at <%= time %></span>
        </div>
        <div class="os-row">
          <span class="os-label">Payment Method</span>
          <span class="os-value"><%= paymentMethod %></span>
        </div>
        <div class="os-row">
          <span class="os-label">Delivery Address</span>
          <span class="os-value"><%= deliveryAddress %></span>
        </div>
        <div class="os-row">
          <span class="os-label">Est. Delivery</span>
          <span class="os-value"><%= deliveryDate %></span>
        </div>
        <% if (couponApplied && couponCode) { %>
        <div class="os-row coupon-row"
          style="background: var(--coupon-bg); padding: 10px; border-radius: 6px; border-left: 3px solid var(--coupon-border);">
          <span class="os-label">Coupon Code Applied</span>
          <span class="os-value"
            style="color: var(--discount-green); font-weight: 600;"><%=
            couponCode %></span>
        </div>
        <% } %>
      </div>

      <!-- Price Breakdown Section -->
      <div class="price-breakdown">
        <div class="price-breakdown-title">Price Breakdown</div>

        <div class="price-row subtotal-row">
          <span class="price-label">Subtotal</span>
          <span class="price-value"><%= subtotal %></span>
        </div>

        <div class="price-row discount-row">
          <span class="price-label">Discount</span>
          <span
            class="price-value <%= discount === 'â‚¹0' ? 'text-muted' : '' %>"><%=
            discount %></span>
        </div>

        <div class="price-row shipping-row">
          <span class="price-label">Shipping</span>
          <span class="price-value"><%= shipping %></span>
        </div>

        <div class="price-row total-row">
          <span class="price-label">Total Amount</span>
          <span class="price-value"><%= amount %></span>
        </div>
      </div>

      <div class="payment-action-buttons">
        <button class="payment-btn payment-btn-secondary"
          onclick="viewOrder()">View Order</button>
        <button class="payment-btn payment-btn-primary"
          onclick="continueShopping()">Continue Shopping</button>
      </div>
      <div class="order-status-footer">Your order is confirmed and in
        transit.</div>
    </div>
  </div>
</div>

<script>
  function viewOrder() {
    const orderId = '<%= orderId %>';
    window.location.href = '/orderDetails/' + orderId;
  }

  function continueShopping() {
    window.location.href = '/shopPage';
  }

  document.addEventListener('DOMContentLoaded', function () {
    createPaymentConfetti();
    
   
    const body = document.body;
    
   
    const savedTheme = localStorage.getItem('sentique-theme');
    if (savedTheme === 'dark') {
      body.classList.add('dark-mode');
    }
    
   
    window.addEventListener('storage', function(e) {
      if (e.key === 'sentique-theme') {
        if (e.newValue === 'dark') {
          body.classList.add('dark-mode');
        } else {
          body.classList.remove('dark-mode');
        }
      }
    });
  });

  function createPaymentConfetti() {
    const colors = ['#667eea', '#764ba2', '#10b981', '#f59e0b', '#ef4444'];
    const confettiCount = 38;
    for (let i = 0; i < confettiCount; i++) {
      setTimeout(() => {
        const confetti = document.createElement('div');
        confetti.style.position = 'fixed';
        const size = Math.random() * 8 + 4 + 'px';
        confetti.style.width = size;
        confetti.style.height = size;
        confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
        confetti.style.left = Math.random() * window.innerWidth + 'px';
        confetti.style.top = '-10px';
        confetti.style.opacity = '0.8';
        confetti.style.borderRadius = Math.random() > 0.5 ? '50%' : '0';
        confetti.style.zIndex = '9999';
        confetti.style.pointerEvents = 'none';
        document.body.appendChild(confetti);
        const fall = confetti.animate(
          [
            { transform: 'translateY(0) rotate(0deg)', opacity: 0.8 },
            {
              transform: `translateY(${window.innerHeight + 10}px) rotate(${Math.random() * 360}deg)`,
              opacity: 0,
            },
          ],
          {
            duration: 3000 + Math.random() * 2000,
            easing: 'cubic-bezier(0.25, 0.46, 0.45, 0.94)',
          }
        );
        fall.onfinish = () => confetti.remove();
      }, i * 30);
    }
  }
</script>

