<style>
    /* =========================================
       1. THEME VARIABLES (Distinct Light vs Dark)
       ========================================= */
    :root {
        /* --- Light Mode (Fresh & Clean) --- */
        --bg-page: #f9fafb;
        --bg-card: #ffffff;
        --text-head: #111827;
        --text-body: #4b5563;
        --border-color: #e5e7eb;
        
        /* Accents */
        --accent-primary: #059669; /* Emerald Green */
        --accent-glow: rgba(5, 150, 105, 0.2);
        --btn-text: #ffffff;
        
        /* Premium Card Specifics (Light) */
        --prem-bg: linear-gradient(135deg, #1f2937 0%, #000000 100%);
        --prem-border: #d4a574;
        --prem-text: #d4a574;
    }

    /* --- Dark Mode (Golden Luxury) --- */
    body.dark-mode {
        --bg-page: #121212; /* Matches your header */
        --bg-card: #1e1e1e;
        --text-head: #f3f4f6;
        --text-body: #9ca3af;
        --border-color: #333333;
        
        /* Accents */
        --accent-primary: #f5d863; /* Gold */
        --accent-glow: rgba(212, 165, 116, 0.2);
        --btn-text: #121212;
        
        /* Premium Card Specifics (Dark) */
        --prem-bg: linear-gradient(135deg, #000000 0%, #2c1810 100%);
        --prem-border: #fcd34d;
        --prem-text: #fcd34d;
    }

    /* =========================================
       2. LAYOUT & ANIMATIONS
       ========================================= */
    .coupon-page-wrapper {
        display: flex;
        max-width: 1400px;
        margin: 40px auto;
        gap: 30px;
        padding: 0 20px;
        animation: fadeInPage 0.8s ease-out;
    }

    @keyframes fadeInPage {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .sidebar-section { flex: 0 0 280px; }
    .content-section { flex: 1; }

    /* Header Area */
    .page-title-box {
        margin-bottom: 30px;
        text-align: center;
    }
    .page-title-box h1 {
        font-size: 2.5rem;
        font-weight: 800;
        color: var(--text-head);
        margin-bottom: 8px;
        letter-spacing: -0.5px;
    }
    .page-title-box p { color: var(--text-body); font-size: 1.1rem; }

    /* Controls */
    .controls-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 30px;
        gap: 20px;
        flex-wrap: wrap;
    }
    
    .search-wrap {
        position: relative;
        flex: 1;
        min-width: 250px;
    }
    .search-wrap input {
        width: 100%;
        padding: 12px 15px 12px 45px;
        border-radius: 10px;
        border: 1px solid var(--border-color);
        background: var(--bg-card);
        color: var(--text-head);
        transition: 0.3s;
    }
    .search-wrap input:focus {
        outline: none;
        border-color: var(--accent-primary);
        box-shadow: 0 0 0 4px var(--accent-glow);
    }
    .search-wrap i {
        position: absolute; left: 15px; top: 50%; transform: translateY(-50%);
        color: var(--text-body);
    }

    .filter-wrap { display: flex; gap: 10px; }
    .filter-btn {
        padding: 10px 20px;
        border-radius: 8px;
        border: 1px solid var(--border-color);
        background: var(--bg-card);
        color: var(--text-head);
        cursor: pointer;
        font-weight: 600;
        transition: 0.3s;
    }
    .filter-btn:hover { transform: translateY(-2px); }
    .filter-btn.active {
        background: var(--accent-primary);
        border-color: var(--accent-primary);
        color: var(--btn-text);
        box-shadow: 0 4px 12px var(--accent-glow);
    }

    /* =========================================
       3. COUPON CARDS (Regular vs Premium)
       ========================================= */
    .coupons-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 25px;
    }

    .c-card {
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        border-radius: 16px;
        padding: 24px;
        position: relative;
        overflow: hidden;
        cursor: pointer;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        min-height: 240px;
    }

    .c-card:hover {
        transform: translateY(-8px) scale(1.02);
        box-shadow: 0 15px 30px rgba(0,0,0,0.1);
        border-color: var(--accent-primary);
    }

    /* --- Regular Style --- */
    .c-card.regular { border-left: 5px solid var(--accent-primary); }
    .c-card.regular .c-badge {
        background: var(--accent-glow);
        color: var(--accent-primary);
    }
    .c-card.regular .c-code { color: var(--accent-primary); }

    /* --- Premium Style (Golden) --- */
    .c-card.premium {
        background: var(--prem-bg);
        border: 1px solid var(--prem-border);
    }
    .c-card.premium h3, 
    .c-card.premium .c-type,
    .c-card.premium .c-desc { color: rgba(255,255,255,0.9) !important; }
    
    .c-card.premium .c-badge {
        background: linear-gradient(45deg, #d4a574, #fcd34d);
        color: #000;
        box-shadow: 0 0 15px rgba(212, 165, 116, 0.5);
    }
    
    /* Shimmer Animation for Premium */
    .c-card.premium::after {
        content: "";
        position: absolute; top: 0; left: -100%; width: 50%; height: 100%;
        background: linear-gradient(to right, transparent, rgba(255,255,255,0.2), transparent);
        transform: skewX(-25deg);
        animation: shimmer 3s infinite;
    }
    @keyframes shimmer { 100% { left: 200%; } }

    /* Card Content */
    .c-head { display: flex; justify-content: space-between; margin-bottom: 15px; }
    .c-type { font-size: 0.75rem; text-transform: uppercase; font-weight: 700; color: var(--text-body); letter-spacing: 1px; }
    .c-title { font-size: 1.3rem; font-weight: 700; color: var(--text-head); margin-top: 4px; }
    .c-badge { padding: 6px 12px; border-radius: 8px; font-weight: 800; font-size: 1rem; height: fit-content; }
    .c-desc { color: var(--text-body); font-size: 0.9rem; line-height: 1.5; margin-bottom: 20px; }
    
    .c-footer {
        margin-top: auto;
        padding-top: 15px;
        border-top: 1px dashed var(--border-color);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .c-code { font-family: monospace; font-size: 1.1rem; font-weight: 700; letter-spacing: 1px; }
    .c-btn { background: none; border: none; color: var(--text-body); cursor: pointer; transition: 0.2s; }
    .c-btn:hover { color: var(--accent-primary); transform: scale(1.1); }

    /* Statuses */
    .c-card.used, .c-card.expired { opacity: 0.5; filter: grayscale(1); pointer-events: none; }

    /* =========================================
       4. MODAL DESIGN
       ========================================= */
    .modal-backdrop {
        display: none;
        position: fixed; top: 0; left: 0; width: 100%; height: 100%;
        background: rgba(0,0,0,0.7);
        z-index: 2000;
        backdrop-filter: blur(5px);
        justify-content: center;
        align-items: center;
    }
    .modal-backdrop.active { display: flex; animation: fadeIn 0.3s; }
    
    .modal-panel {
        background: var(--bg-card);
        width: 95%; max-width: 550px;
        border-radius: 16px;
        padding: 30px;
        position: relative;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
        animation: slideUp 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        border: 1px solid var(--border-color);
    }
    
    .modal-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px; }
    .modal-header h2 { font-size: 1.8rem; color: var(--accent-primary); }
    .close-modal { background: none; border: none; font-size: 1.5rem; color: var(--text-body); cursor: pointer; }
    
    .modal-grid { 
        display: grid; grid-template-columns: 1fr 1fr; gap: 15px; margin-bottom: 25px; 
        background: rgba(0,0,0,0.03); padding: 15px; border-radius: 10px;
    }
    body.dark-mode .modal-grid { background: rgba(255,255,255,0.05); }

    .detail-box label { display: block; font-size: 0.75rem; color: var(--text-body); text-transform: uppercase; margin-bottom: 4px; }
    .detail-box span { font-size: 1rem; font-weight: 700; color: var(--text-head); }

    .big-code {
        background: var(--bg-page);
        border: 2px dashed var(--accent-primary);
        color: var(--accent-primary);
        font-size: 1.8rem;
        font-weight: 800;
        text-align: center;
        padding: 15px;
        border-radius: 10px;
        margin-bottom: 20px;
        letter-spacing: 3px;
    }

    .modal-btn {
        width: 100%; padding: 15px; border: none; border-radius: 10px;
        background: var(--accent-primary); color: var(--btn-text);
        font-size: 1rem; font-weight: 700; cursor: pointer;
        transition: 0.3s;
    }
    .modal-btn:hover { opacity: 0.9; transform: translateY(-2px); }

    @keyframes slideUp { from { transform: translateY(50px); opacity: 0; } to { transform: translateY(0); opacity: 1; } }

    /* Responsive */
    @media (max-width: 900px) { .coupon-page-wrapper { flex-direction: column; } .sidebar-section { width: 100%; } }
</style>

<div class="coupon-page-wrapper">
    <div class="sidebar-section">
        <%- include('../partials/user/profile-sidebar.ejs', { user: user, activePage: 'coupons' }) %>
    </div>

    <div class="content-section">
        
        <div class="page-title-box">
            <h1>Your Exclusive Rewards</h1>
            <p>Discover savings tailored just for you.</p>
        </div>

        <div class="controls-row">
            <div class="search-wrap">
                <i class="fas fa-search"></i>
                <input type="text" id="searchInput" placeholder="Search for coupons...">
            </div>
            <div class="filter-wrap">
                <button class="filter-btn active" data-filter="all">All</button>
                <button class="filter-btn" data-filter="percentage">% Off</button>
                <button class="filter-btn" data-filter="flat">Flat â‚¹</button>
            </div>
        </div>

        <div id="couponsGrid" class="coupons-grid">
            <div style="padding: 40px; text-align: center; grid-column: 1/-1;">
                <i class="fas fa-spinner fa-spin" style="font-size: 2rem; color: var(--accent-primary);"></i>
            </div>
        </div>
        
        <div id="pagination" style="display: flex; justify-content: center; margin-top: 30px; gap: 10px;"></div>
    </div>
</div>

<div class="modal-backdrop" id="couponModal">
    <div class="modal-panel">
        <div class="modal-header">
            <h2 id="mTitle">Coupon Title</h2>
            <button class="close-modal" onclick="closeModal()">&times;</button>
        </div>

        <p id="mDesc" style="color: var(--text-body); margin-bottom: 20px; line-height: 1.6;">
            Detailed description of the coupon goes here.
        </p>

        <div class="big-code" id="mCode">CODE123</div>

        <div class="modal-grid">
            <div class="detail-box">
                <label>Discount Value</label>
                <span id="mValue">20%</span>
            </div>
            <div class="detail-box">
                <label>Min Purchase</label>
                <span id="mMin">â‚¹500</span>
            </div>
            <div class="detail-box">
                <label>Max Discount</label>
                <span id="mMax">â‚¹200</span>
            </div>
            <div class="detail-box">
                <label>Valid Until</label>
                <span id="mExpiry">--</span>
            </div>
            <div class="detail-box">
                <label>Usage Type</label>
                <span id="mType">Single Use</span>
            </div>
            <div class="detail-box">
                <label>Remaining Uses</label>
                <span id="mRemaining">1</span>
            </div>
        </div>

        <button class="modal-btn" onclick="copyModalCode()">
            <i class="fas fa-copy"></i> Copy & Apply
        </button>
    </div>
</div>

<script>
    let allCoupons = [];
    let currentFilter = 'all';
    let searchQuery = '';

    document.addEventListener('DOMContentLoaded', () => {
        loadCoupons(1);

        document.querySelectorAll('.filter-btn').forEach(btn => {
            btn.addEventListener('click', (e) => {
                document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
                e.target.classList.add('active');
                currentFilter = e.target.dataset.filter;
                renderCoupons();
            });
        });

        document.getElementById('searchInput').addEventListener('input', (e) => {
            searchQuery = e.target.value.toLowerCase();
            renderCoupons();
        });
        
        document.getElementById('couponModal').addEventListener('click', (e) => {
            if(e.target.id === 'couponModal') closeModal();
        });
    });

    // --- HELPER TO FIX INVALID DATE ---
    function safeDateFormat(dateStr) {
        if (!dateStr) return 'N/A';
        const d = new Date(dateStr);
        if (isNaN(d.getTime())) return 'N/A';
        return d.toLocaleDateString('en-GB', { day: 'numeric', month: 'short', year: 'numeric' });
    }

    async function loadCoupons(page) {
        try {
            const res = await fetch(`/api/coupons?page=${page}&limit=10`);
            const data = await res.json();
            if(data.success) {
                allCoupons = data.coupons;
                renderCoupons();
            }
        } catch(err) {
            console.error(err);
            document.getElementById('couponsGrid').innerHTML = '<p style="text-align:center;">Failed to load coupons.</p>';
        }
    }

    function renderCoupons() {
        const grid = document.getElementById('couponsGrid');
        
        const filtered = allCoupons.filter(c => {
            const matchesType = currentFilter === 'all' || 
                (currentFilter === 'percentage' && c.discountType === 'percentage') ||
                (currentFilter === 'flat' && c.discountType === 'flat');
            const matchesSearch = c.code.toLowerCase().includes(searchQuery) || c.title.toLowerCase().includes(searchQuery);
            return matchesType && matchesSearch;
        });

        if(filtered.length === 0) {
            grid.innerHTML = '<p style="text-align:center; grid-column:1/-1; padding:40px; color: var(--text-body);">No coupons found.</p>';
            return;
        }

        grid.innerHTML = filtered.map(c => {
            const isPremium = c.usageType === 'once';
            const status = getStatus(c);
            const discount = c.discountType === 'percentage' ? `${c.discountValue}% OFF` : `â‚¹${c.discountValue} OFF`;
            
            return `
            <div class="c-card ${isPremium ? 'premium' : 'regular'} ${status}" onclick="openModal('${c.id}')">
                <div class="c-head">
                    <div>
                        <span class="c-type">${isPremium ? 'ðŸ‘‘ Premium Exclusive' : 'Standard Offer'}</span>
                        <h3 class="c-title">${c.title}</h3>
                    </div>
                    <div class="c-badge">${discount}</div>
                </div>
                
                <p class="c-desc">${c.description || 'Terms and conditions apply.'}</p>
                
                <div class="c-footer">
                    <span class="c-code">${status === 'active' || status === 'premium' ? c.code : 'â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢'}</span>
                    <button class="c-btn"><i class="fas fa-arrow-right"></i> Details</button>
                </div>
            </div>
            `;
        }).join('');
    }

    function getStatus(c) {
        const now = new Date();
        // Handle variable names: check both expireDate and expiryDate
        const expiry = c.expireDate || c.expiryDate;
        
        if (!expiry) return 'active'; // No expiry set = Active

        const expDate = new Date(expiry);
        
        // IMPORTANT: Set expiry time to End of Day (23:59:59) to prevent premature expiry
        expDate.setHours(23, 59, 59, 999);

        if (expDate < now) return 'expired';

        if (c.usageType === 'once' && c.userHasUsed) return 'used';
        
        return c.usageType === 'once' ? 'premium' : 'active';
    }

    function openModal(id) {
        const c = allCoupons.find(i => i.id === id);
        if(!c) return;

        document.getElementById('mTitle').innerText = c.title;
        document.getElementById('mDesc').innerText = c.description || 'No description available.';
        document.getElementById('mCode').innerText = c.code;
        
        // Details
        document.getElementById('mValue').innerText = c.discountType === 'percentage' ? `${c.discountValue}%` : `â‚¹${c.discountValue}`;
        document.getElementById('mMin').innerText = `â‚¹${c.minPurchase}`;
        document.getElementById('mMax').innerText = c.maxDiscountAmount ? `â‚¹${c.maxDiscountAmount}` : 'No Limit';
        
        // Fix for Invalid Date in Modal
        const expiryVar = c.expireDate || c.expiryDate;
        document.getElementById('mExpiry').innerText = safeDateFormat(expiryVar);
        
        document.getElementById('mType').innerText = c.usageType === 'once' ? 'One-Time Use' : 'Multiple Use';
        document.getElementById('mRemaining').innerText = c.usageType === 'once' ? '1' : (c.limit - c.used);

        document.getElementById('couponModal').classList.add('active');
    }

    function closeModal() {
        document.getElementById('couponModal').classList.remove('active');
    }

    function copyModalCode() {
        const code = document.getElementById('mCode').innerText;
        navigator.clipboard.writeText(code);
        const btn = document.querySelector('.modal-btn');
        const original = btn.innerHTML;
        btn.innerHTML = '<i class="fas fa-check"></i> Copied!';
        setTimeout(() => btn.innerHTML = original, 2000);
    }
</script>

