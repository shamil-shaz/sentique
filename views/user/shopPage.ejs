<script>
  // Toast notification function
  function showToast(type, title, message, duration = 3000) {
    let container = document.getElementById('toastContainer');
    if (!container) {
      container = document.createElement('div');
      container.id = 'toastContainer';
      container.className = 'toast-container';
      document.body.appendChild(container);
    }

    const toast = document.createElement('div');
    toast.className = `toast ${type}`;

    const icons = {
      success: 'fas fa-check-circle',
      info: 'fas fa-info-circle',
      error: 'fas fa-times-circle'
    };

    toast.innerHTML = `
      <div class="toast-indicator"></div>
      <div class="toast-icon">
        <i class="${icons[type]}"></i>
      </div>
      <div class="toast-content">
        <div class="toast-title">${title}</div>
        <div class="toast-message">${message}</div>
      </div>
      <button class="toast-close" onclick="this.closest('.toast').remove()">
        <i class="fas fa-times"></i>
      </button>
      <div class="toast-progress"></div>
    `;

    container.appendChild(toast);

    setTimeout(() => {
      if (toast.parentElement) {
        toast.classList.add('removing');
        setTimeout(() => toast.remove(), 300);
      }
    }, duration);
  }

  // Filter Toggle
  (function(){
    const toggleBtn = document.getElementById('toggleFilters');
    const filters = document.getElementById('filters');
    const overlay = document.getElementById('filterOverlay');
    
    toggleBtn && toggleBtn.addEventListener('click', function(){
      filters.classList.toggle('show');
      overlay.classList.toggle('show');
      toggleBtn.innerHTML = filters.classList.contains('show') ? 
        '<i class="fa fa-times"></i> Close Filters' : 
        '<i class="fa fa-filter"></i> Filters';
    });

    // Close filters when clicking overlay
    overlay && overlay.addEventListener('click', function(){
      filters.classList.remove('show');
      overlay.classList.remove('show');
      toggleBtn.innerHTML = '<i class="fa fa-filter"></i> Filters';
    });
  })();

  // Clear filters function
  window.clearFilters = function() {
    const form = document.getElementById('filterForm');
    const inputs = form.querySelectorAll('input[type="checkbox"], input[type="radio"]');
    inputs.forEach(input => {
      if (input.name === 'priceRange' && input.value === '') {
        input.checked = true;
      } else {
        input.checked = false;
      }
    });
  };

  // Reset search function
  function resetSearch() {
    const input = document.getElementById("shopSearchInput");
    input.value = "";
    window.location.href = "/shopPage";
  }

  // Wishlist functionality with improved toast notifications
  document.addEventListener('click', async (e) => {
    if (e.target.closest('.wishlist-icon')) {
      e.preventDefault();
      const icon = e.target.closest('.wishlist-icon');
      const productId = icon.dataset.id;

      if (!productId || productId.length !== 24) {
        showToast('error', '‚ö†Ô∏è Error', 'Invalid product ID');
        return;
      }

      try {
        const res = await fetch('/wishlist/add', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ productId })
        });

        const data = await res.json();

        if (data.success) {
          icon.querySelector('i').style.color = 'red';
          showToast(
            'success',
            '‚ù§Ô∏è Added to Wishlist',
            'Product added to your wishlist successfully!'
          );
        } else {
          showToast(
            'info',
            'üíù Already in Wishlist',
            'This product is already in your wishlist.'
          );
        }
      } catch (err) {
        console.error('Wishlist error:', err);
        showToast(
          'error',
          '‚ö†Ô∏è Server Error',
          'Failed to add to wishlist. Please try again.'
        );
      }
    }
  });
</script>

