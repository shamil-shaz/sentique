<%- include("../partials/user/header.ejs") %>

<style>
  /* --- Layout --- */
  .site-wrapper {
    max-width: 1200px;
    margin: 20px auto;
    padding: 0 15px;
  }

  .layout {
    display: flex;
    gap: 30px;
    align-items: flex-start;
  }

  /* Sidebar (filters) */
  .filters {
    width: 260px;
    border: 1px solid #e6e6e6;
    padding: 16px;
    border-radius: 8px;
    background: #fafafa;
    height: fit-content;
    box-sizing: border-box;
  }
  .filters h4 { margin: 0 0 8px; font-size: 16px; }
  .filters label { display:block; margin:6px 0; font-size:14px; cursor:pointer; }

  /* Mobile filter toggle button */
  .filters-toggle {
    display: none;
    width: 100%;
    text-align: left;
    margin-bottom: 12px;
    background: #fff;
    border: 1px solid #ddd;
    padding: 8px 12px;
    border-radius: 6px;
    cursor: pointer;
  }

  /* Products column (main) */
  .products { flex: 1; }

  .sort-bar {
    display:flex;
    justify-content:flex-end;
    margin-bottom: 16px;
  }
  .sort-bar select { min-width: 170px; }

  /* --- Product Grid --- */
  .product-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr); /* desktop: 3 per row */
    gap: 20px;
  }

  .product-card {
    border: 1px solid #eee;
    border-radius: 10px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    background: #fff;
    transition: box-shadow .18s ease;
    height: 100%;
  }
  .product-card:hover { box-shadow: 0 6px 18px rgba(0,0,0,0.06); }

  .image-wrap {
    width: 100%;
    height: 350px;
    overflow: hidden;
    position: relative;
  }
  .image-wrap img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Wishlist & Cart icons overlay */
  .product-icons {
    position: absolute;
    top: 8px;
    right: 8px;
    display: flex;
    flex-direction: column;
    gap: 8px;
    z-index: 10;
  }
  .product-icons a {
    background: rgba(255,255,255,0.9);
    border-radius: 50%;
    padding: 8px;
    color: #de5752;
    font-size: 16px;
    text-align: center;
    transition: all 0.2s ease;
  }
  .product-icons a:hover {
    background: #d9534f;
    color: #fff;
    transform: scale(1.1);
  }

  .product-body {
    padding: 12px 14px;
    display: flex;
    flex-direction: column;
    gap: 8px;
    flex: 1;
  }
  .product-body h5 {
    margin: 0;
    font-size: 16px;
    line-height: 1.2;
    font-weight: 600;
  }
  .product-body .desc {
    margin: 0;
    font-size: 13px;
    color: #555;
    max-height: 44px;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .product-meta {
    margin-top: auto;
    display:flex;
    flex-direction:column;
    gap:6px;
  }

  .price {
    font-weight: 700;
    font-size: 16px;
    color: #d9534f;
  }
  .old-price {
    text-decoration: line-through;
    color: #888;
    font-size: 13px;
    margin-left: 8px;
  }

  /* Pagination */
  .pagination {
    display:flex;
    justify-content:center;
    gap:8px;
    margin-top: 20px;
    flex-wrap:wrap;
  }
  .page-link {
    border:1px solid #ddd;
    padding:6px 10px;
    border-radius:6px;
    text-decoration:none;
    color:#333;
  }
  .page-item.active .page-link {
    background:#333;
    color:#fff;
    border-color:#333;
  }

  /* Shop Page Search Bar */
  .shop-search-bar {
    margin-bottom: 10px;
    margin-top: 10px;
    display: flex;
    justify-content: center;
  }
  .shop-search-form {
    width: 100%;
    max-width: 400px;
    position: relative;
  }
  .shop-search-input {
    width: 100%;
    padding: 10px 40px 10px 15px;
    border-radius: 6px;
    border: 1px solid #ccc;
    font-size: 14px;
    box-sizing: border-box;
  }
  .shop-search-btn {
    position: absolute;
    right: 5px;
    top: 50%;
    transform: translateY(-50%);
    border: none;
    background: none;
    cursor: pointer;
  }
  .shop-search-btn i {
    font-size: 16px;
    color: #555;
  }

  @media (max-width: 480px) {
    .shop-search-form { max-width: 100%; }
  }

  /* Tablet screens */
  @media (min-width: 768px) and (max-width: 991px) {
    .product-grid { grid-template-columns: repeat(2, 1fr); }
    .filters { width: 220px; }
  }

  /* Mobile screens */
  @media (max-width: 767px) {
    .layout { flex-direction: column; gap: 16px; }
    .filters {
      position: fixed;
      top: 0;
      left: -100%;
      width: 75%;
      max-width: 280px;
      height: 100%;
      background: #fafafa;
      padding: 20px;
      border-right: 1px solid #ddd;
      border-radius: 0;
      box-shadow: 2px 0 8px rgba(0,0,0,0.2);
      transition: left 0.3s ease;
      z-index: 1000;
    }
    .filters.show { left: 0; }
    .filters-toggle { display:block; }
    .product-grid { grid-template-columns: repeat(1, 1fr); }
  }
</style>

<!-- Search Bar -->
<div class="shop-search-bar">
  <form method="GET" action="/shopPage" class="shop-search-form">
    <input 
      type="text" 
      name="search" 
      placeholder="Search products..." 
      value="<%= search ? search : '' %>"
      class="shop-search-input"
    >
    <button type="submit" class="shop-search-btn">
      <i class="fa fa-search"></i>
    </button>
  </form>
</div>

<div class="site-wrapper">
  <button id="toggleFilters" class="filters-toggle">Filters ▾</button>
  <div class="layout">

    <!-- Sidebar -->
    <aside id="filters" class="filters">
      <h4>Filters</h4>
      <form id="filterForm" method="GET">
        <h5 style="margin-top:8px">Category</h5>
        <% categories.forEach(cat => { %>
          <label>
            <input 
              type="checkbox" 
              name="categorys" 
              value="<%= cat._id %>"
              <%= selectedCategories.includes(cat._id.toString()) ? "checked" : "" %> >
            <%= cat.name %>
          </label>
        <% }) %>

        <h5 style="margin-top:8px">Brands</h5>
        <% brands.forEach(brand => { %>
          <label>
            <input 
              type="checkbox" 
              name="brands" 
              value="<%= brand._id %>"
              <%= selectedBrands && selectedBrands.includes(brand._id.toString()) ? "checked" : "" %> >
            <%= brand.brandName %>
          </label>
        <% }) %>

        <button type="submit" class="btn btn-primary btn-sm mt-2">Apply Filters</button>
      </form>
    </aside>

    <!-- Products -->
    <main class="products">
      <div class="sort-bar">
        <form method="GET">
          <% if (selectedCategories) { selectedCategories.forEach(c => { %>
            <input type="hidden" name="categorys" value="<%= c %>">
          <% }) } %>
          <% if (selectedBrands) { selectedBrands.forEach(b => { %>
            <input type="hidden" name="brands" value="<%= b %>">
          <% }) } %>
          <select name="sort" class="form-select form-select-sm" onchange="this.form.submit()">
            <option value="">Sort By</option>
            <option value="newest" <%= sort === 'newest' ? 'selected' : '' %>>Newest</option>
            <option value="priceLow" <%= sort === 'priceLow' ? 'selected' : '' %>>Price: Low to High</option>
            <option value="priceHigh" <%= sort === 'priceHigh' ? 'selected' : '' %>>Price: High to Low</option>
          </select>
        </form>
      </div>

      <section class="product-grid">
        <% if (products && products.length > 0) { %>
          <% products.forEach(product => { %>
            <article class="product-card">
              <div class="image-wrap">
                <a href="/productDetails?id=<%= product._id %>">
                  <% if (product.images && product.images.length > 0) { %>
                    <% let firstImage = product.images[0]; %>
                    <% if (typeof firstImage === 'string') { %>
                      <img src="<%= firstImage %>" alt="<%= product.productName %>">
                    <% } else { %>
                      <img src="<%= firstImage %>" alt="<%= product.productName %>">
                    <% } %>
                  <% } else { %>
                    <img src="https://via.placeholder.com/600x400?text=No+Image" alt="No Image">
                  <% } %>
                </a>
                <div class="product-icons">
                  <a href="/wishlist/add/<%= product._id %>" title="Add to Wishlist"><i class="fa fa-heart"></i></a>
                  <a href="/cart/add/<%= product._id %>" title="Add to Cart"><i class="fa fa-shopping-cart"></i></a>
                </div>
              </div>

              <div class="product-body">
                <h5><%= product.productName %></h5>
                <p class="desc"><%= product.description ? product.description : '' %></p>
                <div class="product-meta">
                  <div><strong>Brand:</strong> <%= product.brand ? product.brand.brandName : "No Brand" %></div>
                  <div><strong>Category:</strong> <%= product.category ? product.category.name : "No Category" %></div>
                  <div>
                    <% 
                      let salePrice = 0; 
                      let regularPrice = 0;
                      if (product.variants && product.variants.length > 0) {
                        salePrice = Math.min(...product.variants.map(v => v.salePrice || v.regularPrice));
                        regularPrice = Math.max(...product.variants.map(v => v.regularPrice));
                      }
                    %>
                    <span class="price">₹<%= salePrice %></span>
                    <% if(regularPrice && regularPrice > salePrice){ %>
                      <span class="old-price">₹<%= regularPrice %></span>
                    <% } %>
                  </div>
                </div>
              </div>
            </article>
          <% }) %>
        <% } else { %>
          <p>No products available.</p>
        <% } %>
      </section>

      <!-- Pagination -->
      <nav>
        <ul class="pagination">
          <% if (currentPage > 1) { %>
            <li class="page-item">
              <a class="page-link" href="?page=<%= currentPage-1 %>&sort=<%= sort %>">Previous</a>
            </li>
          <% } %>
          <% for (let i=1; i<=totalPages; i++) { %>
            <li class="page-item <%= i===currentPage?'active':'' %>">
              <a class="page-link" href="?page=<%= i %>&sort=<%= sort %>"><%= i %></a>
            </li>
          <% } %>
          <% if (currentPage < totalPages) { %>
            <li class="page-item">
              <a class="page-link" href="?page=<%= currentPage+1 %>&sort=<%= sort %>">Next</a>
            </li>
          <% } %>
        </ul>
      </nav>
    </main>
  </div>
</div>

<script>
  (function(){
    const toggleBtn = document.getElementById('toggleFilters');
    const filters = document.getElementById('filters');
    toggleBtn && toggleBtn.addEventListener('click', function(){
      filters.classList.toggle('show');
      toggleBtn.innerText = filters.classList.contains('show') ? 'Hide Filters ▴' : 'Filters ▾';
    });
  })();
</script>

