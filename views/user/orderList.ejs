<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport"
            content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
        <title>My Orders - <%= customerName %></title>

        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap"
            rel="stylesheet">

        <style>
        /* ================= VARIABLES ================= */
        :root {
            --bg-body: #FAF9F6;
            --bg-card: #FFFFFF;
            --bg-header: linear-gradient(135deg, #FFFFFF 0%, #FFFDF5 100%);
            --gold-primary: #fbd763;
            --gold-soft: rgba(212, 175, 55, 0.12);
            --text-main: #111827;
            --text-secondary: #4B5563;
            --text-muted: #9CA3AF;
            --border-color: rgba(0,0,0,0.05);
            --shadow-sm: 0 2px 4px rgba(212, 175, 55, 0.05);
            --shadow-md: 0 8px 24px rgba(212, 175, 55, 0.12);
            --radius-pill: 50px;
            
            /* Alert Colors (Light) */
            --alert-bg: #FEF2F2;
            --alert-border: #DC2626;
            --alert-text: #991B1B;
        }

        body.dark-mode {
            --bg-body: #050505;
            --bg-card: #121212;
            --bg-header: #121212;
            --text-main: #F9FAFB;
            --text-secondary: #D1D5DB;
            --text-muted: #6B7280;
            --border-color: rgba(255,255,255,0.1);
            --shadow-sm: 0 2px 4px rgba(0,0,0,0.5);
            --shadow-md: 0 8px 24px rgba(0,0,0,0.8);
            --alert-bg: #450a0a; 
            --alert-border: #7f1d1d;
            --alert-text: #fca5a5;
        }

        /* ================= BASE ================= */
        * { margin: 0; padding: 0; box-sizing: border-box; -webkit-tap-highlight-color: transparent; }
        body { font-family: 'Inter', sans-serif; background-color: var(--bg-body); color: var(--text-main); line-height: 1.5; min-height: 100vh; overflow-x: hidden; transition: 0.3s; }
        a { text-decoration: none; color: inherit; }
        .container { max-width: 1300px; margin: 0 auto; padding: 20px; }

        /* ================= HEADER ================= */
        .page-header { text-align: center; margin-bottom: 30px; }
        .breadcrumb { font-size: 12px; color: var(--text-muted); margin-bottom: 8px; font-weight: 500; text-transform: uppercase; }
        .page-title { font-size: clamp(24px, 4vw, 32px); font-weight: 800; margin-bottom: 4px; color: var(--text-main); }
        .welcome-text { font-size: 14px; color: var(--text-secondary); }
        .welcome-text span { color: var(--gold-primary); font-weight: 700; }

        /* ================= CONTROLS ================= */
        .controls-wrapper { display: flex; justify-content: center; margin-bottom: 20px; position: sticky; top: 10px; z-index: 90; }
        .controls-bar { background: var(--bg-card); padding: 6px 8px; border-radius: var(--radius-pill); box-shadow: var(--shadow-md); border: 1px solid var(--border-color); display: flex; gap: 8px; align-items: center; flex-wrap: wrap; }
        
        .search-box { position: relative; }
        .search-box input { padding: 10px 16px 10px 36px; border-radius: var(--radius-pill); border: 1px solid transparent; background: var(--bg-body); color: var(--text-main); width: 220px; transition: 0.3s; font-size: 13px; }
        .search-box input:focus { width: 260px; background: var(--bg-card); border-color: var(--gold-primary); outline: none; }
        .search-icon { position: absolute; left: 12px; top: 50%; transform: translateY(-50%); color: var(--text-muted); font-size: 14px; pointer-events: none; }
        
        .filter-dropdown { padding: 10px 16px; border-radius: var(--radius-pill); border: 1px solid transparent; background: var(--bg-body); color: var(--text-main); cursor: pointer; font-size: 13px; }
        .clear-filters { padding: 8px 16px; border-radius: var(--radius-pill); background: transparent; color: var(--gold-primary); border: 1px solid var(--gold-primary); cursor: pointer; font-weight: 600; font-size: 12px; text-decoration: none; white-space: nowrap; }

        /* Filter Results Message */
        .filter-msg { display: none; width: 100%; text-align: center; margin-top: 10px; font-size: 13px; color: var(--text-secondary); }

        /* ================= LAYOUT ================= */
        .orders-layout { display: grid; grid-template-columns: 260px 1fr; gap: 24px; align-items: start; }
        .profile-sidebar { position: sticky; top: 20px; background: var(--bg-card); padding: 20px; border-radius: 16px; box-shadow: var(--shadow-sm); border: 1px solid var(--border-color); }
        .mobile-profile-toggle { display: none; width: 100%; padding: 12px 20px; background: var(--bg-card); border: 1px solid var(--border-color); border-radius: 12px; margin-bottom: 20px; font-weight: 600; justify-content: space-between; align-items: center; color: var(--text-main); cursor: pointer; }

        /* ================= CARDS ================= */
        .orders-list { display: flex; flex-direction: column; gap: 20px; }
        .order-card { background: var(--bg-card); border-radius: 16px; overflow: hidden; box-shadow: var(--shadow-sm); border: 1px solid var(--border-color); transition: 0.3s; }
        .order-card:hover { box-shadow: var(--shadow-md); transform: translateY(-3px); border-color: var(--gold-soft); }

        .order-header { padding: 16px 24px; background: linear-gradient(to right, var(--bg-body), var(--bg-card)); border-bottom: 1px solid var(--border-color); display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 12px; }
        .order-info-label { font-size: 10px; color: var(--text-muted); font-weight: 700; text-transform: uppercase; }
        .order-info-value { font-size: 14px; font-weight: 600; color: var(--text-main); }
        .order-id { font-family: monospace; color: var(--gold-primary); }
        .view-details-btn { font-size: 13px; font-weight: 600; color: var(--gold-primary); display: flex; align-items: center; gap: 4px; text-decoration: none; }

        /* Payment Alert */
        .payment-failed-alert { background: var(--alert-bg); border-left: 4px solid var(--alert-border); padding: 12px 20px; color: var(--alert-text); font-size: 13px; font-weight: 500; margin-top: 10px; display: flex; align-items: center; gap: 8px; }

        /* Product List */
        .product-item { display: flex; gap: 16px; padding: 16px 24px; border-bottom: 1px solid var(--border-color); align-items: center; }
        .product-item:last-child { border-bottom: none; }
        .product-image { width: 70px; height: 70px; border-radius: 10px; object-fit: cover; border: 1px solid var(--border-color); background: var(--bg-body); flex-shrink: 0; }
        .product-details { flex: 1; }
        .product-name { font-size: 15px; font-weight: 600; margin-bottom: 4px; }
        .product-meta { font-size: 13px; color: var(--text-muted); display: flex; gap: 10px; }
        .product-price { font-weight: 700; font-size: 15px; }

        /* ================= STATUS BADGES ================= */
        .status-badge { 
            padding: 4px 12px; 
            border-radius: var(--radius-pill); 
            font-size: 10px; 
            font-weight: 700; 
            text-transform: uppercase; 
            white-space: nowrap; 
            display: inline-block;
            background: #F3F4F6; color: #374151; 
        }

        .status-placed { background: #DBEAFE; color: #1E40AF; }         
        .status-processing { background: #FFEDD5; color: #C2410C; }    
        .status-delivered { background: #D1FAE5; color: #047857; }     
        .status-cancelled { background: #FEE2E2; color: #B91C1C; }     
        .status-payment-failed { background: var(--alert-bg); color: var(--alert-text); border: 1px solid var(--alert-border); }

        /* Footer */
        .order-footer { padding: 16px 24px; background: var(--bg-body); display: flex; justify-content: space-between; align-items: center; border-top: 1px solid var(--border-color); }
        .total-amount { font-size: 18px; font-weight: 800; color: var(--text-main); }

        /* Buttons */
        .retry-payment-btn { background: #DC2626; color: white; padding: 10px 20px; border-radius: var(--radius-pill); font-size: 12px; font-weight: 700; cursor: pointer; border: none; }
        
        /* Pagination */
        .pagination-container { display: flex; justify-content: center; margin-top: 40px; margin-bottom: 20px; }
        .pagination { background: var(--bg-card); padding: 6px; border-radius: var(--radius-pill); box-shadow: var(--shadow-sm); display: flex; gap: 4px; border: 1px solid var(--border-color); }
        .pagination-btn { width: 36px; height: 36px; display: flex; align-items: center; justify-content: center; border-radius: 50%; font-size: 13px; font-weight: 600; color: var(--text-secondary); border: none; background: transparent; text-decoration: none; }
        .pagination-btn.active { background: var(--gold-primary); color: white; }

        /* Empty State */
        .empty-state { text-align: center; padding: 60px 20px; background: var(--bg-card); border-radius: 16px; border: 1px solid var(--border-color); }

        /* ================= RESPONSIVE ================= */
        @media (max-width: 992px) {
            .orders-layout { grid-template-columns: 1fr; }
            .profile-sidebar { display: none; position: fixed; top: 0; left: 0; right: 0; bottom: 0; z-index: 100; height: 100vh; overflow-y: auto; margin: 0; border-radius: 0; }
            .profile-sidebar.active { display: block; }
            .mobile-profile-toggle { display: flex; }
        }

        @media (max-width: 768px) {
            .container { padding: 15px; }
            .controls-bar { flex-direction: column; width: 100%; border-radius: 16px; padding: 16px; align-items: stretch; }
            .search-box input { width: 100%; }
            .search-box input:focus { width: 100%; }
            .filter-dropdown, .clear-filters { width: 100%; text-align: center; }
        }

      
        @media (max-width: 480px) {
            .order-header { flex-direction: column; align-items: flex-start; gap: 12px; }
            
            .product-item { 
                display: grid; 
                grid-template-columns: 60px 1fr; 
                gap: 12px; 
                padding: 12px; 
                align-items: start;
            }
            .product-image { 
                width: 60px; 
                height: 60px; 
                border-radius: 8px; 
                margin: 0; 
                object-fit: cover;
            }
            .product-details { grid-column: 2; }
            
            .product-status-block { 
                grid-column: 1 / -1; 
                margin-top: 5px; 
                display: flex; 
                justify-content: space-between; 
                align-items: center; 
                width: 100%; 
                border-top: 1px dashed var(--border-color); 
                padding-top: 8px; 
            }
            .order-footer { flex-direction: column; gap: 12px; align-items: stretch; }
            .retry-payment-btn { width: 100%; }
        }
    </style>
    </head>

    <body>
        <%- include('../../views/partials/user/header') %>

        <div class="container">
            <div class="page-header">
                <div class="breadcrumb">
                    <a href="/">Home</a> <span>/</span> <a
                        href="/account">Account</a> <span>/</span>
                    <span>Orders</span>
                </div>
                <h1 class="page-title">My Orders</h1>
                <div class="welcome-text">Welcome back, <span><%= customerName
                        %></span></div>
            </div>

            <div class="controls-wrapper">
                <form action method="GET" class="controls-bar" id="filterForm">
                    <div class="search-box">
                        <span class="search-icon">üîç</span>
                        <input type="text" name="search" id="searchInput"
                            placeholder="Search orders..."
                            value="<%= currentSearch || '' %>"
                            onkeyup="clientSideSearch()">
                    </div>

                    <select name="status" class="filter-dropdown"
                        onchange="this.form.submit()">
                        <option value <%=currentStatus === '' ? 'selected' : ''
                            %>>All Statuses</option>
                        <option value="Placed" <%=currentStatus === 'Placed' ?
                            'selected' : '' %>>Placed</option>
                        <option value="Processing" <%=currentStatus ===
                            'Processing' ? 'selected' : ''
                            %>>Processing</option>
                        <option value="Delivered" <%=currentStatus ===
                            'Delivered' ? 'selected' : '' %>>Delivered</option>
                        <option value="Cancelled" <%=currentStatus ===
                            'Cancelled' ? 'selected' : '' %>>Cancelled</option>
                        <option value="Payment Failed" <%=currentStatus ===
                            'Payment Failed' ? 'selected' : '' %>>Payment
                            Failed</option>
                    </select>

                    <select name="time" class="filter-dropdown"
                        onchange="this.form.submit()">
                        <option value <%=currentTime === '' ? 'selected' : ''
                            %>>All Time</option>
                        <option value="last30days" <%=currentTime ===
                            'last30days' ? 'selected' : '' %>>Last 30
                            Days</option>
                        <option value="last6months" <%=currentTime ===
                            'last6months' ? 'selected' : '' %>>Last 6
                            Months</option>
                    </select>

                    <button type="button" class="clear-filters"
                        onclick="window.location.href=window.location.pathname">Clear</button>
                </form>
            </div>

            <div id="filterCountMsg" class="filter-msg"></div>

            <div class="orders-layout">
                <%- include('../partials/user/profile-sidebar.ejs', { user:
                user, activePage: 'orders' }) %>

                <div class="orders-list">
                    <% if (orders && orders.length > 0) { %>
                    <% orders.forEach(order => { %>
                    <div class="order-card"
                        data-order-id="<%= order.orderId.toLowerCase() %>"
                        data-product-names="<%= order.orderItems.map(i => i.productName.toLowerCase()).join(' ') %>">

                        <div class="order-header">
                            <div>
                                <span class="order-info-label">Placed On</span>
                                <div class="order-info-value">
                                    <%= new
                                    Date(order.createdOn).toLocaleDateString('en-IN',
                                    { day: 'numeric', month: 'short', year:
                                    'numeric' }) %>
                                </div>
                            </div>
                            <div>
                                <span class="order-info-label">Order ID</span>
                                <div class="order-info-value order-id">#<%=
                                    order.orderId %></div>
                            </div>
                            <div>
                                <% if (order.status === 'Payment Failed') { %>
                                <button
                                    onclick="retryFailedPayment('<%= order.orderId %>')"
                                    class="retry-payment-btn">Retry</button>
                                <% } else { %>
                                <a href="/orderDetails/<%= order.orderId %>"
                                    class="view-details-btn">View Details ‚Üí</a>
                                <% } %>
                            </div>
                        </div>

                        <% if (order.status === 'Payment Failed') { %>
                        <div class="payment-failed-alert">
                            ‚ö†Ô∏è Payment Failed: <%= order.paymentFailureReason ||
                            'Transaction incomplete.' %>
                        </div>
                        <% } %>

                        <div class="order-products">
                            <% order.orderItems.forEach(item => { %>
                            <div class="product-item">
                                <img src="<%= item.productImage %>"
                                    alt="Product" class="product-image">

                                <div class="product-details">
                                    <div class="product-name"><%=
                                        item.productName %></div>
                                    <div class="product-meta">
                                        <% if (item.variantSize) { %>Size: <%=
                                        item.variantSize %> | <% } %>
                                        Qty: <%= item.quantity %>
                                    </div>
                                </div>

                                <div class="product-status-block"
                                    style="text-align:right">
                                    <div class="product-price">‚Çπ<%=
                                        item.price.toLocaleString() %></div>
                                    <span
                                        class="status-badge status-<%= item.displayStatus.toLowerCase().replace(/\s+/g, '-') %>">
                                        <%= item.displayStatus %>
                                    </span>
                                </div>
                            </div>
                            <% }); %>
                        </div>

                        <div class="order-footer">
                            <span class="order-info-label">Total Amount</span>
                            <span class="total-amount">‚Çπ<%= (order.dynamicTotal
                                || 0).toLocaleString() %></span>
                        </div>
                    </div>
                    <% }); %>
                    <% } else { %>
                    <div class="empty-state">
                        <h3 style="font-size:20px; font-weight:700;">No Orders
                            Found</h3>
                        <p style="color:var(--text-secondary);">Try adjusting
                            your filters.</p>
                        <button
                            onclick="window.location.href=window.location.pathname"
                            class="retry-payment-btn"
                            style="background:var(--text-main); display:inline-block; margin-top:10px;">Clear
                            Filters</button>
                    </div>
                    <% } %>
                </div>
            </div>

            <% if (totalPages > 1) { %>
            <div class="pagination-container" id="paginationContainer">
                <div class="pagination">
                    <% if (currentPage > 1) { %>
                    <a
                        href="?page=<%= currentPage - 1 %>&status=<%= currentStatus %>&time=<%= currentTime %>"
                        class="pagination-btn">‚Äπ</a>
                    <% } else { %>
                    <span class="pagination-btn disabled">‚Äπ</span>
                    <% } %>

                    <% for (let i = 1; i <= totalPages; i++) { %>
                    <% if (i === currentPage) { %>
                    <span class="pagination-btn active"><%= i %></span>
                    <% } else { %>
                    <a
                        href="?page=<%= i %>&status=<%= currentStatus %>&time=<%= currentTime %>"
                        class="pagination-btn"><%= i %></a>
                    <% } %>
                    <% } %>

                    <% if (currentPage < totalPages) { %>
                    <a
                        href="?page=<%= currentPage + 1 %>&status=<%= currentStatus %>&time=<%= currentTime %>"
                        class="pagination-btn">‚Ä∫</a>
                    <% } else { %>
                    <span class="pagination-btn disabled">‚Ä∫</span>
                    <% } %>
                </div>
            </div>
            <% } %>
        </div>

        <%- include('../../views/partials/user/footer') %>
        <script
            src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
        <script src="https://checkout.razorpay.com/v1/checkout.js"></script>

        <script>
        function toggleProfileSidebar() {
            const profileSidebar = document.querySelector('.profile-sidebar');
            profileSidebar.classList.toggle('active');
            if (profileSidebar.classList.contains('active')) {
                document.body.style.overflow = 'hidden';
            } else {
                document.body.style.overflow = '';
            }
        }

        // ================= INSTANT LIVE SEARCH (CLIENT SIDE) =================
        function clientSideSearch() {
            const input = document.getElementById('searchInput').value.toLowerCase();
            const cards = document.querySelectorAll('.order-card');
            const pagination = document.getElementById('paginationContainer');
            const msg = document.getElementById('filterCountMsg');
            let visibleCount = 0;

            cards.forEach(card => {
                const orderId = card.getAttribute('data-order-id');
                const products = card.getAttribute('data-product-names');
                
                // Check if search matches order ID or product names
                if (orderId.includes(input) || products.includes(input)) {
                    card.style.display = 'block';
                    visibleCount++;
                } else {
                    card.style.display = 'none';
                }
            });

            // Toggle Pagination & Counter
            if (input.length > 0) {
                if (pagination) pagination.style.display = 'none';
                msg.style.display = 'block';
                msg.innerText = `Found ${visibleCount} order${visibleCount !== 1 ? 's' : ''}`;
            } else {
                if (pagination) pagination.style.display = 'flex';
                msg.style.display = 'none';
            }
        }

        // Payment Retry Logic
        async function retryFailedPayment(orderId) {
            try {
                const response = await fetch(`/order/get-payment-failure-details/${orderId}`);
                const data = await response.json();
                if (!data.success) throw new Error(data.message);

                const result = await Swal.fire({
                    title: 'Retry Payment?',
                    text: `Total: ‚Çπ${data.order.finalAmount}`,
                    icon: 'info',
                    showCancelButton: true,
                    confirmButtonText: 'Pay Now',
                    confirmButtonColor: '#D4AF37'
                });

                if (result.isConfirmed) {
                    await handleRazorpayPaymentRetry(orderId, data.order.finalAmount);
                }
            } catch (err) {
                Swal.fire({ icon: 'error', title: 'Error', text: err.message });
            }
        }

        async function handleRazorpayPaymentRetry(orderId, amount) {
            try {
                const orderRes = await fetch('/payment/create-razorpayOrder', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ amount, currency: 'INR', orderId })
                });
                const orderData = await orderRes.json();
                if(!orderData.success) throw new Error(orderData.message);

                const options = {
                    key: orderData.keyId,
                    amount: orderData.amount,
                    currency: "INR",
                    name: "Sentique",
                    order_id: orderData.orderId,
                    handler: async (res) => {
                        await verifyRetryPayment(res.razorpay_order_id, res.razorpay_payment_id, res.razorpay_signature, orderId);
                    },
                    theme: { color: "#D4AF37" }
                };
                const rzp = new Razorpay(options);
                rzp.on('payment.failed', (res) => Swal.fire("Failed", res.error.description, "error"));
                rzp.open();
            } catch(e) { Swal.fire("Error", e.message, "error"); }
        }

        async function verifyRetryPayment(rzpOrderId, rzpPaymentId, rzpSignature, orderId) {
             const res = await fetch('/payment/verify-razorpay-payment', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({ razorpay_order_id: rzpOrderId, razorpay_payment_id: rzpPaymentId, razorpay_signature: rzpSignature, orderId })
            });
            const data = await res.json();
            if(data.success) window.location.href = `/orderSuccess?orderId=${data.orderId}`;
            else Swal.fire("Verification Failed", data.message, "error");
        }
    </script>
    </body>
</html>