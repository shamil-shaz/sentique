  <script>
    function toggleSidebar() {
        const sidebar = document.getElementById('profileSidebar');
        const icon = document.getElementById('toggle-icon');
        
        sidebar.classList.toggle('show');
        
        if (sidebar.classList.contains('show')) {
            icon.innerHTML = '&#9650;'; 
        } else {
            icon.innerHTML = '&#9660;'; 
        }
    }

    async function fetchReferralStats() {
      try {
        const response = await fetch('/profile/referral/details');
        const data = await response.json();

        if (data.success) {
          document.getElementById('totalReferrals').textContent = data.totalReferrals || 0;
          document.getElementById('completedReferrals').textContent = data.completedReferrals || 0;
          document.getElementById('totalEarnings').textContent = '‚Çπ' + (data.totalEarnings || 0);
          document.getElementById('pendingReferrals').textContent = data.pendingReferrals || 0;

          if (data.referralDetails && data.referralDetails.length > 0) {
            updateReferralTable(data.referralDetails);
          } else {
            document.getElementById('referralTableBody').innerHTML = `<tr><td colspan="5" style="text-align:center; padding:20px; color:var(--text-secondary);">No referrals yet.</td></tr>`;
          }
        }
      } catch (err) {
        console.error('Error:', err);
      }
    }

    function updateReferralTable(details) {
      const tbody = document.getElementById('referralTableBody');
      tbody.innerHTML = details.map(ref => `
        <tr>
          <td><strong>${ref.name || 'N/A'}</strong></td>
          <td>${ref.email || 'N/A'}</td>
          <td><span class="${ref.status === 'completed' ? 'status-completed' : 'status-pending'}">${ref.status}</span></td>
          <td class="reward-amount">‚Çπ${ref.status === 'completed' ? ref.reward : 0}</td>
          <td>${new Date(ref.joinDate).toLocaleDateString()}</td>
        </tr>
      `).join('');
    }

    function copyReferralCode() {
        const codeInput = document.getElementById('referralCode');
        codeInput.select();
        navigator.clipboard.writeText(codeInput.value);
        Swal.fire({
            icon: 'success', title: 'Copied!', toast: true, position: 'top-end', showConfirmButton: false, timer: 1500
        });
    }

