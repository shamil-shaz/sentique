<%- include("../partials/user/header.ejs") %>
<head>
  <title>My Account - <%= user.name %></title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', sans-serif;
      background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
      min-height: 100vh;
      color: #2d3748;
    }

    .profile-section {
      padding: 40px 20px;
    }

    .container {
      max-width: 1280px;
      margin: 0 auto;
    }

    .breadcrumb {
      display: flex;
      gap: 10px;
      margin-bottom: 30px;
      font-size: 14px;
      color: #718096;
      flex-wrap: wrap;
    }

    .breadcrumb a {
      color: #4a5568;
      text-decoration: none;
      transition: color 0.3s;
    }

    .breadcrumb a:hover {
      color: #667eea;
    }

    .welcome-header {
      background: white;
      padding: 25px 30px;
      border-radius: 15px;
      margin-bottom: 30px;
      box-shadow: 0 4px 6px rgba(0,0,0,0.05);
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .welcome-header h1 {
      font-size: 28px;
      color: #2d3748;
      font-weight: 700;
    }

    .welcome-header span {
      color: #3f979a;
      font-weight: 600;
    }

    .main-content {
      display: grid;
      grid-template-columns: 280px 1fr;
      gap: 30px;
    }

    .sidebar {
      background: white;
      border-radius: 15px;
      padding: 30px;
      box-shadow: 0 4px 6px rgba(0,0,0,0.05);
      height: fit-content;
    }

    .profile-avatar-container {
      text-align: center;
      margin-bottom: 20px;
    }

    .profile-avatar {
      width: 100px;
      height: 100px;
      border-radius: 50%;
      background: linear-gradient(135deg, #141a31 0%, #18342f 100%);
      margin: 0 auto 15px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 40px;
      font-weight: 600;
      box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
      overflow: hidden;
    }

    .profile-avatar img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .profile-name {
      text-align: center;
      font-size: 18px;
      font-weight: 600;
      color: #2d3748;
      margin-bottom: 30px;
    }

    .menu-section {
      margin-bottom: 25px;
    }

    .menu-title {
      font-size: 11px;
      text-transform: uppercase;
      color: #a0aec0;
      font-weight: 600;
      margin-bottom: 12px;
      letter-spacing: 1px;
    }

    .menu-item {
      padding: 12px 15px;
      margin-bottom: 5px;
      border-radius: 10px;
      cursor: pointer;
      transition: all 0.3s;
      color: #4a5568;
      font-weight: 500;
      display: flex;
      align-items: center;
      gap: 10px;
      font-size: 14px;
      text-decoration: none;
    }

    .menu-item:hover {
      background: #f7fafc;
      color: #2f656e;
      transform: translateX(5px);
    }

    .menu-item.active {
      background: linear-gradient(135deg, #183043 0%, #10262c 100%);
      color: white;
    }

    .profile-card {
      background: white;
      border-radius: 15px;
      padding: 35px;
      box-shadow: 0 4px 6px rgba(0,0,0,0.05);
    }

    .card-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 35px;
      padding-bottom: 20px;
      border-bottom: 2px solid #f7fafc;
      flex-wrap: wrap;
      gap: 15px;
    }

    .card-title {
      font-size: 24px;
      font-weight: 700;
      color: #2d3748;
    }

    .tab-group {
      display: flex;
      gap: 20px;
      flex-wrap: wrap;
    }

    .tab {
      padding: 10px 0;
      cursor: pointer;
      color: #718096;
      font-weight: 500;
      border-bottom: 3px solid transparent;
      transition: all 0.3s;
      font-size: 15px;
    }

    .tab.active {
      color: #667eea;
      border-bottom-color: #667eea;
    }

    .tab-content {
      display: none;
    }

    .tab-content.active {
      display: block;
    }

    .form-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 25px;
      margin-bottom: 25px;
    }

    .form-group {
      display: flex;
      flex-direction: column;
    }

    .form-group.full-width {
      grid-column: 1 / -1;
    }

    .form-label {
      font-size: 14px;
      font-weight: 600;
      color: #4a5568;
      margin-bottom: 8px;
    }

    .form-input {
      padding: 14px 18px;
      border: 2px solid #e2e8f0;
      border-radius: 10px;
      font-family: 'Inter', sans-serif;
      font-size: 15px;
      transition: all 0.3s;
      background: #f9fafb;
    }

    .form-input:focus {
      outline: none;
      border-color: #667eea;
      background: white;
      box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }

    .form-input:disabled {
      background: #e2e8f0;
      cursor: not-allowed;
    }

    .alert {
      padding: 15px 20px;
      border-radius: 10px;
      margin-bottom: 20px;
      font-weight: 500;
    }

    .alert-success {
      background: #d1fae5;
      color: #065f46;
      border: 1px solid #6ee7b7;
    }

    .alert-error {
      background: #fee2e2;
      color: #991b1b;
      border: 1px solid #fca5a5;
    }

    .button-group {
      display: flex;
      justify-content: flex-end;
      gap: 15px;
      margin-top: 30px;
      flex-wrap: wrap;
    }

    .update-btn {
      padding: 16px 40px;
      background: linear-gradient(135deg, #619141 0%, #488e42 100%);
      color: white;
      border: none;
      border-radius: 10px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s;
      text-decoration: none;
      display: inline-block;
    }

    .update-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
    }

    .referral-section {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      padding: 40px;
      border-radius: 15px;
      margin-top: 40px;
      color: white;
      box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
    }

    .referral-header {
      margin-bottom: 30px;
    }

    .referral-title {
      font-size: 28px;
      font-weight: 700;
      margin-bottom: 12px;
      letter-spacing: -0.5px;
    }

    .referral-description {
      font-size: 16px;
      opacity: 0.95;
      line-height: 1.6;
      font-weight: 400;
    }

    .referral-content {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 30px;
      align-items: center;
    }

    .referral-stats {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 20px;
    }

    .stat-box {
      background: rgba(255, 255, 255, 0.1);
      padding: 20px;
      border-radius: 12px;
      border: 1px solid rgba(255, 255, 255, 0.2);
      backdrop-filter: blur(10px);
    }

    .stat-label {
      font-size: 13px;
      opacity: 0.85;
      font-weight: 500;
      text-transform: uppercase;
      letter-spacing: 1px;
      margin-bottom: 8px;
    }

    .stat-value {
      font-size: 32px;
      font-weight: 700;
    }

    .stat-subtext {
      font-size: 12px;
      opacity: 0.7;
      margin-top: 8px;
    }

    .referral-code-box {
      background: white;
      padding: 30px;
      border-radius: 15px;
      display: flex;
      flex-direction: column;
      gap: 20px;
    }

    .code-label {
      font-size: 13px;
      color: #667eea;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .code-display-wrapper {
      display: flex;
      gap: 12px;
      align-items: center;
    }

    .code-input {
      flex: 1;
      padding: 16px 20px;
      border: 2px solid #e2e8f0;
      border-radius: 10px;
      font-size: 20px;
      font-weight: 700;
      color: #667eea;
      letter-spacing: 2px;
      text-align: center;
      background: #f9fafb;
      font-family: 'Courier New', monospace;
      cursor: text;
      user-select: all;
    }

    .code-input:focus {
      outline: none;
      border-color: #667eea;
      box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }

    .copy-btn {
      padding: 16px 28px;
      background: #667eea;
      color: white;
      border: none;
      border-radius: 10px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s;
      font-size: 14px;
      white-space: nowrap;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .copy-btn:hover {
      background: #5568d3;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
    }

    .share-buttons {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 12px;
    }

    .share-btn {
      padding: 14px;
      border: none;
      border-radius: 10px;
      font-weight: 600;
      cursor: pointer;
      font-size: 14px;
      transition: all 0.3s;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
    }

    .share-whatsapp {
      background: #25d366;
      color: white;
    }

    .share-whatsapp:hover {
      background: #1ea952;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(37, 211, 102, 0.3);
    }

    .share-email {
      background: #EA4335;
      color: white;
    }

    .share-email:hover {
      background: #D33425;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(234, 67, 53, 0.3);
    }

    .referral-details-section {
      margin-top: 40px;
      background: rgba(255, 255, 255, 0.95);
      border-radius: 10px;
      overflow: hidden;
    }

    .referral-details-title {
      padding: 20px 25px;
      margin: 0;
      color: #333;
      font-size: 18px;
      font-weight: 600;
      border-bottom: 2px solid #f0f0f0;
    }

    .referral-table-wrapper {
      overflow-x: auto;
    }

    .referral-table {
      width: 100%;
      border-collapse: collapse;
    }

    .referral-table thead {
      background: #f8f9fa;
    }

    .referral-table th {
      padding: 15px;
      text-align: left;
      font-weight: 600;
      color: #333;
      border-bottom: 2px solid #e9ecef;
      font-size: 13px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .referral-table td {
      padding: 15px;
      color: #555;
      border-bottom: 1px solid #e9ecef;
    }

    .referral-table tbody tr:hover {
      background: #f8f9fa;
    }

    .status-badge {
      padding: 6px 12px;
      border-radius: 20px;
      font-size: 12px;
      font-weight: 600;
      display: inline-block;
    }

    .status-completed {
      background: #d4edda;
      color: #155724;
    }

    .status-pending {
      background: #fff3cd;
      color: #856404;
    }

    .reward-amount {
      font-weight: 600;
      color: #667eea;
    }

    @media (max-width: 1024px) {
      .main-content {
        grid-template-columns: 250px 1fr;
        gap: 25px;
      }

      .profile-card {
        padding: 30px;
      }

      .welcome-header h1 {
        font-size: 24px;
      }
    }

    @media (max-width: 868px) {
      .main-content {
        grid-template-columns: 1fr;
        gap: 20px;
      }

      .sidebar {
        display: grid;
        grid-template-columns: auto 1fr;
        gap: 30px;
        align-items: start;
      }

      .profile-avatar {
        width: 80px;
        height: 80px;
        font-size: 32px;
      }

      .profile-name {
        font-size: 16px;
        margin-bottom: 0;
      }

      .form-grid {
        grid-template-columns: 1fr;
        gap: 20px;
      }

      .referral-content {
        grid-template-columns: 1fr;
        gap: 25px;
      }

      .card-title {
        font-size: 22px;
      }
    }

    @media (max-width: 640px) {
      .profile-section {
        padding: 30px 15px;
      }

      .sidebar {
        grid-template-columns: 1fr;
        text-align: center;
        padding: 25px;
      }

      .welcome-header {
        padding: 20px;
        flex-direction: column;
        text-align: center;
        gap: 10px;
      }

      .welcome-header h1 {
        font-size: 20px;
      }

      .profile-card {
        padding: 25px 20px;
      }

      .card-title {
        font-size: 20px;
      }

      .referral-section {
        padding: 25px 20px;
        margin-top: 30px;
      }

      .referral-title {
        font-size: 20px;
        margin-bottom: 10px;
      }

      .referral-description {
        font-size: 14px;
      }

      .code-display-wrapper {
        flex-direction: column;
      }

      .copy-btn {
        width: 100%;
        justify-content: center;
      }

      .share-buttons {
        grid-template-columns: 1fr 1fr;
        gap: 10px;
      }

      .share-btn {
        padding: 12px;
        font-size: 13px;
      }

      .referral-code-box {
        padding: 20px;
      }

      .code-input {
        font-size: 16px;
        padding: 14px 16px;
      }

      .update-btn {
        width: 100%;
        padding: 14px;
      }

      .button-group {
        flex-direction: column-reverse;
        width: 100%;
      }

      .stat-box {
        padding: 15px;
      }

      .stat-value {
        font-size: 24px;
      }

      .referral-table th,
      .referral-table td {
        padding: 10px;
        font-size: 12px;
      }
    }

    @media (max-width: 480px) {
      .profile-avatar {
        width: 70px;
        height: 70px;
        font-size: 28px;
      }

      .form-input {
        padding: 12px 15px;
        font-size: 14px;
      }

      .form-label {
        font-size: 13px;
      }

      .referral-title {
        font-size: 18px;
      }

      .referral-description {
        font-size: 13px;
      }

      .code-input {
        font-size: 14px;
      }

      .stat-label {
        font-size: 12px;
      }

      .stat-value {
        font-size: 20px;
      }
    }
  </style>
</head>

<body>
  <section class="profile-section">
    <div class="container">
      <% if (success_msg && success_msg.length > 0) { %>
        <div class="alert alert-success"><%= success_msg %></div>
      <% } %>
      <% if (error_msg && error_msg.length > 0) { %>
        <div class="alert alert-error"><%= error_msg %></div>
      <% } %>

      <div class="breadcrumb">
        <a href="/">Home</a> / <a href="/profile">My Account</a> / <span>Profile</span>
      </div>

      <div class="welcome-header">
        <h1>Welcome! <span><%= user.name %></span></h1>
      </div>

      <div class="main-content">
        <aside class="sidebar">
          <div class="profile-avatar-container">
            <div class="profile-avatar">
              <% if (user.image) { %>
                <img src="<%= user.image %>" alt="Profile Picture">
              <% } else { %>
                <img src="/images/default-profile.png" alt="Default Picture">
              <% } %>
            </div>
          </div>
          <div class="profile-name"><%= user.name %></div>

          <div class="menu-section">
            <div class="menu-title">Account</div>
            <a href="/profile" class="menu-item active">
              <span>üë§</span> My Profile
            </a>
            <a href="/profile/address" class="menu-item">
              <span>üìç</span> Address Book
            </a>
          </div>

          <div class="menu-section">
            <div class="menu-title">Shopping</div>
            <a href="/profile/order-list" class="menu-item">
              <span>üì¶</span> My Orders
            </a>
            <a href="/wishlist" class="menu-item">
              <span>‚ù§Ô∏è</span> My Wishlist
            </a>
            <a href="/cart" class="menu-item">
              <span>üõí</span> Shopping Cart
            </a>
          </div>

          <div class="menu-section">
            <div class="menu-title">Payments</div>
            <a href="/profile/wallet" class="menu-item">
              <span>üí≥</span> Wallet
            </a>
            <a href="/coupons" class="menu-item">
              <span>üéüÔ∏è</span> Coupons
            </a>
          </div>

          <div class="menu-section">
            <div class="menu-title">Security</div>
            <a href="/profile/privacy-security" class="menu-item">
              <span>üîí</span> Privacy & Security
            </a>
          </div>
        </aside>

        <main>
          <div class="profile-card">
            <div class="card-header">
              <h2 class="card-title">Account Settings</h2>
            </div>

            <div class="tab-content active" id="profile-tab">
              <div class="form-grid">
                <div class="form-group">
                  <label class="form-label">Full Name</label>
                  <input type="text" class="form-input" value="<%= user.name %>" disabled>
                </div>
                <div class="form-group">
                  <label class="form-label">Phone</label>
                  <input type="tel" class="form-input" value="<%= user.phone || '' %>" disabled>
                </div>
                <div class="form-group full-width">
                  <label class="form-label">Email</label>
                  <input type="email" class="form-input" value="<%= user.email %>" disabled>
                </div>
              </div>

              <div class="button-group">
                <a href="/profile-edit" class="update-btn">Edit Profile</a>
              </div>
            </div>

            <div class="referral-section">
              <div class="referral-header">
                <h2 class="referral-title">üéÅ Invite & Earn</h2>
                <p class="referral-description">
                  Share your unique referral code with friends and earn rewards! They get ‚Çπ50 on their first order above ‚Çπ1000, and you get ‚Çπ100.
                </p>
              </div>

              <div class="referral-content">
                <div class="referral-stats">
                  <div class="stat-box">
                    <div class="stat-label">Total Referrals</div>
                    <div class="stat-value" id="totalReferrals">0</div>
                    <div class="stat-subtext">People invited</div>
                  </div>

                  <div class="stat-box">
                    <div class="stat-label">Completed Referrals</div>
                    <div class="stat-value" id="completedReferrals">0</div>
                    <div class="stat-subtext">Orders above ‚Çπ1000</div>
                  </div>

                  <div class="stat-box">
                    <div class="stat-label">Total Earnings</div>
                    <div class="stat-value" id="totalEarnings">‚Çπ0</div>
                    <div class="stat-subtext">From referrals</div>
                  </div>

                  <div class="stat-box">
                    <div class="stat-label">Pending Referrals</div>
                    <div class="stat-value" id="pendingReferrals">0</div>
                    <div class="stat-subtext">Waiting for orders</div>
                  </div>
                </div>

                <div class="referral-code-box">
                  <div class="code-label">Your Referral Code</div>

                  <% if (user && user.refferalCode) { %>
                    <div class="code-display-wrapper">
                      <input type="text" class="code-input" id="referralCode" value="<%= user.refferalCode %>" readonly>
                      <button type="button" class="copy-btn" onclick="copyReferralCode()">
                        <span>üìã</span> Copy
                      </button>
                    </div>

                    <div class="share-buttons">
                      <button type="button" class="share-btn share-whatsapp" onclick="shareViaWhatsApp('<%= user.refferalCode %>')">
                        <span>üí¨</span> WhatsApp
                      </button>
                      
                    </div>
                  <% } %>
                </div>
              </div>

              
            </div>
          </div>
        </main>
      </div>
    </div>
  </section>

  <script>
    console.log('='.repeat(60));
    console.log('‚úÖ REFERRAL SYSTEM LOADED');
    console.log('='.repeat(60));

    let isLoading = false;

    async function fetchReferralStats() {
      if (isLoading) {
        console.log('‚è≥ Already loading, skipping duplicate request');
        return;
      }

      isLoading = true;
      try {
        console.log('üì° Fetching referral data...');

        const response = await fetch('/profile/referral/details', {
          method: 'GET',
          headers: {
            'Content-Type': 'application/json',
            'Cache-Control': 'no-cache'
          }
        });

        console.log('Response Status:', response.status);

        if (!response.ok) {
          throw new Error(`HTTP Error ${response.status}`);
        }

        const data = await response.json();
        console.log('üìä Response Data:', data);

        if (data.success) {
          console.log('‚úÖ Updating UI...');

          document.getElementById('totalReferrals').textContent = data.totalReferrals || 0;
          document.getElementById('completedReferrals').textContent = data.completedReferrals || 0;
          document.getElementById('totalEarnings').textContent = '‚Çπ' + (data.totalEarnings || 0);
          document.getElementById('pendingReferrals').textContent = data.pendingReferrals || 0;

          if (data.referralDetails && data.referralDetails.length > 0) {
            updateReferralTable(data.referralDetails);
          } else {
            const tbody = document.getElementById('referralTableBody');
            if (tbody) {
              tbody.innerHTML = `
                <tr>
                  <td colspan="5" style="text-align: center; padding: 20px; color: #718096;">
                    üöÄ No referrals yet. Share your code to start earning!
                  </td>
                </tr>
              `;
            }
          }

          console.log('‚úÖ UI Updated Successfully');
        } else {
          console.error('‚ùå API Error:', data.message);
        }
      } catch (err) {
        console.error('‚ùå Error fetching data:', err.message);
      } finally {
        isLoading = false;
      }
    }

    function updateReferralTable(referralDetails) {
      const tbody = document.getElementById('referralTableBody');
      if (!tbody) return;

      if (!referralDetails || referralDetails.length === 0) {
        tbody.innerHTML = `
          <tr>
