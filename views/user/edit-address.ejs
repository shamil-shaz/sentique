<%- include("../partials/user/header.ejs") %>

<head>
    <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap"
        rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        :root {
            --bg-body: #f3f4f6;
            --bg-card: #ffffff;
            --bg-input: #f9fafb;
            --bg-sidebar: #ffffff;
            
            --text-primary: #111827;
            --text-secondary: #4b5563;
            --text-label: #374151;
            
            --border-color: #e5e7eb;
            --shadow-card: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 0 5px rgba(0,0,0,0.05);
            
            --accent-color: #667eea; 
            --menu-hover: #f1f5f9;
            --btn-primary: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --btn-text: #ffffff;
        }

        body.dark-mode {
            --gold-gradient: linear-gradient(135deg, #e5c14a 0%, #f0d978 100%);
            --gold-solid: #e5c14a;

            --bg-body: #0a0a0a;
            --bg-card: #121212;
            --bg-input: #171717;
            --bg-sidebar: #121212;
            
            --text-primary: #f3f4f6;
            --text-secondary: #9ca3af;
            --text-label: #d1d5db;
            
            --border-color: #262626;
            --shadow-card: 0 10px 30px rgba(0, 0, 0, 0.9), 0 0 15px rgba(229, 193, 74, 0.15), inset 0 0 0 1px rgba(229, 193, 74, 0.2);
            
            --accent-color: #f0d978;
            --menu-hover: #1f1f1f;
            --btn-primary: var(--gold-gradient);
            --btn-text: #000000;
        }

        * { margin: 0; padding: 0; box-sizing: border-box; }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--bg-body);
            min-height: 100vh;
            color: var(--text-primary);
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .main-content {
            display: grid;
            grid-template-columns: 280px 1fr;
            gap: 30px;
            max-width: 1400px;
            margin: 0 auto;
            padding: 40px 20px;
            align-items: start;
        }

        .edit-content { width: 100%; animation: fadeInUp 0.6s ease; }

        .page-header {
            background: var(--bg-card);
            padding: 30px 40px;
            border-radius: 24px;
            margin-bottom: 30px;
            box-shadow: var(--shadow-card);
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 20px;
            animation: slideDown 0.6s ease;
            border: 1px solid var(--border-color);
        }
        
        body.dark-mode .page-header { border: none; }

        .page-header-left h1 {
            font-size: 32px;
            font-weight: 900;
            color: var(--text-primary);
            margin-bottom: 8px;
        }
        
        body.dark-mode .page-header-left h1 {
            background: var(--gold-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .page-header-left p { font-size: 15px; color: var(--text-secondary); }

        .back-btn {
            padding: 14px 28px;
            background: var(--bg-card);
            color: var(--accent-color);
            border: 2px solid var(--accent-color);
            border-radius: 14px;
            font-size: 15px;
            font-weight: 800;
            cursor: pointer;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            gap: 10px;
            text-decoration: none;
            text-transform: uppercase;
        }

        .back-btn:hover {
            background: var(--menu-hover);
            transform: translateY(-2px);
        }

        .edit-form-container {
            background: var(--bg-card);
            border-radius: 24px;
            padding: 45px;
            box-shadow: var(--shadow-card);
            animation: slideUp 0.6s ease;
            border: 1px solid var(--border-color);
        }
        
        body.dark-mode .edit-form-container { border: none; }

        .form-header {
            margin-bottom: 35px;
            padding-bottom: 25px;
            border-bottom: 4px solid var(--border-color);
        }

        .form-header h2 {
            font-size: 26px;
            font-weight: 900;
            color: var(--text-primary);
            margin-bottom: 10px;
        }
        
        body.dark-mode .form-header h2 {
            background: var(--gold-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .form-header p { font-size: 15px; color: var(--text-secondary); font-weight: 600; }

        .form-group { margin-bottom: 28px; }

        .form-label {
            font-size: 15px;
            font-weight: 800;
            color: var(--text-label);
            margin-bottom: 12px;
            display: block;
        }

        .form-input, .form-select, .form-textarea {
            width: 100%;
            padding: 18px 22px;
            border: 2px solid var(--border-color);
            border-radius: 14px;
            font-family: 'Inter', sans-serif;
            font-size: 15px;
            transition: all 0.3s;
            background: var(--bg-input);
            font-weight: 600;
            color: var(--text-primary);
        }

        .form-input:focus, .form-select:focus, .form-textarea:focus {
            outline: none;
            border-color: var(--accent-color);
            background: var(--bg-card);
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
            transform: translateY(-2px);
        }
        
        body.dark-mode .form-input:focus {
            box-shadow: 0 0 0 4px rgba(229, 193, 74, 0.15);
        }

        .form-textarea { resize: vertical; min-height: 110px; }
        .form-row { display: grid; grid-template-columns: repeat(2, 1fr); gap: 22px; }

        .error-text { color: #dc2626; font-size: 12px; margin-top: 8px; display: none; }
        .success-text { color: #10b981; font-size: 12px; margin-top: 8px; display: none; }
        .small-text { font-size: 12px; color: var(--text-secondary); margin-top: 6px; }

        .checkbox-group {
            display: flex;
            align-items: center;
            gap: 15px;
            padding: 20px;
            background: var(--bg-input);
            border-radius: 14px;
            border: 2px solid var(--border-color);
            cursor: pointer;
            transition: all 0.3s;
        }

        .checkbox-group:hover { border-color: var(--accent-color); transform: translateX(5px); }
        .checkbox-group label { font-size: 16px; font-weight: 700; color: var(--text-primary); cursor: pointer; }

        .form-actions {
            display: flex;
            gap: 18px;
            margin-top: 40px;
            padding-top: 35px;
            border-top: 3px solid var(--border-color);
        }

        .form-btn {
            flex: 1;
            padding: 18px 36px;
            border-radius: 14px;
            font-size: 17px;
            font-weight: 800;
            cursor: pointer;
            transition: all 0.3s;
            border: none;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            text-decoration: none;
        }

        .btn-submit { background: var(--btn-primary); color: var(--btn-text); box-shadow: 0 8px 25px rgba(0,0,0,0.15); }
        .btn-submit:hover { transform: translateY(-3px); }
        .btn-submit:disabled { opacity: 0.6; cursor: not-allowed; transform: none; }

        .btn-cancel { background: var(--bg-card); color: var(--text-secondary); border: 2px solid var(--border-color); }
        .btn-cancel:hover { background: var(--menu-hover); transform: translateY(-2px); border-color: var(--accent-color); color: var(--accent-color); }

        @keyframes fadeInUp { from { opacity: 0; transform: translateY(30px); } to { opacity: 1; transform: translateY(0); } }
        @keyframes slideDown { from { opacity: 0; transform: translateY(-30px); } to { opacity: 1; transform: translateY(0); } }
        @keyframes slideUp { from { opacity: 0; transform: translateY(30px); } to { opacity: 1; transform: translateY(0); } }

        @media (max-width: 968px) {
            .main-content { display: flex; flex-direction: column; padding: 20px 15px; }
        }

        @media (max-width: 640px) {
            .form-row { grid-template-columns: 1fr; gap: 0; }
            .form-actions { flex-direction: column; }
            .edit-form-container { padding: 30px 20px; }
            .page-header { flex-direction: column; align-items: flex-start; }
            .back-btn { width: 100%; justify-content: center; }
        }
    </style>
</head>

<body>
    <div class="main-content">
        <%- include("../partials/user/profile-sidebar.ejs", { user: user,
        activePage: 'address' }) %>

        <div class="edit-content">
            <div class="page-header">
                <div class="page-header-left">
                    <h1>Edit Address</h1>
                    <p>Update your address details</p>
                </div>
                <a href="/profile/address" class="back-btn">Back to
                    Addresses</a>
            </div>

            <div class="edit-form-container">
                <div class="form-header">
                    <h2>Address Information</h2>
                    <p>Modify the fields you want to update</p>
                </div>

                <form id="editAddressForm" onsubmit="updateAddress(event)">
                    <input type="hidden" id="addressId"
                        value="<%= address._id %>">

                    <div class="form-group">
                        <label class="form-label">Address Type *</label>
