<body>
    <div class="site-wrapper">
        <div class="wishlist-header">
            <h1><i class="fa fa-heart"></i> My Wishlist <span class="wishlist-count">(<span id="wishlistCount"><%= totalItems %></span> items)</span></h1>
            <% if(wishlistItems.length > 0) { %>
                <button class="move-all-btn" onclick="moveAllToBag()">
                    <i class="fa fa-shopping-cart"></i> Move All to Cart
                </button>
            <% } %>
        </div>

        <div class="wishlist-grid" id="wishlistGrid">
            <% if(wishlistItems.length === 0) { %>
                <div class="empty-wishlist">
                    <div class="empty-icon"><i class="fa fa-heart"></i></div>
                    <h3>Your Wishlist is Empty</h3>
                    <p>Save your favorite items here and never lose track of them!</p>
                    <a href="/shopPage" class="browse-btn">
                        <i class="fa fa-search"></i> Start Shopping
                    </a>
                </div>
            <% } else { %>
                <% wishlistItems.forEach(item => { %>
                    <% 
                        const product = item.productId;
                        if (!product) return;

                        // Find cheapest variant (lowest salePrice, fallback to regularPrice)
                        let cheapestVariant = null;
                        let lowestSalePrice = Infinity;
                        let regularPriceOfCheapest = 0;

                        product.variants?.forEach(v => {
                            const price = v.salePrice > 0 ? v.salePrice : v.regularPrice;
                            if (price < lowestSalePrice) {
                                lowestSalePrice = price;
                                regularPriceOfCheapest = v.regularPrice;
                                cheapestVariant = v;
                            }
                        });

                        if (!cheapestVariant) {
                            lowestSalePrice = product.salePrice || product.price || 0;
                            regularPriceOfCheapest = product.price || 0;
                        }

                        const defaultSize = cheapestVariant?.size || '';
                    %>

                    <article class="wishlist-card" data-product-id="<%= product._id %>">
                        <div class="image-wrap">
                            <!-- Fixed: Click image â†’ go to product detail -->
                            <a href="/productDetails?id=<%= product._id %>">
                                <img src="<%= product.images?.[0] || 'https://via.placeholder.com/350?text=No+Image' %>" 
                                     alt="<%= product.productName %>" loading="lazy">
                            </a>

                            <div class="product-icons">
                                <button class="remove-wishlist-btn" data-id="<%= product._id %>" aria-label="Remove">
                                    <i class="fa fa-times"></i>
                                </button>
                            </div>

                            <% if(product.discount > 0) { %>
                                <div class="discount-badge"><%= product.discount %>% OFF</div>
                            <% } %>
                        </div>

                        <div class="product-body">
                            <h5><%= product.productName %></h5>
                            <div class="product-meta">
                                <div><strong>Brand:</strong> <%= product.brand?.brandName || 'No Brand' %></div>
                                <div><strong>Category:</strong> <%= product.category?.name || 'No Category' %></div>
                                <div>
                                    <!-- Fixed: Correct regular price from same variant -->
                                    <span class="price">â‚¹<%= lowestSalePrice %></span>
                                    <% if(regularPriceOfCheapest > lowestSalePrice) { %>
                                        <span class="old-price">â‚¹<%= regularPriceOfCheapest %></span>
                                    <% } %>
                                </div>

                                <% if(product.variants && product.variants.length > 0) { %>
                                    <select class="variant-select" data-product-id="<%= product._id %>">
                                        <% product.variants.forEach(v => { %>
                                            <option value="<%= v.size %>" <%= v.size === defaultSize ? 'selected' : '' %>>
                                                <%= v.size %> ml - â‚¹<%= v.salePrice > 0 ? v.salePrice : v.regularPrice %>
                                            </option>
                                        <% }) %>
                                    </select>
                                <% } %>
                            </div>

                            <div class="product-actions">
                                <button class="add-to-cart-btn <%= !defaultSize ? 'disabled' : '' %>"
                                        data-id="<%= product._id %>"
                                        data-variant-id="<%= defaultSize %>"
                                        <%= !defaultSize ? 'disabled' : '' %>>
                                    <i class="fa fa-shopping-cart"></i> Add to Cart
                                </button>
                            </div>
                        </div>
                    </article>
                <% }) %>
            <% } %>
        </div>

        <% if(totalPages > 1) { %>
            <div class="pagination">
                <a href="/wishlist?page=<%= currentPage > 1 ? currentPage - 1 : 1 %>" <%= currentPage === 1 ? 'class="disabled"' : '' %>><i class="fa fa-chevron-left"></i> Previous</a>
                <% for(let i = 1; i <= totalPages; i++) { %>
                    <% if(i === currentPage) { %>
                        <span class="current"><%= i %></span>
                    <% } else { %>
                        <a href="/wishlist?page=<%= i %>"><%= i %></a>
                    <% } %>
                <% } %>
                <a href="/wishlist?page=<%= currentPage < totalPages ? currentPage + 1 : totalPages %>" <%= currentPage === totalPages ? 'class="disabled"' : '' %>>Next <i class="fa fa-chevron-right"></i></a>
            </div>
        <% } %>
    </div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    // Toast for Add to Cart
    const Toast = Swal.mixin({
        toast: true,
        position: 'top-end',
        showConfirmButton: false,
        timer: 2500,
        timerProgressBar: true,
        didOpen: (toast) => {
            toast.onmouseenter = Swal.stopTimer;
            toast.onmouseleave = Swal.resumeTimer;
        }
    });

    // Run once DOM is ready
    document.addEventListener('DOMContentLoaded', function () {
        attachEventListeners();
    });

    // Re-attach event listeners after dynamic content (pagination)
    function attachEventListeners() {
        // Variant selection
        document.querySelectorAll('.variant-select').forEach(select => {
            select.addEventListener('change', function () {
                const btn = this.closest('.wishlist-card').querySelector('.add-to-cart-btn');
                const size = this.value;
                btn.dataset.variantId = size;
                btn.classList.toggle('disabled', !size);
                btn.disabled = !size;
            });
        });

        // Remove button (Ã—)
        document.querySelectorAll('.remove-wishlist-btn').forEach(btn => {
            btn.addEventListener('click', async function () {
                const productId = this.dataset.id;

                const confirm = await Swal.fire({
                    title: 'Remove from Wishlist?',
                    text: "You can add it back anytime",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#e85105',
                    cancelButtonColor: '#6b7280',
                    confirmButtonText: 'Yes, Remove',
                    cancelButtonText: 'Cancel'
                });

                if (confirm.isConfirmed) {
                    await removeFromWishlistWithSuccessPopup(productId);
                }
            });
        });

        // Add to Cart button
        document.querySelectorAll('.add-to-cart-btn').forEach(btn => {
            btn.addEventListener('click', async function () {
                const productId = this.dataset.id;
                const variantSize = this.dataset.variantId || '';

                if (!variantSize && this.closest('.wishlist-card').querySelector('.variant-select')) {
                    Toast.fire({ icon: 'warning', title: 'Please select a size' });
                    return;
                }

                await addToCartWithToastOnly(productId, variantSize || null, this);
            });
        });
    }

    // Manual Remove â†’ Show "Removed!" popup
    async function removeFromWishlistWithSuccessPopup(productId) {
        try {
            const res = await fetch(`/wishlist/remove/${productId}`, { method: 'DELETE' });
            const data = await res.json();

            if (data.success) {
                removeCardAndUpdateUI(productId);

                await Swal.fire({
                    icon: 'success',
                    title: 'Removed!',
                    text: 'Item removed from your wishlist',
                    confirmButtonColor: '#10b981',
                    timer: 1800,
                    timerProgressBar: true,
                    showConfirmButton: false
                });
            } else {
                Toast.fire({ icon: 'error', title: data.message || 'Failed to remove' });
            }
        } catch (err) {
            Toast.fire({ icon: 'error', title: 'Network error' });
        }
    }

    // Add to Cart â†’ Only toast + silent remove
    async function addToCartWithToastOnly(productId, variantSize, button) {
        const original = button.innerHTML;
        button.disabled = true;
        button.innerHTML = '<i class="fa fa-spinner fa-spin"></i> Adding...';

        try {
            const res = await fetch('/cart/add', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ productId, variantSize: variantSize || undefined, quantity: 1 })
            });
            const data = await res.json();

            if (data.success) {
                Toast.fire({
                    icon: 'success',
                    title: 'Added to cart!'
                });
                removeCardAndUpdateUI(productId); // Silent remove
            } else {
                Toast.fire({ icon: 'error', title: data.message || 'Failed to add' });
            }
        } catch (err) {
            Toast.fire({ icon: 'error', title: 'Something went wrong' });
        } finally {
            button.disabled = false;
            button.innerHTML = original;
        }
    }

    // Central function: Remove card + instantly update UI & count
    function removeCardAndUpdateUI(productId) {
        const card = document.querySelector(`[data-product-id="${productId}"]`);
        if (card) {
            card.style.animation = 'fadeOut 0.4s ease';
            setTimeout(() => {
                card.remove();

                // Update count instantly
                const remaining = document.querySelectorAll('.wishlist-card').length;
                document.getElementById('wishlistCount').textContent = remaining;

                // If wishlist is now empty â†’ show empty state instantly
                if (remaining === 0) {
                    showEmptyWishlist();
                }
            }, 400);
        }
    }

    // Show empty wishlist without page reload
    function showEmptyWishlist() {
        const grid = document.getElementById('wishlistGrid');
        if (grid) {
            grid.innerHTML = `
                <div class="empty-wishlist">
                    <div class="empty-icon"><i class="fa fa-heart"></i></div>
                    <h3>Your Wishlist is Empty</h3>
                    <p>Save your favorite items here and never lose track of them!</p>
                    <a href="/shopPage" class="browse-btn">
                        <i class="fa fa-search"></i> Start Shopping
                    </a>
                </div>
            `;
        }

        // Hide "Move All to Cart" button
        const moveBtn = document.querySelector('.move-all-btn');
        if (moveBtn) moveBtn.style.display = 'none';
    }

    // Move All to Cart
    async function moveAllToBag() {
        const result = await Swal.fire({
            title: 'Move All to Cart?',
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#626362',
            confirmButtonText: 'Yes, Move All'
        });

        if (!result.isConfirmed) return;

        try {
            const res = await fetch('/wishlist/move-all-to-cart', { method: 'POST' });
            const data = await res.json();

            if (data.success) {
                Toast.fire({ icon: 'success', title: 'All items moved to cart!' });
                setTimeout(() => location.href = '/cart', 1500);
            } else {
                Toast.fire({ icon: 'error', title: data.message || 'Failed' });
            }
        } catch (err) {
            Toast.fire({ icon: 'error', title: 'Network error' });
        }
    }
</script>
</body>

