        }

        .browse-btn {
            padding: 12px 24px;
            background: linear-gradient(135deg, #626362 0%, #363636 100%);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .browse-btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
        }

        .variant-select {
            padding: 8px;
            border-radius: 8px;
            border: 1px solid #e2e8f0;
            font-size: 13px;
            margin-top: 6px;
            width: 100%;
            background: #fff;
        }

        /* Modern Pagination Design */
        .pagination {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 8px;
            margin-top: 40px;
            padding: 20px 0;
            background: #f8f9fa;
            border-radius: 50px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            backdrop-filter: blur(10px);
            max-width: 400px;
            margin-left: auto;
            margin-right: auto;
        }

        .pagination a,
        .pagination span {
            padding: 12px 16px;
            border-radius: 50px;
            font-size: 14px;
            font-weight: 500;
            text-decoration: none;
            min-width: 44px;
            text-align: center;
            transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
