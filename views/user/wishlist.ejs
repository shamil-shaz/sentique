<body>
    <div class="site-wrapper">
        <div class="wishlist-header">
            <h1>
                <i class="fa fa-heart"></i>
                My Wishlist
                <span class="wishlist-count">
                    (<span id="wishlistCount"><%= totalItems %></span> items)
                </span>
            </h1>

            <%
            let hasUnlisted = false;
            let hasOutOfStock = false;

            if (wishlistItems && wishlistItems.length > 0) {
                hasUnlisted = wishlistItems.some(item => {
                    const p = item.productId;
                    if (!p) return false;
                    const outOfStock = Array.isArray(p.variants) && p.variants.length > 0
                        ? p.variants.every(v => v.stock <= 0)
                        : (p.stock !== undefined && p.stock <= 0);
                    return (
                        p.isBlocked ||
                        p.status !== 'Available' ||
                        (p.category && p.category.isListed === false) ||
                        (p.brand && p.brand.isBlocked === true) ||
                        outOfStock
                    );
                });

                hasOutOfStock = wishlistItems.some(item => {
                    const p = item.productId;
                    if (!p) return false;
                    const selected = Array.isArray(p.variants) && p.variants.length > 0
                        ? p.variants.find(v => v.size === item.variantSize)
                        : null;
                    const allOut = Array.isArray(p.variants) && p.variants.length > 0
                        ? p.variants.every(v => v.stock <= 0)
                        : (p.stock !== undefined && p.stock <= 0);
                    return allOut || (selected && selected.stock <= 0);
                });
            }
            %>

            <button class="move-all-btn"
                onclick="moveAllToBag()"
                <%=(hasUnlisted || hasOutOfStock) ? 'disabled' : '' %>
                title="<%= (hasUnlisted || hasOutOfStock) ? 'Some items are unavailable or out of stock' : '' %>">
                <i class="fa fa-shopping-cart"></i> Move All to Cart
            </button>
        </div>

        <div class="wishlist-grid" id="wishlistGrid">
            <% if (!wishlistItems || wishlistItems.length === 0) { %>

            <div class="empty-wishlist">
                <div class="empty-icon"><i class="fa fa-heart"></i></div>
                <h3>Your Wishlist is Empty</h3>
                <p>Save your favorite items here and never lose track of them!</p>
                <a href="/shopPage" class="browse-btn">
                    <i class="fa fa-search"></i> Start Shopping
                </a>
            </div>

            <% } else { %>

            <% wishlistItems.forEach(item => { %>
            <% const product = item.productId; %>

            <% if (product) { %>

            <%
            const isProductBlocked = product.isBlocked || product.status !== 'Available';
            const isCategoryBlocked = product.category && product.category.isListed === false;
            const isBrandBlocked = product.brand && product.brand.isBlocked === true;

            const allOut = product.variants && product.variants.length > 0
                ? product.variants.every(v => v.stock <= 0)
                : (product.stock !== undefined && product.stock <= 0);

            const isUnavailable = isProductBlocked || isCategoryBlocked || isBrandBlocked;

            let blockMessage = "UNAVAILABLE";
            if (allOut) blockMessage = "OUT OF STOCK";
            else if (isBrandBlocked) blockMessage = "BRAND UNLISTED";
            else if (isCategoryBlocked) blockMessage = "CATEGORY UNLISTED";
            else if (isProductBlocked) blockMessage = "UNAVAILABLE";

            let cheapestVariant = null;
            let lowestSalePrice = Infinity;
            let regularPriceOfCheapest = 0;

            if (product.variants && product.variants.length > 0) {
                product.variants.forEach(v => {
                    const price = (v.salePrice && v.salePrice > 0) ? v.salePrice : v.regularPrice;
                    if (price < lowestSalePrice) {
                        lowestSalePrice = price;
                        regularPriceOfCheapest = v.regularPrice;
                        cheapestVariant = v;
                    }
                });
            }

            if (!cheapestVariant) {
                lowestSalePrice = product.salePrice || product.price || 0;
                regularPriceOfCheapest = product.price || 0;
            }

            const defaultSize = cheapestVariant ? cheapestVariant.size : '';
            const selectedSize = item.variantSize || defaultSize;

            const selectedVariant = (product.variants || []).find(v => v.size === selectedSize);
            const selectedOut = selectedVariant && selectedVariant.stock <= 0;
            const allOutVariants = (product.variants && product.variants.length > 0)
                ? product.variants.every(v => v.stock <= 0)
                : (product.stock !== undefined && product.stock <= 0);
            %>

            <article class="wishlist-card"
                data-product-id="<%= product._id %>"
                style="<%= (isUnavailable || allOut) ? 'opacity:0.8;filter:grayscale(0.7);position:relative;' : '' %>">

                <div class="image-wrap">

                    <% if (isUnavailable || allOutVariants || selectedOut) { %>
                    <div class="image-overlay"></div>
                    <div class="image-stock-warning">
                        <%= allOutVariants ? "OUT OF STOCK" :
                        selectedOut ? "VARIANT OUT OF STOCK" :
                        blockMessage %>
                    </div>
                    <% } %>
                    <a
                        href="<%= isUnavailable ? '#' : '/productDetails?id=' + product._id %>">
                        <img
                            src="<%= (product.images && product.images[0]) ? product.images[0] : 'https://via.placeholder.com/350?text=No+Image' %>"
                            alt="<%= product.productName %>"
                            loading="lazy">
                    </a>

                    <div class="product-icons">
                        <button class="remove-wishlist-btn"
                            data-id="<%= product._id %>">
                            <i class="fa fa-times"></i>
                        </button>
                    </div>
                </div>

                <div class="product-body">
                    <h5><%= product.productName %></h5>

                    <div class="product-meta">
                        <div>
                            <strong>Brand:</strong>
                            <%= (product.brand && product.brand.brandName) ||
                            'No Brand' %>
                        </div>
                        <div>
                            <strong>Category:</strong>
                            <%= (product.category && product.category.name) ||
                            'No Category' %>
                        </div>

                        <% if (product.variants && product.variants.length > 0)
                        { %>
                        <select class="variant-select"
                            data-product-id="<%= product._id %>"
                            data-variants='<%= JSON.stringify(product.variants) %>'>
                            <% product.variants.forEach(v => { %>
                            <option value="<%= v.size %>"
                                <%=(v.size === selectedSize) ? "selected" : ""
                                %>
                                <%= v.stock <= 0 ? "disabled" : "" %>>
                                <%= v.size %>ml <%= v.stock <= 0 ?
                                "(Out of Stock)" : "" %>
                            </option>
                            <% }) %>
                        </select>
                        <% } %>

                        <div>
                            <span class="price">₹<%= lowestSalePrice %></span>
                            <% if (regularPriceOfCheapest > lowestSalePrice) {
                            %>
                            <span class="old-price">₹<%= regularPriceOfCheapest
                                %></span>
                            <% } %>
                        </div>
                    </div>

                    <div class="product-actions">
                        <% if (allOutVariants) { %>
                        <button class="add-to-cart-btn disabled" disabled>
                            <i class="fa fa-ban"></i> Out of Stock
                        </button>
                        <% } else if (selectedOut) { %>
                        <button class="add-to-cart-btn disabled" disabled>
                            <i class="fa fa-ban"></i> Variant Out of Stock
                        </button>
                        <% } else if (isUnavailable) { %>
                        <button class="add-to-cart-btn disabled" disabled
                            data-unavailable="1">
                            <i class="fa fa-ban"></i> <%= blockMessage %>
                        </button>
                        <% } else { %>
                        <button class="add-to-cart-btn"
                            data-id="<%= product._id %>"
                            data-variant-id="<%= selectedSize || '' %>">
                            <i class="fa fa-shopping-cart"></i> Add to Cart
                        </button>
                        <% } %>
                    </div>

                </div>
            </article>

            <% } %>
            <% }) %>

            <% } %>
        </div>

        <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
        <div class="pagination" role="navigation" aria-label="pagination">
            <% if (currentPage > 1) { %>
            <a href="?page=<%= currentPage - 1 %>">&laquo;</a>
            <% } else { %>
            <a class="disabled">&laquo;</a>
            <% } %>

            <% for (let p = Math.max(1, currentPage - 2); p <=
            Math.min(totalPages, currentPage + 2); p++) { %>
            <% if (p === currentPage) { %>
            <span class="current"><%= p %></span>
            <% } else { %>
            <a href="?page=<%= p %>"><%= p %></a>
            <% } %>
            <% } %>

            <% if (currentPage < totalPages) { %>
            <a href="?page=<%= currentPage + 1 %>">&raquo;</a>
            <% } else { %>
            <a class="disabled">&raquo;</a>
            <% } %>
        </div>
        <% } %>

        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

        <script>
    const Toast = Swal.mixin({
        toast: true,
        position: 'top-end',
        showConfirmButton: false,
        timer: 2500,
        timerProgressBar: true,
        didOpen: (toast) => {
            toast.onmouseenter = Swal.stopTimer;
            toast.onmouseleave = Swal.resumeTimer;
        }
    });

    document.addEventListener('DOMContentLoaded', function () {
        attachEventListeners();
        updateMoveAllButton();
    });

    function attachEventListeners() {
        document.querySelectorAll('.variant-select').forEach(select => {
           select.addEventListener('change', function () {
    const card = this.closest('.wishlist-card');
    const button = card.querySelector('.add-to-cart-btn');
    const variants = JSON.parse(this.dataset.variants || '[]');
    const selected = variants.find(v => String(v.size) === String(this.value));

    // Clear previous warnings
    card.querySelector('.image-overlay')?.remove();
    card.querySelector('.image-stock-warning')?.remove();

    if (!selected || selected.stock <= 0) {
        button.disabled = true;
        button.classList.add('disabled');
        button.innerHTML = '<i class="fa fa-ban"></i> Variant Out of Stock';
        
        // Add the visual "Out of Stock" overlay
        card.querySelector('.image-wrap').insertAdjacentHTML(
            'beforeend',
            `<div class="image-overlay"></div><div class="image-stock-warning">VARIANT OUT OF STOCK</div>`
        );
    } else {
        // ENABLE logic: If the user picks a good size, this specific button works!
        button.disabled = false;
        button.classList.remove('disabled');
        button.innerHTML = '<i class="fa fa-shopping-cart"></i> Add to Cart';
        button.setAttribute('data-variant-id', this.value);
    }

   
    updateMoveAllButton(); 
});
        });

        document.querySelectorAll('.remove-wishlist-btn').forEach(btn => {
            btn.addEventListener('click', async function () {
                const productId = this.dataset.id;
                const confirmed = await Swal.fire({
                    title: 'Remove from Wishlist?',
                    text: "You can add it back anytime",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#e85105',
                    cancelButtonColor: '#6b7280',
                    confirmButtonText: 'Yes, Remove',
                    cancelButtonText: 'Cancel'
                });

                if (confirmed.isConfirmed) {
                    await removeFromWishlistWithSuccessPopup(productId);
                }
            });
        });

       document.querySelectorAll('.add-to-cart-btn').forEach(btn => {
    btn.addEventListener('click', async function () {
        const productId = this.dataset.id;
        
        // Find the specific card this button belongs to
        const card = this.closest('.wishlist-card');
        const select = card.querySelector('.variant-select');
        
        // Grab the CURRENT value from the dropdown, not the old button attribute
        const currentVariantSize = select ? select.value : '';

        if (!currentVariantSize) {
            Toast.fire({ icon: 'warning', title: 'Please select a size' });
            return;
        }

        // Send currentVariantSize to the backend
        await addToCartWithToastOnly(productId, currentVariantSize, this);
    });
});
    }

    async function removeFromWishlistWithSuccessPopup(productId) {
        try {
            const res = await fetch(`/wishlist/remove/${productId}`, { method: 'DELETE' });
            const data = await res.json();

            if (data.success) {
                removeCardAndUpdateUI(productId);

                await Swal.fire({
                    icon: 'success',
                    title: 'Removed!',
                    text: 'Item removed from your wishlist',
                    confirmButtonColor: '#10b981',
                    timer: 1400,
                    timerProgressBar: true,
                    showConfirmButton: false
                });
            } else {
                Toast.fire({ icon: 'error', title: data.message || 'Failed to remove' });
            }
        } catch (err) {
            Toast.fire({ icon: 'error', title: 'Network error' });
        }
    }

    async function addToCartWithToastOnly(productId, variantSize, button) {
        const original = button.innerHTML;
        button.disabled = true;
        button.innerHTML = '<i class="fa fa-spinner fa-spin"></i> Adding...';

        try {
            const res = await fetch('/cart/add', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ productId, variantSize: variantSize || undefined, quantity: 1 })
            });
            const data = await res.json();

            if (data.success) {
                Toast.fire({ icon: 'success', title: 'Added to cart!' });
                removeCardAndUpdateUI(productId);
                updateMoveAllButton();
            } else {
                Toast.fire({ icon: 'error', title: data.message || 'Failed to add' });
            }
        } catch (err) {
            Toast.fire({ icon: 'error', title: 'Something went wrong' });
        } finally {
            try {
                if (button && document.body.contains(button)) {
                    button.disabled = false;
                    button.innerHTML = original;
                }
            } catch (e) { }
        }
    }

    function removeCardAndUpdateUI(productId) {
        const card = document.querySelector(`.wishlist-card[data-product-id="${productId}"]`);
        if (card) {
            card.style.animation = 'fadeOut 0.4s ease';
            setTimeout(() => {
                card.remove();

                const remaining = document.querySelectorAll('.wishlist-card').length;
                document.getElementById('wishlistCount').textContent = remaining;

                if (remaining === 0) {
                    showEmptyWishlist();
                }

                updateMoveAllButton();
            }, 400);
        } else {
            updateMoveAllButton();
        }
    }

    function showEmptyWishlist() {
        const grid = document.getElementById('wishlistGrid');
        if (grid) {
            grid.innerHTML = `
                <div class="empty-wishlist">
                    <div class="empty-icon"><i class="fa fa-heart"></i></div>
                    <h3>Your Wishlist is Empty</h3>
                    <p>Save your favorite items here and never lose track of them!</p>
                    <a href="/shopPage" class="browse-btn">
                        <i class="fa fa-search"></i> Start Shopping
                    </a>
                </div>
            `;
        }

        const moveBtn = document.querySelector('.move-all-btn');
        if (moveBtn) moveBtn.style.display = 'none';
    }

    async function moveAllToBag() {
        const selects = document.querySelectorAll('.variant-select');

        for (const s of selects) {
            try {
                await fetch('/wishlist/update-variant', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        productId: s.dataset.productId,
                        variantSize: s.value
                    })
                });
            } catch (e) { }
        }

        const result = await Swal.fire({
            title: 'Move all to cart?',
            icon: 'question',
            showCancelButton: true,
            confirmButtonText: 'Yes',
        });

        if (!result.isConfirmed) return;

        const variantsMap = {};
        document.querySelectorAll('.variant-select').forEach(s => {
            variantsMap[s.dataset.productId] = s.value;
        });

        try {
            const res = await fetch('/wishlist/move-all-to-cart', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ variantsMap })
            });
            const data = await res.json();

            if (data.success) {
                Toast.fire({ icon: 'success', title: 'All items moved to cart!' });
                setTimeout(() => location.href = '/cart', 1200);
            } else {
                Toast.fire({ icon: 'error', title: data.message || 'Failed' });
            }
        } catch (e) {
            Toast.fire({ icon: 'error', title: 'Network error' });
        }
    }

    function updateMoveAllButton() {
    const cards = document.querySelectorAll('.wishlist-card');
    const moveBtn = document.querySelector('.move-all-btn');
    if (!moveBtn) return;

    let shouldDisableMoveAll = false;

    cards.forEach(card => {
        const btn = card.querySelector('.add-to-cart-btn');
        const select = card.querySelector('.variant-select');
        
        // If the current button is disabled (because of selected size or blocking)
        // then we must disable the "Move All" button
        if (!btn || btn.disabled || btn.classList.contains('disabled')) {
            shouldDisableMoveAll = true;
        }
    });

    moveBtn.disabled = shouldDisableMoveAll;
}

        </script>

    </body>

