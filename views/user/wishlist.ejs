            align-items: center;
            justify-content: center;
            gap: 4px;
        }

        .pagination a {
            background: #fff;
            color: #323e4e;
            border: 2px solid #e2e8f0;
        }

        .pagination a:hover:not(.disabled) {
            background: linear-gradient(135deg, #d4af37 0%, #f0d978 100%);
            color: #000;
