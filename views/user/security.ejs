                } else {
                    showEmailError('emailPassword', data.message || 'Failed to send OTP');
                    if(!data.message.toLowerCase().includes('password')) {
                         Swal.fire({ icon: "error", title: "Error", text: data.message });
                    }
                }
            } catch (err) {
