            } else if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(newEmail)) {
                showEmailError('newEmail', '‚ö† Invalid email address');
                isValid = false;
            }

            if (!password) {
                showEmailError('emailPassword', '‚ö† Password is required for verification');
                isValid = false;
            }

            if (!isValid) return;

            try {
                Swal.fire({ title: "Sending OTP...", allowOutsideClick: false, didOpen: () => Swal.showLoading() });
                const res = await fetch("/profile/change-email-init", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ newEmail, password }),
                });
                Swal.close();

                const data = await res.json();
                if (data.success) {
                    Swal.fire({ 
                        icon: "success", 
                        title: "OTP Sent", 
                        text: data.message, 
                        timer: 1500 
                    }).then(() => {
                        window.location.href = `/profile/change-email-otp?type=${data.type}&token=${data.token}`;
