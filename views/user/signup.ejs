
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Sign Up - Sentique</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://fonts.googleapis.com/css2?family=Inter&display=swap" rel="stylesheet">
  <style>

   body {
  margin: 0;
  font-family: 'Inter', sans-serif;
  background: #fff;
  padding: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
}

.signup-container {
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  max-width: 1100px;
  width: 90%;
  height: 50%;
  background-color: #fff;
  box-shadow: 0 4px 20px rgba(0,0,0,0.1);
  border-radius: 12px;
  overflow: hidden;
}

.signup-left {
  flex: 1 1 45%;
   height: 808px; 
  background: #363136;
}

.signup-left img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.signup-right {
  flex: 1 1 45%;
  padding: 40px;
  background: #f4f4f4;
}
    /* 5. Form styling */
    .signup-form h2 {
      margin-top: 0;
      font-size: 1.5rem;
    }
    .signup-form p {
      margin: .5rem 0 1.5rem;
      color: #555;
    }
    .signup-form label {
      display: block;
      margin: 0.75rem 0 0.25rem;
      font-size: .9rem;
    }
    .signup-form input {
      width: 100%;
      padding: .75rem;
      border: 1px solid #ccc;
      border-radius: 5px;
      font-size: .95rem;
      box-sizing: border-box;
    }
    .signup-form .error {
      color: red;
      font-size: .8rem;
      margin-top: .25rem;
    }

    /* 6. Buttons */
    .create-btn,
    .google-btn {
      display: block;
      width: fit-content;
      margin: 1.5rem auto 0;
      padding: .75rem 2rem;
      font-size: 1rem;
      border-radius: 5px;
      cursor: pointer;
      text-decoration: none;
      text-align: center;
    }
    .create-btn {
      background: #0a3e5e;
      color: #fff;
      border: none;
    }
    .google-btn {
      background: #fff;
      color: #444;
      border: 1px solid #ccc;
      display: flex;
      align-items: center;
      gap: .5rem;
    }
    .google-btn img {
      width: 20px;
      height: 20px;
    }
  

    /* 7. Responsive */
    @media (max-width:768px) {
      .signup-container {
        flex-direction: column;
      }
      .right-container {
        padding: 20px;
      }
      .create-btn,
      .google-btn {
        width: 100%;
      }
    }
  </style>
</head>
<body>

<main class="signup-container">
  <div class="signup-left">
    <div class="signup-image">
        <img src="/photos/zodiac perfume/signup-cover image.png" alt="Sentique Perfume">
    </div>

  </div>

  <div class="signup-right">
  

  <form id="signup-form" class="signup-form" novalidate>
    <h2>Create an account</h2>
    <p>Enter your details below</p>

    <label for="fullName">Full Name</label>
    <input type="text" id="fullName" name="fullName" placeholder="Enter your full name">
    <div class="error" id="error1"></div>

    <label for="phone">Phone</label>
    <input type="text" id="phone" name="phone" placeholder="Enter your phone number">
    <div class="error" id="error2"></div>

    <label for="email">Email</label>
    <input type="email" id="email" name="email" placeholder="Enter your email">
    <div class="error" id="error3"></div>

    <label for="referral">Referral Code</label>
    <input type="text" id="referral" name="referral" placeholder="Referral code (optional)">

    <label for="password">Password</label>
    <input type="password" id="password" name="password" placeholder="Enter your password">
    <div class="error" id="error5"></div>

    <label for="confirmPassword">Confirm Password</label>
    <input type="password" id="confirmPassword" placeholder="Re-enter your password">
    <div class="error" id="error6"></div>
   
    <% if (message) { %>
       <div class="error" style="color: red; font-size: 14px; margin-top: 5px;">
          <%= message %>
        </div>
     <% } %>

    <button type="button" id="submitBtn" class="create-btn">Create Account</button>

    <a href="/auth/google" class="google-btn">
      <img src="https://www.gstatic.com/firebasejs/ui/2.0.0/images/auth/google.svg" alt="Google Logo" width="25" height="25">
      <span>Sign up with Google</span>
    </a>

    <p class="login-link">Already have an account? <a href="/login">Log in</a></p>
  </form>
  </div>
</main>

<script>
  const fullName = document.getElementById("fullName");
  const phone = document.getElementById("phone");
  const email = document.getElementById("email");
  const referral = document.getElementById("referral");
  const password = document.getElementById("password");
  const confirmPassword = document.getElementById("confirmPassword");
  const submitBtn = document.getElementById("submitBtn");

  const error1 = document.getElementById("error1");
  const error2 = document.getElementById("error2");
  const error3 = document.getElementById("error3");
  const error5 = document.getElementById("error5");
  const error6 = document.getElementById("error6");

  function validateFields() {
    let valid = true;

    // Reset errors
    [error1, error2, error3, error5, error6].forEach(err => err.textContent = "");

    // Full Name
    if (fullName.value.trim().length < 3) {
      error1.textContent = "Full name must be at least 3 characters.";
      valid = false;
    }

    // Phone
    if (!/^[0-9]{10}$/.test(phone.value.trim())) {
      error2.textContent = "Enter a valid 10-digit phone number.";
      valid = false;
    }

    // Email
    if (!/^\S+@\S+\.\S+$/.test(email.value.trim())) {
      error3.textContent = "Enter a valid email address.";
      valid = false;
    }

   // Password Strength RegEx
const strongPasswordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[\W_]).{6,}$/;

// Password
if (!strongPasswordRegex.test(password.value)) {
  error5.textContent =
    "Password must be at least 6 characters, include 1 uppercase, 1 lowercase, 1 number, and 1 symbol.";
  valid = false;
}

// Confirm Password
if (password.value !== confirmPassword.value) {
  error6.textContent = "Passwords do not match.";
  valid = false;
}


    return valid;
  }

  async function checkEmailExists(emailVal) {
    try {
      const response = await fetch('/check-email', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ email: emailVal })
      });

      const data = await response.json();
      return data.exists;
    } catch (err) {
      console.error('Error checking email:', err);
      return false;
    }
  }

  submitBtn.addEventListener("click", async () => {
    if (!validateFields()) return;

     const exists = await checkEmailExists(email.value.trim());
    if (exists) {
      error3.textContent = "Email is already registered.";
      return;
    } 

    try {
      const response = await fetch("/signup", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          fullName: fullName.value,
          phone: phone.value,
          email: email.value,
          referral: referral.value,
          password: password.value,
          confirmPassword: confirmPassword.value
        }),
      });

      const result = await response.json();

      if (result.success) {
        window.location.href = result.redirectUrl || "/verify-otp";
      } else {
        alert(result.message || "Signup failed.");
      }
    } catch (err) {
      console.error("Signup Error:", err);
      alert("Something went wrong. Please try again.");
    }
  });
</script>

</body>
</html>
