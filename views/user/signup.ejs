    .strength-bar {
      height: 2px;
      background: #334155;
      border-radius: 1px;
      overflow: hidden;
      margin-bottom: 0.3rem;
    }

    .strength-fill {
      height: 100%;
      width: 0%;
      background: var(--error-color);
      transition: all 0.3s ease;
      border-radius: 1px;
    }

    .strength-text {
      font-size: 0.7rem;
