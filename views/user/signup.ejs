      /* Dark Theme Colors */
      --primary-color: #3b82f6;
      --primary-hover: #2563eb;
      --secondary-color: #94a3b8;
      --success-color: #10b981;
      --error-color: #ef4444;
      --warning-color: #f59e0b;
      --background: #0f172a; /* Dark background */
      --surface: #1e293b;    /* Dark surface */
      --text-primary: #f8fafc;
      --text-secondary: #94a3b8;
      --border-color: #334155;
      --border-focus: #3b82f6;
