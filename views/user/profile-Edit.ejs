<%- include("../partials/user/header.ejs") %>

<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Edit Profile - <%= user.name %></title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <style>
    /* =========================
       1. CSS VARIABLES (THEMING)
       ========================= */
    :root {
        /* --- LIGHT MODE (Clean Professional) --- */
        --bg-body: #f3f4f6;
        --bg-card: #ffffff;
        --bg-input: #f9fafb;
        
        --text-primary: #1f2937;
        --text-secondary: #6b7280;
        --text-label: #374151;
        
        --border-color: #e5e7eb;
        --shadow-card: 0 10px 30px rgba(0,0,0,0.08);
        --shadow-input: 0 0 0 4px rgba(0, 0, 0, 0.05);
        
        /* === UPDATED ACCENTS (Black/Dark Gray instead of Violet) === */
        --accent-gradient: linear-gradient(135deg, #374151 0%, #111827 100%); /* Charcoal to Black */
        --accent-solid: #111827; /* Deep Black */
        --btn-text: #ffffff; /* White text on Black button */
    }

    /* --- DARK MODE (Luxury Gold) --- */
    body.dark-mode {
        /* Gold Definition */
        --gold-gradient: linear-gradient(135deg, #e5c14a 0%, #f0d978 100%);
        --gold-solid: #e5c14a;

        --bg-body: #050505;
        --bg-card: #121212;
        --bg-input: #171717;
        
        --text-primary: #f3f4f6;
        --text-secondary: #9ca3af;
        --text-label: #d1d5db;
        
        --border-color: #333333;
        
        /* Luxury Shadow */
        --shadow-card: 
            0 10px 40px rgba(0, 0, 0, 0.8),
            0 0 20px rgba(229, 193, 74, 0.1);
        --shadow-input: 0 0 0 4px rgba(229, 193, 74, 0.15);
        
        /* Accents (Gold Override) */
        --accent-gradient: linear-gradient(135deg, #e5c14a 0%, #f0d978 100%);
        --accent-solid: #f0d978;
        --btn-text: #000000; /* Black text on Gold button */
    }

    /* =========================
       2. GLOBAL RESET
       ========================= */
    * { margin: 0; padding: 0; box-sizing: border-box; }

    body {
        font-family: 'Inter', sans-serif;
        background: var(--bg-body);
        min-height: 100vh;
        color: var(--text-primary);
        transition: background-color 0.3s ease, color 0.3s ease;
        padding-bottom: 40px;
    }

    .container {
        max-width: 800px;
        margin: 40px auto;
        padding: 0 20px;
    }

    /* =========================
       3. HEADER SECTION
       ========================= */
    .page-header {
        text-align: center;
        margin-bottom: 40px;
        animation: fadeInDown 0.6s ease;
    }

    .page-header h1 {
        color: var(--text-primary);
        font-size: 32px;
        font-weight: 800;
        margin-bottom: 10px;
    }
    
    /* Gold Text in Dark Mode */
    body.dark-mode .page-header h1 {
        background: var(--gold-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .page-header p {
        color: var(--text-secondary);
        font-size: 16px;
    }

    /* =========================
       4. PROFILE CARD
       ========================= */
    .profile-card {
        background: var(--bg-card);
        border-radius: 24px;
        padding: 50px;
        box-shadow: var(--shadow-card);
        animation: fadeInUp 0.6s ease;
        position: relative;
        overflow: hidden;
        border: 1px solid var(--border-color);
    }

    /* Top Colored Bar (Now Black in Light Mode, Gold in Dark Mode) */
    .profile-card::before {
        content: '';
        position: absolute;
        top: 0; left: 0; right: 0;
        height: 6px;
        background: var(--accent-gradient);
    }
    
    body.dark-mode .profile-card {
        border: 1px solid rgba(229, 193, 74, 0.3);
    }

    /* =========================
       5. AVATAR SECTION
       ========================= */
    .avatar-section {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-bottom: 50px;
    }

    .avatar-wrapper {
        position: relative;
        margin-bottom: 20px;
    }

    .avatar {
        width: 140px;
        height: 140px;
        border-radius: 50%;
        background: var(--bg-input);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--text-secondary);
        font-size: 56px;
        font-weight: 700;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        position: relative;
        overflow: hidden;
        transition: all 0.3s ease;
        cursor: pointer;
        border: 4px solid var(--bg-card);
    }
    
    body.dark-mode .avatar {
        border-color: var(--gold-solid);
        box-shadow: 0 0 20px rgba(229, 193, 74, 0.2);
    }

    .avatar:hover {
        transform: scale(1.05);
    }

    .avatar img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .avatar-overlay {
        position: absolute;
        top: 0; left: 0; width: 100%; height: 100%;
        background: rgba(0,0,0,0.6);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s;
    }

    .avatar-wrapper:hover .avatar-overlay { opacity: 1; }

    .avatar-overlay-text {
        color: white;
        font-size: 14px;
        font-weight: 600;
        text-align: center;
    }

    .camera-icon {
        position: absolute;
        bottom: 5px; right: 5px;
        width: 40px; height: 40px;
        background: var(--accent-gradient);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        transition: all 0.3s;
        border: 3px solid var(--bg-card);
        color: #ffffff; /* Icon always white on dark button */
        font-size: 18px;
    }
    
    body.dark-mode .camera-icon {
        color: #000000; /* Black icon on Gold button */
    }

    .camera-icon:hover { transform: scale(1.1); }

    .avatar-name {
        font-size: 24px;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 5px;
    }

    .avatar-email {
        font-size: 15px;
        color: var(--text-secondary);
    }

    input[type="file"] { display: none; }

    /* =========================
       6. FORM STYLES
       ========================= */
    .form-section { margin-bottom: 40px; }

    .section-title {
        font-size: 20px;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 25px;
        padding-bottom: 15px;
        border-bottom: 2px solid var(--border-color);
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .section-title::before {
        content: '';
        width: 4px;
        height: 24px;
        background: var(--accent-gradient);
        border-radius: 2px;
    }

    .form-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 25px;
    }

    .form-group { display: flex; flex-direction: column; }
    .form-group.full-width { grid-column: 1 / -1; }

    .form-label {
        font-size: 14px;
        font-weight: 600;
        color: var(--text-label);
        margin-bottom: 10px;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .form-input {
        padding: 16px 20px;
        border: 2px solid var(--border-color);
        border-radius: 14px;
        font-family: 'Inter', sans-serif;
        font-size: 15px;
        transition: all 0.3s;
        background: var(--bg-input);
        color: var(--text-primary);
        font-weight: 500;
        width: 100%;
    }

    .form-input:focus {
        outline: none;
        border-color: var(--accent-solid);
        background: var(--bg-card);
        box-shadow: var(--shadow-input);
        transform: translateY(-2px);
    }

    .form-input:disabled {
        background: var(--bg-body);
        cursor: not-allowed;
        opacity: 0.7;
    }

    /* =========================
       7. BUTTONS
       ========================= */
    .button-group {
        display: flex;
        gap: 15px;
        margin-top: 40px;
        padding-top: 30px;
        border-top: 1px solid var(--border-color);
    }

    .btn {
        flex: 1;
        padding: 18px 40px;
        border-radius: 14px;
        font-size: 16px;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s;
        border: none;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

    .btn-primary {
        background: var(--accent-gradient);
        color: var(--btn-text);
        box-shadow: 0 8px 20px rgba(0,0,0,0.15);
    }

    .btn-primary:hover {
        transform: translateY(-3px);
        box-shadow: 0 12px 30px rgba(0,0,0,0.25);
    }

    .btn-secondary {
        background: transparent;
        color: var(--text-primary);
        border: 2px solid var(--border-color);
    }

    .btn-secondary:hover {
        border-color: var(--accent-solid);
        color: var(--accent-solid);
        transform: translateY(-2px);
    }
    
    /* Dark mode secondary button override */
    body.dark-mode .btn-secondary {
        border-color: #333;
    }
    body.dark-mode .btn-secondary:hover {
        border-color: var(--gold-solid);
        color: var(--gold-solid);
    }

    /* =========================
       8. SUCCESS ANIMATION
       ========================= */
    .success-animation {
        position: fixed;
        top: 50%; left: 50%;
        transform: translate(-50%, -50%);
        background: var(--bg-card);
        padding: 40px;
        border-radius: 20px;
        box-shadow: 0 20px 60px rgba(0,0,0,0.5);
        z-index: 1000;
        text-align: center;
        display: none;
        border: 1px solid var(--border-color);
    }
    
    body.dark-mode .success-animation {
        border: 1px solid var(--gold-solid);
    }

    .success-animation.show {
        display: block;
        animation: popIn 0.5s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    }

    .checkmark {
        width: 80px; height: 80px;
        border-radius: 50%;
        display: block;
        stroke-width: 3;
        stroke: #4ade80; /* Keep Green for success */
        stroke-miterlimit: 10;
        margin: 0 auto 20px;
        box-shadow: inset 0px 0px 0px #4ade80;
        animation: fill .4s ease-in-out .4s forwards, scale .3s ease-in-out .9s both;
    }

    .checkmark-circle {
        stroke-dasharray: 166;
        stroke-dashoffset: 166;
        stroke-width: 3;
        stroke-miterlimit: 10;
        stroke: #4ade80;
        fill: none;
        animation: stroke 0.6s cubic-bezier(0.65, 0, 0.45, 1) forwards;
    }

    .checkmark-check {
        transform-origin: 50% 50%;
        stroke-dasharray: 48;
        stroke-dashoffset: 48;
        animation: stroke 0.3s cubic-bezier(0.65, 0, 0.45, 1) 0.8s forwards;
    }

    @keyframes stroke { 100% { stroke-dashoffset: 0; } }
    @keyframes scale { 0%, 100% { transform: none; } 50% { transform: scale3d(1.1, 1.1, 1); } }
    @keyframes fill { 100% { box-shadow: inset 0px 0px 0px 30px #4ade80; } }
    @keyframes fadeInDown { from { opacity: 0; transform: translateY(-30px); } to { opacity: 1; transform: translateY(0); } }
    @keyframes fadeInUp { from { opacity: 0; transform: translateY(30px); } to { opacity: 1; transform: translateY(0); } }
    @keyframes popIn { from { opacity: 0; transform: translate(-50%, -50%) scale(0.5); } to { opacity: 1; transform: translate(-50%, -50%) scale(1); } }

    /* =========================
       9. RESPONSIVE QUERIES
       ========================= */
    @media (max-width: 768px) {
        .container { margin: 20px auto; padding: 0 15px; }
        .profile-card { padding: 30px 20px; border-radius: 20px; }
        .form-grid { grid-template-columns: 1fr; gap: 20px; }
        .button-group { flex-direction: column-reverse; }
        .btn { width: 100%; }
        .page-header h1 { font-size: 26px; }
        .avatar { width: 120px; height: 120px; font-size: 48px; }
    }

    @media (max-width: 480px) {
        .page-header h1 { font-size: 24px; }
        .profile-card { padding: 25px 15px; }
        .avatar { width: 100px; height: 100px; font-size: 40px; }
        .avatar-name { font-size: 20px; }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="page-header">
      <h1>‚ú® Edit Your Profile</h1>
      <p>Update your personal information and preferences</p>
    </div>

    <div class="profile-card">
      <form id="profileForm" enctype="multipart/form-data">
        <div class="avatar-section">
          <div class="avatar-wrapper">
            <div class="avatar" id="avatarPreview" onclick="document.getElementById('profilePicture').click()">
              <% if (user.image) { %>
                <img src="<%= user.image %>" alt="Profile" />
              <% } else { %>
                <div class="avatar-placeholder"><%= user.name.charAt(0).toUpperCase() %></div>
              <% } %>

              <div class="avatar-overlay">
                <div class="avatar-overlay-text">Click to<br />Change Photo</div>
              </div>
            </div>
            <div class="camera-icon" onclick="document.getElementById('profilePicture').click()">üì∑</div>
          </div>
          <input type="file" id="profilePicture" name="image" accept="image/*" />
          <div class="avatar-name"><%= user.name %></div>
          <div class="avatar-email"><%= user.email %></div>
        </div>

        <div class="form-section">
          <h3 class="section-title">Personal Information</h3>
          <div class="form-grid">
            <div class="form-group">
              <label class="form-label">
                <span class="icon">üë§</span> Full Name
              </label>
              <input type="text" name="name" class="form-input" value="<%= user.name %>" placeholder="Enter your full name" required />
            </div>

            <div class="form-group">
              <label class="form-label">
                <span class="icon">üì±</span> Phone Number
              </label>
              <input type="tel" name="phone" class="form-input" value="<%= user.phone || '' %>" placeholder="Enter phone number" />
            </div>

            <div class="form-group full-width">
              <label class="form-label">
                <span class="icon">‚úâÔ∏è</span> Email Address
              </label>
              <input type="email" name="email" class="form-input" value="<%= user.email %>" disabled />
            </div>
          </div>
        </div>

        <div class="button-group">
          <button type="button" class="btn btn-secondary" onclick="window.location.href='/profile'">
            ‚Üê Cancel
          </button>
          <button type="submit" class="btn btn-primary">üíæ Save Changes</button>
        </div>
      </form>
    </div>
  </div>

  <div class="success-animation" id="successAnimation">
    <svg class="checkmark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52">
      <circle class="checkmark-circle" cx="26" cy="26" r="25" fill="none" />
      <path class="checkmark-check" fill="none" d="M14.1 27.2l7.1 7.2 16.7-16.8" />
    </svg>
    <h3 style="color: var(--text-primary); font-size: 24px; margin-bottom: 10px;">Profile Updated!</h3>
    <p style="color: var(--text-secondary);">Your changes have been saved successfully.</p>
  </div>

  <script>
    // Profile Picture Preview
    document.getElementById("profilePicture").addEventListener("change", function (e) {
      const file = e.target.files[0];
      if (!file) return;

      if (!["image/jpeg", "image/png", "image/jpg"].includes(file.type)) {
        Swal.fire("Error", "Only JPG, JPEG, PNG allowed", "error");
        return;
      }

      if (file.size > 2 * 1024 * 1024) {
        Swal.fire("Error", "File too large. Max 2MB", "error");
        return;
      }

      const reader = new FileReader();
      reader.onload = function (event) {
        const avatarPreview = document.getElementById("avatarPreview");
        avatarPreview.innerHTML = `
          <img src="${event.target.result}" alt="Profile" />
          <div class="avatar-overlay">
            <div class="avatar-overlay-text">Click to<br />Change Photo</div>
          </div>
        `;
      };
      reader.readAsDataURL(file);
    });

    // Form Submit (AJAX)
    document.getElementById("profileForm").addEventListener("submit", async (e) => {
      e.preventDefault();
      const formData = new FormData(e.target);
      
      try {
        const res = await fetch("/update-profile", {
          method: "POST",
          body: formData,
        });

        const data = await res.json();
        if (data.success) {
          const successAnimation = document.getElementById("successAnimation");
          successAnimation.classList.add("show");
          setTimeout(() => {
            successAnimation.classList.remove("show");
            window.location.href = "/profile";
          }, 2000);
        } else {
          Swal.fire("Error", data.message || "Something went wrong!", "error");
        }
      } catch (err) {
        Swal.fire("Error", "Failed to update profile", "error");
      }
    });
  </script>
</body>

<%- include("../partials/user/footer.ejs") %>
</html>