<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Forgot Password - Sentique</title>

        <style>
        /* --- Dark/Light Mode Variables for Content --- */
        :root {
           
            --card-bg: #ffffff;
            --input-bg: #f9fafb;
            --input-border: #d1d5db;
            --subtitle-color: #6b7280;
            --btn-shadow: rgba(37, 99, 235, 0.2);
        }

        body.dark-mode {
            --card-bg: #1a1a1a;
            --input-bg: #252525;
            --input-border: #333333;
            --subtitle-color: #a0a0a0;
            --btn-shadow: rgba(0, 0, 0, 0.4);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

      
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--bg-body) !important;
            color: var(--text-main) !important;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        /* Main container alignment */
        .main-content {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 40px 20px;
        }

        /* Central Card - Uses Header Shadows and local Dark Mode Logic */
        .forgot-password-container {
            background-color: var(--card-bg);
            border-radius: 16px;
            box-shadow: var(--shadow);
            padding: 50px 40px;
            width: 100%;
            max-width: 450px;
            text-align: center;
            border: 1px solid var(--border-color);
            transition: all 0.3s ease;
        }

        /* Logo Icon with automatic Dark Mode inversion */
        .forgot-password-icon {
            width: 80px;
            height: 80px;
            margin: 0 auto 30px;
            background: linear-gradient(135deg, #1f2937, #374151);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

        .forgot-password-icon img {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            object-fit: contain;
            filter: var(--logo-filter);
            transition: filter 0.3s ease;
        }

        /* Typography */
        .forgot-password-title {
            color: var(--text-main);
            font-size: 28px;
            font-weight: 700;
            margin-bottom: 15px;
        }

        .forgot-password-subtitle {
            color: var(--subtitle-color);
            font-size: 16px;
            line-height: 1.6;
            margin-bottom: 40px;
        }

        /* Form Controls */
        .form-group {
            margin-bottom: 25px;
            text-align: left;
        }

        .form-label {
            display: block;
            color: var(--text-main);
            font-size: 14px;
            font-weight: 600;
            margin-bottom: 8px;
        }

        .form-input {
            width: 100%;
            padding: 16px 20px;
            border: 2px solid var(--input-border);
            border-radius: 12px;
            font-size: 16px;
            transition: all 0.3s ease;
            background-color: var(--input-bg);
            color: var(--text-main);
        }

        .form-input:focus {
            outline: none;
            border-color: #2563eb;
            background-color: var(--card-bg);
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
            transform: translateY(-2px);
        }

        /* Primary Button */
        .reset-button {
            width: 100%;
            padding: 16px 20px;
            background: linear-gradient(135deg, #2563eb, #1d4ed8);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px var(--btn-shadow);
            margin-bottom: 25px;
        }

        .reset-button:hover {
            background: linear-gradient(135deg, #1d4ed8, #1e3a8a);
            transform: translateY(-2px);
            box-shadow: 0 8px 25px var(--btn-shadow);
        }

        .reset-button:active {
            transform: translateY(0);
        }

        /* Navigation Link */
        .back-to-login {
            color: #2563eb;
            text-decoration: none;
            font-size: 14px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .back-to-login:hover {
            color: #1d4ed8;
            text-decoration: underline;
        }

        /* Error Message Handling */
        .error-message {
            background: #fef2f2;
            color: #991b1b;
            padding: 16px 20px;
            border-radius: 12px;
            margin-bottom: 25px;
            border: 1px solid #fecaca;
            display: none;
            font-size: 14px;
            text-align: left;
        }

        body.dark-mode .error-message {
            background: #451a1a;
            color: #fecaca;
            border: 1px solid #991b1b;
        }

       
        
        /* Tablets and smaller laptops */
        @media (max-width: 768px) {
            .forgot-password-container {
                padding: 40px 30px;
                margin: 0 20px;
            }
            .forgot-password-title {
                font-size: 24px;
            }
        }

        /* Mobile Phones */
        @media (max-width: 480px) {
            .main-content {
                padding: 20px 10px;
            }
            .forgot-password-container {
                padding: 30px 20px;
                border-radius: 12px;
            }
            .forgot-password-icon {
                width: 60px;
                height: 60px;
                margin-bottom: 20px;
            }
            .forgot-password-icon img {
                width: 60px;
                height: 60px;
            }
            .forgot-password-subtitle {
                font-size: 14px;
                margin-bottom: 30px;
            }
            .form-input {
                padding: 14px 16px;
                font-size: 15px;
            }
            .reset-button {
                padding: 14px;
            }
        }

        /* For very small screens / height issues */
        @media (max-height: 600px) {
            .main-content {
                align-items: flex-start;
            }
        }
    </style>
    </head>
    <body>

        <div class="main-content">
            <div class="forgot-password-container">

                <div class="forgot-password-icon">
                    <img src="/photos/zodiac perfume/brand logo white.png"
                        alt="Sentique Logo">
                </div>

                <h1 class="forgot-password-title">Forgot Password?</h1>
                <p class="forgot-password-subtitle">
                    No worries! Enter your email address below and we'll send
                    you a verification code to reset your password.
                </p>

                <div class="error-message" id="errorMessage"></div>

                <form id="forgotPasswordForm" method="post"
                    action="/forgot-password-valid">
                    <div class="form-group">
                        <label for="email" class="form-label">Email
                            Address</label>
                        <input
                            type="email"
                            id="email"
                            name="email"
                            class="form-input"
                            placeholder="Enter your email address"
                            required>
                    </div>
                    <button type="submit" class="reset-button">Verify
                        Email</button>
                </form>

                <a href="/login" class="back-to-login">‚Üê Back to Login</a>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
        const form = document.getElementById('forgotPasswordForm');
        const emailInput = document.getElementById('email');
        const errorMessage = document.getElementById('errorMessage');

        form.addEventListener('submit', async function(e) {
            e.preventDefault();
            const email = emailInput.value.trim();

            errorMessage.style.display = 'none';
            errorMessage.textContent = '';

            if (!email) {
                errorMessage.textContent = 'Email cannot be empty.';
                errorMessage.style.display = 'block';
                return;
            }

            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailRegex.test(email)) {
                errorMessage.textContent = 'Please enter a valid email address.';
                errorMessage.style.display = 'block';
                return;
            }

            try {
                // Show a loading state on the button
                const btn = form.querySelector('.reset-button');
                const originalText = btn.textContent;
                btn.textContent = 'Checking...';
                btn.disabled = true;

                const response = await fetch('/forgot-password-valid', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email })
                });

                const result = await response.json();

                if (result.success) {
                    sessionStorage.setItem('verificationEmail', email);

                    Swal.fire({
                        icon: 'success',
                        title: 'OTP Sent!',
                        text: 'A verification code has been sent to your email.',
                        confirmButtonText: 'OK',
                        confirmButtonColor: '#2563eb',
                        allowOutsideClick: false
                    }).then(() => {
                        window.location.href = '/forgotPassword-otp';
                    });
                } else {
                    btn.textContent = originalText;
                    btn.disabled = false;
                    Swal.fire({
                        icon: 'error',
                        title: 'Failed!',
                        text: result.message || 'This email is not registered.',
                        confirmButtonColor: '#ef4444'
                    });
                }

            } catch (err) {
                console.error(err);
                setLoading(false);
                Swal.fire({
                    icon: 'error',
                    title: 'Server Error',
                    text: 'Something went wrong. Please try again later.',
                    confirmButtonColor: '#ef4444'
                });
            }
        });
    </script>

    </body>
</html>

